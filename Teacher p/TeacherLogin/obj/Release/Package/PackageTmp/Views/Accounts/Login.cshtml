
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*@Styles.Render("~/AdminLTE/plugins/font-awesome/css")
        @Styles.Render("~/AdminLTE/plugins/ionicons/css")
        @Styles.Render("~/AdminLTE/bootstrap/css")
        @Styles.Render("~/AdminLTE/dist/css")
        @Styles.Render("~/AdminLTE/dist/css/skins")
        @Styles.Render("~/AdminLTE/plugins/select2/css")*@
    <title>SCHOOL ERP | Log in</title>
    @*<link rel="icon" type="image/ico" href="images/logo/logo.png" />*@


    <link href="~/teacherloginFiles/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/teacherloginFiles/dynamic/css/academic-erp-theme.css" rel="stylesheet" />

    <link href="~/teacherloginFiles/dynamic/css/academic.css" rel="stylesheet" />


</head>

<body>
    <div class="login-page">
        <div class="container h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-lg-8 mx-auto">
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="col-md-5 left-box rounded-left">
                                <div class="left-box-img-wrap">
                                    <div class="text-center">
                                        <img class="img-fluid col-md-8" src="~/teacherloginFiles/Dynamic/Images/logo.png" alt="logo">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="card-body login-card-body">
                                    <h4 class="">Teacher Login</h4>
                                    <p class="login-box-msg">Welcome back, please login to your account.</p>
                                    <p style="color:red">@ViewBag.ErrorMessage</p>
                                    <form action="~/Accounts/Login" method="post" role="form">
                                        <div class="input-group form-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            </div>
                                            <input type="text" name="username" class="form-control" placeholder="Username" />
                                        </div>
                                        <div class="input-group form-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                            </div>
                                            <input type="password" class="form-control" name="password" placeholder="Password" />
                                        </div>
                                        <div class="row">
                                            <div class="col-8">
                                                <div class="custom-control custom-checkbox mt-1">
                                                    <input class="custom-control-input" type="checkbox" id="customCheckbox1" value="option1">
                                                    <label for="customCheckbox1" class="custom-control-label" asp-for="IsUserNeverExpire">Remember Me</label>
                                                </div>
                                            </div>
                                            <!-- /.col -->
                                            <div class="col-4">
                                                <button type="submit" class="btn btn-secondary btn-block">Sign In</button>
                                            </div>
                                            <!-- /.col -->
                                        </div>
                                    </form>

                                    <p class="forgot-password">
                                        <a href="forgot-password.html">
                                            <span class="fas fa-lock mr-2"></span> forgot
                                            your password?
                                        </a>
                                    </p>
                                </div>
                                <!-- /.login-card-body -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /.login-box -->

</body>

</html>

