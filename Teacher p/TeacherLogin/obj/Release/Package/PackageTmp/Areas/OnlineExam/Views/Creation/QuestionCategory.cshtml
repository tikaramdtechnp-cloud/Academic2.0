
@{
    ViewBag.Title = "QuestionCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AngularJs/Creation/QuestionCategory.js"></script>

<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="QuestionCategoryController" ng-init="LoadData()">
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid">
                <section class="iframe-content-starts-here">
                    <div class="tab-content" id="table-listing">
                        <!-- Second Tab Content -->
                        <div class="card p-2">
                            <header class="row mb-2">
                                <div class="col-md-7">
                                    <div class="clearfix">
                                        <form class="form-inline">
                                            <div class="input-group input-group-sm mr-sm-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text cstm">Show</span>
                                                </div>
                                                <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                                <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.QuestionCategory">
                                                    <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.QuestionCategory">{{pp.text}}</option>
                                                </select>
                                                <div class="input-group-append">
                                                    <span class="input-group-text bg-white"><small>entries</small></span>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm table-search-filed">
                                                <input class="form-control form-control-navbar"
                                                       type="search" placeholder="Search" ng-model="searchData.QuestionCategory"
                                                       aria-label="Search">
                                                <div class="input-group-append">
                                                    <button class="btn btn-default border-left-0"
                                                            type="submit">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!-- end col-md-8 -->
                                <div class="col-md-5 text-right">
                                    <div class="dropdown dnld-file"
                                         data-toggle="tooltip"
                                         data-placement="top"
                                         title="Download File">
                                        <button class="btn btn-secondary btn-light btn-sm dropdown-toggle"
                                                type="button"
                                                id="dropdownMenuButton"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                            <i class="fas fa-download"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right"
                                             aria-labelledby="dropdownMenuButton">
                                            <span class="dropdown-item">Choose an option:</span>
                                            <a class="dropdown-item" ng-click="exportToExcel('#QuestionCategory')"><img src="~/teacherloginFiles/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                            <a class="dropdown-item" ng-click="ExportCSV('#QuestionCategory')"><img src="~/teacherloginFiles/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                            <a class="dropdown-item" ng-click="Exportpdf('QuestionCategory')"><img src="~/teacherloginFiles/dynamic/images/flaticons/pdf.png" class="img-fluid exports-icon" alt="Excel image"> PDF</a>
                                            <a class="dropdown-item" ng-click="ExportWord('#QuestionCategory')"><img src="~/teacherloginFiles/dynamic/images/flaticons/word.png" class="img-fluid exports-icon" alt="Excel image"> Word</a>

                                            <a class="dropdown-item" href="#">
                                                <img src="~/teacherloginFiles/dynamic/images/flaticons/gmail.png"
                                                     class="img-fluid exports-icon"
                                                     alt="Excel image" />
                                                Mail
                                            </a>
                                        </div>
                                    </div>
                                    <a href="#"
                                       class="btn btn-secondary btn-light btn-sm"
                                       data-toggle="tooltip"
                                       data-placement="top"
                                       title="Print">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    <button type="button" ng-click="ClearQuestionCategory()" class="btn btn-sm btn-success" id="add-exam-setup" style="min-width: 90px;"><i class="fas fa-plus w-t"></i> Add Question Category</button>
                                </div>
                            </header>
                            <div ng-init="GetAllQuestionCategoryList()">
                                <div class="table-scroll-x-y sales-main-table table-scroll"  style="height: calc(100vh - 16rem) ;overflow-x:auto">
                                    <table id="QuestionCategory"
                                           class="main-table table table-sm table-bordered bg-white table-head-fixed">
                                        <thead>
                                            <tr>
                                                <th style="width: 70px">S.No.</th>
                                                <th style="width: 80px">Order No.</th>
                                                <th style="width: 160px">Exam Model</th>
                                                <th style="width: 180px">Category Name</th>
                                                <th style="width: 350px">Description</th>
                                                <th style="width: 80px">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="cl in QuestionCategoryList | filter:searchData.QuestionCategory | itemsPerPage: perPage.QuestionCategory" current-page="currentPages.QuestionCategory" pagination-id="QuestionCategoryPagination">
                                                <td>{{$index+1}}</td>
                                                <td>{{cl.OrderNo}}</td>
                                                <td>

                                                    <f ng-show="cl.ExamModalType==1">
                                                        Subjective
                                                    </f>
                                                    <f ng-show="cl.ExamModalType==2">
                                                        Objective
                                                    </f>

                                                </td>
                                                <td>{{cl.CategoryName}}</td>
                                                <td>{{cl.Description}}</td>
                                                <td>
                                                    <a class="p-1" href="#" ng-click="GetQuestionCategoryById(cl)">
                                                        <i class="fas fa-edit text-info"></i>
                                                    </a>
                                                    <a class="p-1" href="#" ng-click="DelQuestionCategoryById(cl)">
                                                        <i class="fas fa-trash-alt text-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!-- table end -->
                                </div>
                            </div>
                            <footer class="row align-items-center">
                                <div class="col-md-12">
                                    <dir-pagination-controls pagination-id="QuestionCategoryPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)"template-url="/Scripts/dirPagination.tpl.html"></dir-pagination-controls>
                                </div>
                            </footer>
                        </div>
                    </div>
                    <div id="exam-setup-form">
                        <div class="card p-2">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">                                        
                                        <label for="">Exam Model</label>
                                        <select class="form-control form-control-sm " id="ExamModalType" ng-value="newQuestionCategory.ExamModalType" ng-model="newQuestionCategory.ExamModalType">
                                            <option value="1">Subjective</option>
                                            <option value="2">Objective</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        
                                        <label for="">Numbering Method</label>
                                        <select class="form-control form-control-sm " id="NumberingMethod" ng-value="newQuestionCategory.NumberingMethod" ng-model="newQuestionCategory.NumberingMethod">
                                            <option value="1">Number</option>
                                            <option value="2">Alpha</option>
                                            <option value="3">Roman</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="">Order No.</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newQuestionCategory.OrderNo"/>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="">Category Name</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newQuestionCategory.CategoryName"/>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label for="">Description</label>
                                    <textarea class="form-control form-control-sm" rows="1" placeholder=""ng-model="newQuestionCategory.Description"></textarea>
                                </div>
                            </div>
                            <div class="time-label">
                                <span class="d-block border-0 p-3 text-center">
                                    <button type="button" class="btn btn-sm btn-info" id="back-btn" data-dismiss="modal" style="min-width: 90px;">
                                        Back to
                                        List
                                    </button>
                                    <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearQuestionCategory()">Reset</button>
                                    <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateQuestionCategory()">{{newQuestionCategory.Mode}}</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- /.row -->
            </div>
            <!--/. container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</div>