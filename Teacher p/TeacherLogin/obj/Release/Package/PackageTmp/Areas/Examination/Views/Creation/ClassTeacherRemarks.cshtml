
@{
    ViewBag.Title = "OnlineClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AngularJs/Creation/MarksEntry.js"></script>
@*<script src="~/AngularJs/Creation/OnlineClass.js?dt=@(DateTime.Now.Ticks)"></script>*@
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="ExamCommentController" ng-init="LoadData()">
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid">
                <section class="iframe-content-starts-here">
                    <div id="listing part" class="card p-2">
                        <div class="row">

                            <!-- /.form-group -->

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="">Class/Section</label>
                                    <select class="form-control form-control-sm select2" id="cboClassId" ng-model="SubjectME.SelectClassSection" ng-change="GetStudentForSubjectME()">
                                        <option ng-repeat="ct in SectionClassColl  track by $index" ng-value="{{ct}}">
                                            {{ct.text}}
                                        </option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="">Exam Type</label>
                                    <select class="form-control form-control-sm " style="width:100%" ng-model="SubjectME.ExamTypeId" ng-change="GetStudentForSubjectME()">
                                        <option ng-value="0">-- Select ExamType --</option>
                                        <option ng-value="{{cl.ExamTypeId}}" ng-repeat="cl in ExamTypeColl">{{cl.Name}}</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group d-flex mt-4">
                                    <label for="" style="min-width: 80px;">Full Marks</label>
                                    <p class="mb-0">: <b>{{SubjectME.StudentColl[0].FM}}</b></p>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group d-flex mt-4">
                                    <label for="" style="min-width: 80px;">Pass Marks</label>
                                    <p class="mb-0">:<b>{{SubjectME.StudentColl[0].PM}}</b></p>
                                </div>
                            </div>


                        </div>
                        <header class="row">
                            <div class="col-md-7">
                                <div class="clearfix">
                                    <form class="form-inline mb-2">
                                        
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar"
                                                   type="search" placeholder="Search"
                                                   aria-label="Search" ng-model="searchData.PastClass">
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0"
                                                        type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end col-md-8 -->
                            <div class="col-md-5 text-right">

                                <button type="button" class="btn btn-sm btn-default" id="back-btn" style="min-width: 90px;" ng-click="ClearSubjectME()">
                                    Reset
                                </button>

                                <button type="button" class="btn btn-sm btn-success" id="back-btn" style="min-width: 90px;" ng-click="SaveSubjectME()">
                                    Save
                                </button>

                            </div>
                        </header>

                        <div class="table-scroll-x-y sales-main-table table-scroll" @*style="height: calc(100vh - 17rem); overflow:auto"*@>
                            <table id="main-table-subAttendance" class="main-table table table-sm table-bordered bg-white">
                                <thead>
                                    <tr>
                                        <th class="cstm-sticky" style="z-index: 4; left:0; width: 70px" align="center">Roll No.</th>
                                        <th class="cstm-sticky" style="z-index: 4; left: 70px; width: 200px">Name</th>
                                        <th class="cstm-sticky" style="left: 270px; width: 120px; z-index:4"  align="center">Regd No.</th>
                                        <th style="width: 80px; z-index: 3">OM</th>
                                        <th style="width: 100px; z-index: 3">Percentage</th>
                                        <th style="width: 90px; z-index: 3">Result</th>
                                        <th style="width: 65px; z-index: 3">GPA</th>
                                        <th style="width: 150px; z-index: 3"  align="center">Total Fail Subject</th>
                                        <th style="width: 200px; z-index: 3">Comment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="st in SubjectME.StudentColl |  filter:searchData.PastClass">
                                        <td class="cstm-sticky" style="left:0; background-color:#fff;" align="center">{{st.RollNo}}</td>
                                        <td class="cstm-sticky" style="left:70px; background-color: #fff;">{{st.Name}}</td>
                                        <td class="cstm-sticky" style="left:270px; background-color: #fff;" align="center">{{st.RegNo}}</td>
                                        <td>{{st.ObtainMark}}</td>
                                        <td>{{st.ObtainPer}}%</td>
                                        <td>{{st.Result}}</td>
                                        <td>{{st.AVGGP}}</td>
                                        <td align="center">{{st.TotalFail}}</td>
                                        <td>
                                            <textarea class="form-control form-control-sm" rows="1" placeholder="" ng-model="st.TeacherComment"></textarea>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- table end -->

                    </div>
                 
                </section>
            </div>



        </section>
        <!-- /.content -->
    </div>

</div>
<script>
    $("#step1Content").load("yourpage.html");
</script>