@model Dynamic.BusinessEntity.Security.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/wwwroot/mislogin/css/login.css">

    <title>MIS School Software & E-Library | Login</title>

    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/wwwroot/plugins/fontawesome-free/css/all.min.css">
    <!-- <link rel="stylesheet" href="plugins/dropzone/min/dropzone.min.css"> -->
    <link rel="stylesheet" href="~/wwwroot/dynamic/css/themify-icons.css">
    <link rel="stylesheet" href="~/wwwroot/dynamic/font-flaticon/flaticon.css">
    <!-- Theme style -->
    <!-- <link rel="stylesheet" href="dist/css/adminlte.min.css"> -->
    <link rel="stylesheet" href="~/wwwroot/dynamic/css/academic-erp-theme.css">

    <link rel="stylesheet" href="~/wwwroot/dynamic/css/academic.css">
    <script src="~/wwwroot/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/printThis/1.15.0/printThis.min.js"></script>

    @{
        var urlHelper = new UrlHelper(Html.ViewContext.RequestContext);
        var baseurl = urlHelper.Content("~");
    }

    <script>
        var base_url = "@baseurl";
    </script>
</head>
<body>
    <div class="container-fluid bg-wrapper">
        <div class="container login-wrapper">
            <div class="row block1 d-flex flex-row align-items-center p-0">
                <div class="d-xl-block d-none col-xl-3  imgCol ">
                    <div class="imgBox  d-flex justify-content-center align-items-center">
                        <img src="~/wwwroot/mislogin/images/library school map books.png" alt="img">
                    </div>

                </div>

                <div class="ms-auto  col-xl-8 col-12 formCol">
                    <div class="card-body p-0 row">
                        <div class="loginLogoBox col-lg-5 col-12">
                            <h4 class="head-tag">MIS School software & E-Library</h4>
                            <img src="~/wwwroot/mislogin/images/1 (1).png" class="img-1" alt="img">
                            <img src="~/wwwroot/mislogin/images/logo.png" class="img-2" alt="img">
                            <div class="btn-group mt-2 d-flex justify-content-between">
                                <button class="btn-all"> <a href="~/Teacher">Teacher Login</a> </button>
                                <button class="btn-all"> <a href="~/Student">Student Login</a> </button>
                            </div>
                        </div>
                        <div class="col-lg-7 col-12 loginFormBox">
                            <form method="post" asp-controller="Home" asp-action="Login" asp-route-returnurl="@Model.ResponseMSG">
                                <div class="form-group">
                                    <h5 class="subhead-tag">Welcome Back, <br /> Please Login To Your Account</h5>
                                </div>
                                <div class="my-2 form-group">
                                    <label for="" class="label-tag font-14-400 tx-col-1 ">Username</label>
                                    <div class="input-group mb-3">
                                        @Html.TextBoxFor(p1 => p1.UserName, new { @class = "form-control form-control-sm", @placeholder = "user name", @id = "txtUserName", @required = true })
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-envelope"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="my-2 form-group">
                                    <label for="" class="label-tag font-14-400 tx-col-1 ">Password</label>
                                    <div class="input-group mb-3">
                                        @Html.PasswordFor(p1 => p1.Password, new { @class = "form-control form-control-sm", @placeholder = "password", @id = "txtPassword", @required = true })
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="my-2 form-group">
                                    @*<label for="" class="label-tag font-14-400 tx-col-1 ">Password</label>*@
                                    <div class="input-group mb-3">
                                        @Html.DropDownListFor(p1 => p1.DBName, new SelectList((SelectList)@ViewBag.CompanyList, "Value", "Text"), new { @class = "form-control form-control-sm", @required = true })
                                        @*<div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>*@
                                    </div>
                                </div>
                                <div class="my-4 form-group col-md-12 col-12">
                                    <label class="check-wrapper">
                                        Keep me logged in
                                        <input type="checkbox" checked="checked">
                                        <span class="ck-checkmark"></span>
                                    </label>
                                </div>
                                <div class="my-2 form-group col-5">
                                    <a href="#" class="font-14-400 tx-col-1 text-capitalize">forget password?</a>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn-all">Login</button>
                                    <a class="btn-all float-right" href="~/Home/Registration">Apply Online Registration</a>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>