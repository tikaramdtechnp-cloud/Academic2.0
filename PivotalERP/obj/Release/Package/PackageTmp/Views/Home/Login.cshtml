@model Dynamic.BusinessEntity.Security.User

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AcademyErp 2.0</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/wwwroot/plugins/fontawesome-free/css/all.min.css">
    <!-- <link rel="stylesheet" href="plugins/dropzone/min/dropzone.min.css"> -->
    <link rel="stylesheet" href="~/wwwroot/dynamic/css/themify-icons.css">
    <link rel="stylesheet" href="~/wwwroot/dynamic/font-flaticon/flaticon.css">
    <!-- Theme style -->
    <!-- <link rel="stylesheet" href="dist/css/adminlte.min.css"> -->
    <link rel="stylesheet" href="~/wwwroot/dynamic/css/academic-erp-theme.css">

    <link rel="stylesheet" href="~/wwwroot/dynamic/css/academic.css">
    <script src="~/wwwroot/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/printThis/1.15.0/printThis.min.js"></script>

    @{
        var urlHelper = new UrlHelper(Html.ViewContext.RequestContext);
        var baseurl = urlHelper.Content("~");
    }

    <script>
        var base_url = "@baseurl";
    </script>
</head>

<body @*onload="LoadURL()"*@>
    <div class="login-page">
        <div class="container h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-lg-8 mx-auto">
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="col-md-5 left-box rounded-left">
                                <div class="left-box-img-wrap">
                                    <span class="d-block border-0 p-3 text-center">
                                        <label><b>Click here</b></label><br />
                                        <a href="~/Home/Registration" class="btn btn-sm btn-success" style="min-width: 100px; font-size:16px;">Apply Online Registration</a>
                                        <!--Button Added for scholarship-->
                                        @*<a href="~/Scholarship/ApplyScholarship" class="btn btn-sm btn-default mt-2" style="min-width: 100px; font-size:16px;">Apply Scholarship </a>
                                        <a href="~/Scholarship/ScholarshipVerify" class="btn btn-sm btn-default mt-2" style="min-width: 100px; font-size:16px;">Verify Scholarship </a>*@
                                        <!--Ends-->
                                    </span>
                                    <div class="text-center">
                                        <img class="img-fluid col-md-8" src="~/wwwroot/dynamic/images/logo.png" alt="">
                                    </div>
                                    <span class="d-block border-0 p-3 text-center">
                                        <a href="~/Teacher" class="btn btn-sm btn-info" style="min-width: 100px; font-size:15px;">Teacher login</a>
                                        <a href="~/Student" class="btn btn-sm ml-2 text-white" style="min-width: 100px; font-size:15px;background-color:#c99e42;">Student Login</a>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="card-body login-card-body">
                                    <h4 class="">Login</h4>
                                    <p class="login-box-msg">Welcome back, please login to your account.</p>
                                    <p style="color:red">@Model.ResponseMSG</p>
                                    <form method="post" asp-controller="Home" asp-action="Login" asp-route-returnurl="@Model.ResponseMSG">
                                        <div class="input-group mb-3">
                                            @Html.TextBoxFor(p1 => p1.UserName, new { @class = "form-control", @placeholder = "username", @id = "txtUserName", @required = true })
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-envelope"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3">
                                            @Html.PasswordFor(p1 => p1.Password, new { @class = "form-control", @placeholder = "password", @id = "txtPassword", @required = true, value = Model.Password })
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>
                                        @*@if (Model.OTPRequired == true)
                                        {*@
                                            <div class="input-group mb-3">
                                                @Html.PasswordFor(p1 => p1.OTP, new { @class = "form-control", @placeholder = "Authentication Code", @id = "txtOTP" })
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <a class="fas fa-envelope" @*href="@Html.Action("GenerateOTP", "Home", new { beData = Model });"*@></a>
                                                    </div>
                                                </div>
                                            </div>
                                        @*}*@

                                        <div class="input-group mb-3">
                                            @Html.DropDownListFor(p1 => p1.DBName, new SelectList((SelectList)@ViewBag.CompanyList, "Value", "Text"), new { @class = "form-control", @required = true })
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-f"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-8">
                                                <div class="custom-control custom-checkbox mt-1">
                                                    <input class="custom-control-input" type="checkbox" id="customCheckbox1" value="option1">
                                                    <label for="customCheckbox1" class="custom-control-label" asp-for="IsUserNeverExpire">Remember Me</label>
                                                </div>
                                            </div>
                                            <!-- /.col -->
                                            <div class="col-4">
                                                <button type="submit" class="btn btn-secondary btn-block">Sign In</button>
                                            </div>
                                            <!-- /.col -->
                                        </div>
                                    </form>

                                    <p class="forgot-password">
                                        <a href="~/Home/ForgotPwd">
                                            <span class="fas fa-lock mr-2"></span> forgot
                                            your password?
                                        </a>
                                    </p>
                                </div>
                                <!-- /.login-card-body -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /.login-box -->

</body>

</html>

