@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/jslib/scholarship/ExamCenterMapping.js"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="ExamCenterMappingController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content" id="complain-listing">
                    <!-- Second Tab Content -->

                    <div class="row" style="margin-top: -10px;">

                        <div class="col-md-2">
                            <div class="form-group mb-1">
                                <label>From Roll No</label>
                                <input type="text" class="form-control form-control-sm" ng-model="newDet.FromRollNo" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group mb-1">
                                <label>To Roll No</label>
                                <input type="text" class="form-control form-control-sm" ng-model="newDet.ToRollNo" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-1">
                                <label>Exam Center</label>
                                <select class="form-control form-control-sm select2" ng-model="newDet.ExamCenterId">
                                    <option ng-repeat="E in ExamCenterList| filter:notMapped" ng-value="E.ExamCenterId" ng-selected="newDet.ExamCenterId==E.ExamCenterId">{{E.Name}}</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <button class="btn btn-sm btn-success mt-4" ng-click="SaveUpdateExamCenterMapping()">Update</button>
                        </div>
                    </div>
                    <div class="card mb-1 py-1">
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll" style="max-height:calc(100vh - 13rem)!important">
                                <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th class="text-center" style="width: 50px">S.No.</th>
                                            <th style="width: 100px">From Roll No</th>
                                            <th style="width: 100px">To Roll No</th>
                                            <th style="width: 200px">Exam Center</th>
                                            <th style="width: 100px">Create By</th>
                                            <th style="width: 100px">Log Date Time</th>

                                            <th class="text-center" style="width: 50px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="cl in ExamCenterMappingList">
                                            <td class="text-center">{{$index+1}}</td>
                                            <td>{{cl.FromRollNo}}</td>
                                            <td>{{cl.ToRollNo}}</td>
                                            <td>{{cl.ExamCenterName}}</td>
                                            <td>{{cl.CreateBy}}</td>
                                            <td>{{cl.LogMiti}} , {{cl.LogDateTime|timeFormat}}</td>

                                            <td class="text-center">

                                                <a class="p-1" href="#" ng-click="DelExamCenterMappingById(cl,$index)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- table end -->
                            </div>
                        </div>

                    </div>
                </div>

            </section>



        </div>
        <!-- form area ends -->
    </section>
    <!-- /.row -->
</div>
