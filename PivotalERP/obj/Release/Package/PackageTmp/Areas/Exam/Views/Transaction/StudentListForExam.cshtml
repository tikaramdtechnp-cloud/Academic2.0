                                            <label>Exam</label>
                                            <select name="comment-group" id="" form="" class="form-control form-control-sm select2" ng-model="newReStudentList.ExamTypeId" ng-change="GetStudentListForReExam()">
                                                <option value="0" selected>Select Exam</option>
                                                <option ng-value="cl.ExamTypeId" ng-repeat="cl in ExamTypeList">{{cl.text}}</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Re-Exam</label>
                                            <select class="form-control form-control-sm select2" ng-model="newReStudentList.ReExamTypeId" ng-change="GetStudentListForReExam()">
                                                <option ng-value="0">**Select ReExamType**</option>
                                                <option ng-value="cl.id" ng-repeat="cl in ReExamTypeList | filter: { ExamTypeId: newReStudentList.ExamTypeId }:true" ng-selected="cl.id==newReStudentList.ReExamTypeId">{{cl.text}}</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Subject</label>
                                            <select name="comment-group" id="" form="" class="form-control form-control-sm select2" ng-model="newReStudentList.SubjectId" ng-change="GetStudentListForReExam()">
                                                <option value="0" selected>Select Subject</option>
                                                <option ng-value="cl.SubjectId" ng-repeat="cl in AllSubjectList">{{cl.Name}}-{{cl.Code}}</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <button type="button" class="btn btn-sm btn-success mt-4" style="min-width:70px" ng-click="GetStudentListForReExam()"><i class="fas fa-sync-alt mr-2"></i>Load</button>
