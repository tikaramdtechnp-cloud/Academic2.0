                                            <a href="#" class="btn btn-secondary btn-light btn-sm" data-toggle="tooltip" data-placement="top"
                                               title="Print" ng-click="PrintStudentListForExam()">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </header>
                                    <div class="card py-2 ">
                                        <div ui-grid="gridOptions"
                                             ui-grid-auto-resize
                                             ui-grid-resize-columns
                                             ui-grid-move-columns
                                             ui-grid-selection
                                             ui-grid-exporter
                                             ui-grid-pinning
                                             ui-grid-filtering
                                             ui-grid-save-state style="height: calc(100vh - 10rem);">

                                        </div>
                                    </div>
                                </div>
                                <!-- Student List for Exam Ends -->
                                <!-- ReStudent List for Exam Starts -->
                                <div class="tab-pane fade main-section" id="restudentlist" role="tabpanel"
                                     aria-labelledby="restudentlist-tab">
