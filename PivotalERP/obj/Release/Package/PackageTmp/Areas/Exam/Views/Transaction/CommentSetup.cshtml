
<script src="~/jslib/Exam/Transaction/CommentSetup.js?v=20251115"></script>

<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="CommentSetupController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:55px!important">

                <div id="comment-setup-section" class="card px-0" >
                    <header class="row">
                        <div class="col-md-7">
                            <div class="clearfix">
                                <form class="form-inline">
                                    <div class="input-group input-group-sm mr-sm-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text cstm">Show</span>
                                        </div>

                                        <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.CommentSetup">
                                            <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.CommentSetup">{{pp.text}}</option>
                                        </select>
                                        <div class="input-group-append">
                                            <span class="input-group-text bg-white"><small>entries</small></span>
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm table-search-filed">
                                        <input class="form-control form-control-navbar"
                                               type="search"
                                               placeholder="Search"
                                               aria-label="Search" ng-model="searchData.CommentSetup" />
                                        <div class="input-group-append">
                                            <button class="btn btn-default border-left-0"
                                                    type="submit">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- end col-md-8 -->
                        <div class="col-md-5 text-right">
                            <div class="dropdown dnld-file"
                                 data-toggle="tooltip"
                                 data-placement="top"
                                 title="Download File">
                                <button class="btn btn-secondary btn-light btn-sm dropdown-toggle"
                                        type="button"
                                        id="dropdownMenuButton"
                                        data-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    <i class="fas fa-download"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right"
                                     aria-labelledby="dropdownMenuButton">
                                    <span class="dropdown-item">Choose an option:</span>
                                    <a class="dropdown-item" href="#"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                    <a class="dropdown-item" href="#"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                    
                                </div>
                            </div>
                            <a href="#"
                               class="btn btn-secondary btn-light btn-sm"
                               data-toggle="tooltip"
                               data-placement="bottom"
                               title="Print">
                                <i class="fas fa-print"></i>
                            </a>
                            <button type="button"
                                    class="btn btn-sm btn-success"
                                    id="add-comment-setup"
                                    style="min-width: 90px">
                                <i class="fas fa-plus w-t"></i> Add Comment Setup
                            </button>
                        </div>
                    </header>
                    <div>
                        <div class="table-scroll-x-y sales-main-table table-scroll">
                            <table id="main-table"
                                   class="main-table table table-sm table-bordered bg-white">
                                <thead>
                                    <tr class="text-nowrap">
                                        <th style="width: 180px">Wise</th>
                                        <th style="width: 100px">For</th>
                                        <th style="width: 100px">Minimum Value</th>
                                        <th style="width: 100px">Maximum Value</th>
                                        <th style="width: 80px">Grade</th>
                                        <th style="width: 300px">Comments</th>
                                        <th style="width: 80px">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr dir-paginate="cs in CommentSetupList | filter:searchData.CommentSetup | itemsPerPage: perPage.CommentSetup" current-page="currentPages.CommentSetup" pagination-id="commentsetupPagination">
                                        <td>{{cs.Wise | commentWise}}</td>
                                        <td>{{cs.ForStudent | commentFor}}</td>
                                        <td>{{cs.MinVal}}</td>
                                        <td>{{cs.MaxVal}}</td>
                                        <td>{{cs.Grade}}</td>
                                        <td>
                                            <div compile class="card-body p-0" ng-bind-html="cs.Comment | unsafe">
                                            </div>
                                        </td>
                                        <td>
                                            <a class="p-1" href="#" ng-click="GetCommentSetupById(cs)">
                                                <i class="fas fa-edit text-info"></i>
                                            </a>
                                            <a class="p-1" href="#" ng-click="DelCommentSetupById(cs)">
                                                <i class="fas fa-trash-alt text-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- table end -->
                    </div>
                    <footer class="row align-items-center">
                        <div class="col-md-12">
                            <dir-pagination-controls pagination-id="commentsetupPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                            </dir-pagination-controls>
                        </div>
                    </footer>
                </div>
                <!--Grade form starts -->
                <div id="comment-setup-form" class="card">
                    <div class="card-body px-0">
                        <div class="row">
                            <div class="col-12">
                                <form action="">
                                    <div class="row">
                                        <div class="col-sm-3 col-lg-3 col-md-3">
                                            <div class="form-group">
                                                <label>Wise</label>
                                                <select class="form-control form-control-sm select2"
                                                        style="width: 100%" ng-model="newCommentSetup.Wise">
                                                    <option ng-value="{{wc.id}}" ng-selected="newCommentSetup.Wise==ws.id" ng-repeat="wc in WiseColl">
                                                        {{wc.text}}
                                                    </option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-sm-3 col-lg-3 col-md-3" ng-show="newCommentSetup.Wise==1 || newCommentSetup.Wise==4">
                                            <div class="form-group">
                                                <label>For</label>
                                                <select class="form-control form-control-sm select2"
                                                        style="width: 100%" ng-model="newCommentSetup.ForStudent">
                                                    <option ng-value="1" ng-selected="newCommentSetup.ForStudent==1">Pass</option>
                                                    <option ng-value="2" ng-selected="newCommentSetup.ForStudent==2">Fail</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-3 col-lg-3 col-md-3" ng-show="newCommentSetup.Wise==5">
                                            <div class="form-group">
                                                <label for="">Grade</label>
                                                <input type="text"
                                                       class="form-control form-control-sm" ng-model="newCommentSetup.Grade" />
                                            </div>
                                        </div>
                                        <div class="col-sm-3 col-lg-3 col-md-3" ng-hide="newCommentSetup.Wise==4 || newCommentSetup.Wise==5">
                                            <div class="form-group">
                                                <label for="">Minimum Value</label>
                                                <input type="number"
                                                       class="form-control form-control-sm" ng-model="newCommentSetup.MinVal" />
                                            </div>
                                        </div>
                                        <div class="col-sm-3 col-lg-3 col-md-3" ng-hide="newCommentSetup.Wise==4 || newCommentSetup.Wise==5">
                                            <div class="form-group">
                                                <label for="">Maximum Value</label>
                                                <input type="number"
                                                       class="form-control form-control-sm" ng-model="newCommentSetup.MaxVal" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12 col-lg-12 col-md-12">
                                            <div class="form-group">
                                                <label for="">Comment</label>
                                                <textarea class="textarea"
                                                          placeholder="Place some text here"
                                                          style="
                                                                            width: 100%;
                                                                            height: 350px;
                                                                            font-size: 14px;
                                                                            line-height: 18px;
                                                                            border: 1px solid #dddddd;
                                                                            padding: 10px;
                                                                            " ng-model="newCommentSetup.Comment" html-editor>

                                                            </textarea>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="time-label">
                        <span class="d-block border-0 p-3 text-center">
                            <button type="button"
                                    class="btn btn-sm btn-info"
                                    id="back-comment-setup"
                                    style="min-width: 90px">
                                Back to List
                            </button>
                            <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearCommentSetup()">Reset</button>
                            <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateCommentSetup()">{{newCommentSetup.Mode}}</button>
                        </span>
                    </div>
                </div>

                <!-- /.card -->
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>






