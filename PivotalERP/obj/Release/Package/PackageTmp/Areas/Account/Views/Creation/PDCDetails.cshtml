<script src="~/jslib/account/creation/PDCDetails.js?v=20251115"></script>
<div class="hold-transition layout-navbar-fixed" ng-app="myApp" ng-controller="PDCDetails" ng-class="{waiting: loadingstatus=='running'}" ng-init="GetAllPDCDetails()" ng-cloak>
    <div class="container-fluid">
        <section class="iframe-content-starts-here"  style="padding-top:50px!important">
            <div class="tab-content">
                <div class="card-primary card-tabs">
                    <div class="card-header with-gradient-bg p-0 border-bottom-0">
                        <ul class="nav nav-tabs pt-1" id="custom-tabs-four-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true"> List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Post Dated Cheque Details</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body p-2">
                        <div class="tab-content" id="custom-tabs-four-tabContent">
                            <div class="tab-pane fade show active" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                                <header class="row">
                                    <div class="col-md-8">
                                        <div class="clearfix">
                                            <form class="form-inline">
                                                <div class="input-group input-group-sm mr-sm-2">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text cstm">Show</span>
                                                    </div>
                                                    <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.PDCDetails">
                                                        <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.PDCDetails">{{pp.text}}</option>
                                                    </select>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text bg-white"><small>entries</small></span>
                                                    </div>
                                                </div>
                                                <div class="input-group input-group-sm table-search-filed">
                                                    <input class="form-control form-control-navbar" type="search"
                                                           placeholder="Search" aria-label="Search" ng-model="searchData.PDCDetails">
                                                    <div class="input-group-append">
                                                        <button class="btn btn-default border-left-0" type="submit">
                                                            <i class="fas fa-search"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <!-- end col-md-8 -->
                                    <div class="col-md-4 text-right">
                                        <div class="dropdown dnld-file" title="Download File">
                                            <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                                    id="dropdownMenuButton" data-toggle="dropdown"
                                                    aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-download"></i>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right"
                                                 aria-labelledby="dropdownMenuButton">
                                                <span class="dropdown-item">Choose an option:</span>
                                                <a class="dropdown-item wait" export-excel table-id="'#datatable'" sheet-name="'PDCDetails'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                                <a class="dropdown-item wait" onClick="$('#datatable').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                               
                                            </div>
                                            <a print-tbl table-id="'#datatable'" class="btn btn-secondary btn-light btn-sm wait"
                                               title="Print">
                                                <i class="fas fa-print"></i>
                                            </a>

                                        </div>


                                    </div>
                                </header>
                                <div class="search-toolbar">

                                    <div class="">

                                        <table cellpadding="12" class="table table-bordered table-striped table-hover table-sm" id="datatable">
                                            <tr>
                                                <th ng-click="sort('TranId')" style="text-align: center; width: 10%;">

                                                    S.No
                                                    <span class="glyphicon sort-icon" ng-show="sortKey=='LedgerGroupId'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                </th>

                                                <th ng-click="sort('BankName')" style="width: 22% ; text-align:left">
                                                    Party
                                                    <span class="glyphicon sort-icon" ng-show="sortKey=='Name'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                </th>

                                                <th ng-click="sort('BankName')" style="width: 20% ; text-align:left">
                                                    BankName
                                                    <span class="glyphicon sort-icon" ng-show="sortKey=='BankName'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                </th>
                                                <th ng-click="sort('BankBranch')" style="width: 20%;text-align:left">

                                                    BankBranch
                                                    <span class="glyphicon sort-icon" ng-show="sortKey=='Code'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                </th>
                                                <th ng-click="sort('BankBranch')" style="width: 15%;text-align:left">

                                                    Amount
                                                    <span class="glyphicon sort-icon" ng-show="sortKey=='Code'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                </th>
                                                <th style="text-align:center;width: 15%;">Action</th>

                                            </tr>
                                            <tr dir-paginate="beData in PDCColl | orderBy:sortKey:reverse | filter:searchData.PDCDetails | itemsPerPage:perPage.PDCDetails" current-page="currentPages.PDCDetails" pagination-id="PDCDetailsPagination">
                                                <td style="text-align:center;margin:auto">
                                                    {{$index+1}}
                                                </td>
                                                <td style="margin:auto;text-align:left">
                                                    {{beData.LedgerName}}
                                                </td>
                                                <td style="margin:auto;text-align:left">
                                                    {{beData.BankName}}
                                                </td>

                                                <td style="margin:auto;text-align:left">
                                                    {{beData.BankBranch}}
                                                </td>

                                                <td style="margin:auto;text-align:left">
                                                    {{beData.Amount |number:2}}
                                                </td>
                                                <td class="project-actions text-center" style="text-align:center">
                                                    <div class="btn-group-sm">
                                                        <a href="#" class="btn btn-info" ng-click="getPDCById(beData)" style="font-size:xx-small"><i class="fas fa-pencil-alt"></i></a>
                                                        <a href="#" class="btn btn-danger" ng-click="deletePDC(beData,$index)" style="font-size:xx-small"><i class="fas fa-trash"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>
                                        <div class="col-md-12">
                                            <dir-pagination-controls pagination-id="PDCDetailsPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                            </dir-pagination-controls>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label>Party:<span style="color:red">*</span></label>
                                            <select autoShowHide="true" class="select2 serial form-control form-control-sm" all-ledger ng-model="beData.LedgerId" id="cboParty" style="width:95%" ledgertype="3"
                                                    placeholder="** Select Party Name **" showdetails="true" confirm-action="PartySelectionChange(beData)" ledger-detail="beData.PartyLedger" side-bar-data="beData.partySideBarData"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="name">Date:</label>
                                            <input type="text" class="form-control form-control-sm" date-picker ng-model="beData.VoucherDate_TMP" date-detail="beData.VoucherDateDet">
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="name">Salesman:</label>
                                            <select class="form-control form-control-sm select2" ng-model="beData.AgentId" data-placeholder="**select Salesman**">
                                                <option ng-value="pp.AgentId" ng-repeat="pp in AgentList" ng-selected="beData.AgentId==pp.AgentId">{{pp.Name}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Bank Name<span style="color:red">*</span></label>
                                            <input type="text" class="form-control form-control-sm" data-ng-model="beData.BankName" list="lstBank">
                                            <datalist id="lstBank">
                                                <option data-ng-repeat="ttl in BankColl" value="{{ttl.Name}}">
                                            </datalist>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Branch Name<span style="color:red">*</span></label>
                                            <input type="text" class="form-control form-control-sm" ng-model="beData.BankBranch">
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>ChequeNo<span style="color:red">*</span></label>
                                            <input type="text" class="form-control form-control-sm" ng-model="beData.ChequeNo">
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <label for="name">Cheque Date:<span style="color:red">*</span></label>
                                            <input type="text" class="form-control form-control-sm" date-picker ng-model="beData. ChequeDate" date-detail="beData.ChequeDateDet">
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Amount<span style="color:red">*</span></label>
                                            <input type="text" number-input class="form-control form-control-sm" ng-model="beData.Amount ">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1" class="form-label">Notes</label>
                                            <textarea class="form-control form-control-sm" id="exampleFormControlTextarea1" rows="1" ng-model="beData.Notes"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1" class="form-label">Valid Days</label>
                                            <input type="number" class="form-control form-control-sm" ng-model="beData.ValidDays ">
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1" class="form-label">Against</label>
                                            <textarea class="form-control form-control-sm" rows="1" ng-model="beData.Against"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <label><b>Document Attachment</b></label>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>Type Of Document</label>
                                            <select class="form-control form-control-sm" ng-model="CurDocument.DocumentTypeId">
                                                <option ng-value="dt.DocumentTypeId" ng-repeat="dt in DocumentTypeList" ng-selected="CurDocument.DocumentTypeId==dt.DocumentTypeId">{{dt.Name}}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-9">
                                        <div class="row">
                                            <div class="col-sm-8">
                                                <div class="form-group">
                                                    <label>Attach Doc.</label>
                                                    <div class="form-group">
                                                        <input type="file" accept=".jpg,.jpeg,.png" class="form-control-file form-control form-control-sm border p-0" id="flMoreFiles" file-model ng-model="CurDocument.Document_TMP" fileread="CurDocument.DocumentData">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="d-flex">
                                                    <div>
                                                        <label class="invisible d-block">for height</label>
                                                        <button type="button" class="btn btn-sm btn-secondary" ng-click="AddMoreFiles()"><i class="fas fa-plus"></i> Add More</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="pb-3">
                                    <div class="table-responsive">
                                        <table class="table table-hover border">
                                            <thead>
                                                <tr>
                                                    <th scope="col" style="width: 50px">SN.</th>
                                                    <th scope="col" style="width: 150px">Doc. Type</th>
                                                    <th scope="col" style="width: 250px">Name</th>
                                                    <th scope="col" style="width: 90px">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="dcc in beData.DocumentColl">
                                                    <th scope="row">{{$index+1}}</th>
                                                    <td>{{dcc.DocumentTypeName}}</td>
                                                    <td>{{dcc.Name}}</td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="{{dcc.DocumentData || dcc.DocPath}}" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Download doc." download="{{dcc.Name}}"><i class="fas fa-download"></i></a>
                                                            <a href="#" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="" data-original-title="View doc" ng-click="ShowPersonalImg(dcc)"><i class="fas fa-eye"></i></a>
                                                            <a href="#" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete doc." ng-click="delAttachmentFiles($index)"><i class="fas fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <footer class="mt-4">
                                    <div class="text-center">
                                        <div class=" control-btns">
                                            <button type="button" class="btn btn-default btn-sm" ng-click="ClearFields()"
                                                    style="font-size: 15px; min-width: 70px">
                                                Cancel
                                            </button>

                                            <button type="button" class="btn btn-success btn-sm"  ng-click="AddPDC()"
                                                    style="font-size: 15px; min-width:70px">
                                                Save
                                            </button>
                                        </div>
                                    </div>

                                </footer>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
          </section>
    </div>
        <!-- /.container-fluid -->
   


    <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="PersonalImg" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body mb-0 p-0">
                    <img ng-src="{{viewImg.FileData || viewImg.ContentPath}}" alt="" style="width:100%; height: 70vh;">
                </div>
                <div class="modal-footer">
                    <div><a href="{{viewImg.FileData || viewImg.ContentPath}}" download>Download</a></div>
                    <button class="btn btn-success btn-rounded btn-sm ml-4 text-center" data-dismiss="modal" type="button" style="min-width: 90px;">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>




