
<script src="~/jslib/account/transaction/LedgerMerge.js?v=20251115"></script>
<div ng-app="myApp" ng-controller="LedgerMergeController" ng-init="LoadData()">
    <!-- Main content -->
    <div class="container-fluid">
        <div class="sale-page-wrap">
            <div class="overflow-hidden">
                @*@RenderPage("~/Views/Global/_WaitDialog.cshtml")
                @RenderPage("~/Views/Global/_LedgerDetails.cshtml")*@
                <!-- Page Content  -->
                <div class="content-wrapper-new">

                    <div class="card p-2 mt-2">

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group row">
                                    <label for="" class="col-md-4">Select From Ledger</label>
                                    <div class="col-md-8">
                                        <select autoShowHide="true" class="form-control form-control-sm select2 serial" all-ledger ng-model="beData.FromLedgerId" ledgertype="1"
                                                placeholder="** Select From Ledger **" showdetails="true" confirm-action="PartySelectionChange(beData)" ledger-detail="beData.FromLedger" side-bar-data="beData.partySideBarData"></select>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group row">
                                    <label for="" class="col-md-4">Select To Ledger</label>
                                    <div class="col-md-8">
                                        <select autoShowHide="true" class="form-control form-control-sm select2 serial" all-ledger ng-model="beData.ToLedgerId" ledgertype="1"
                                                placeholder="** Select To Ledger **" showdetails="true" confirm-action="PartySelectionChange(beData)" ledger-detail="beData.Toledger" side-bar-data="beData.partySideBarData"></select>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group row">
                                    <button type="button" class="btn btn-default" style="min-width: 90px;" ng-click="LedgerMerge()">Merge</button>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
