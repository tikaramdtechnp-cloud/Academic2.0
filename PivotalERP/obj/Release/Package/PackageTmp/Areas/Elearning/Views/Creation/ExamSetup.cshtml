                    <!-- Second Tab Content -->
                    <div class="card py-2">
                        <header class="row">
                            <div class="col-md-6">
                                <div class="clearfix">
                                    <form class="form-inline">
                                        <div class="input-group input-group-sm mr-sm-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text cstm">Show</span>
                                            </div>
                                            <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                            <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.ExamSetup">
                                                <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.ExamSetup">{{pp.text}}</option>
                                            </select>
                                            <div class="input-group-append">
                                                <span class="input-group-text bg-white"><small>entries</small></span>
                                            </div>
                                        </div>
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar"
                                                   type="search" placeholder="Search"
                                                   aria-label="Search" ng-model="searchData.ExamSetup">
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0"
                                                        type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>

                                    </form>

                                </div>
                            </div>
                            <div class="col-md-3">

                            </div>
                            <!-- end col-md-8 -->
                            <div class="col-md-3 text-right">
                       
                                <div class="dropdown dnld-file"
                                     data-toggle="tooltip"
                                     data-placement="top"
                                     title="Download File">
                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle"
                                            type="button"
                                            id="dropdownMenuButton"
                                            data-toggle="dropdown"
                                            aria-haspopup="true"
                                            aria-expanded="false">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="dropdownMenuButton">
                                        <span class="dropdown-item">Choose an option:</span>
                                        <a class="dropdown-item wait" export-excel table-id="'#main-table'" sheet-name="'ClassWiseSubject'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                        <a class="dropdown-item wait" onClick="$('#main-table').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                       
                                    </div>
                                </div>
                                <a print-tbl table-id="'#main-table'" class="btn btn-secondary btn-light btn-sm wait"
                                   data-toggle="tooltip" data-placement="bottom"
                                   title="Print">
                                    <i class="fas fa-print"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-success" ng-click="ClearExamSetup()" id="add-exam-setup" style="min-width: 90px;"><i class="fas fa-plus w-t"></i> Add Exam</button>
                            </div>
                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll" style="max-height: calc(100vh - 10rem) ;overflow-x:auto">
                                <table id="main-table"
                                       class="main-table table table-sm table-bordered bg-white  table-head-fixed">
                                    <thead>
                                        <tr>
                                            <th class="text-center" style="width: 50px">S.No.</th>
                                            <th style="width: 100px" ng-click="sort('ExamDate_AD')">
                                                Exam Date
                                                <span class="glyphicon sort-icon" ng-show="sortKey=='ExamDate_AD'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                            </th>
                                            <th style="width: 140px" ng-click="sort('ExamTypeName')">Exam Type</th>
                                            <th style="width: 130px" ng-click="sort('ClassName')">Class/Sec</th>
                                            <th style="width: 150px" ng-click="sort('SubjectName')">Subject</th>
                                            <th style="width: 150px" ng-click="sort('TeacherName')">Teacher</th>
                                            <th style="width: 180px" ng-click="sort('Lesson')">Lesson</th>
                                            <th style="width: 100px" ng-click="sort('StartTime')">Start Time</th>
                                            <th style="width: 135px" ng-click="sort('Duration')">Duration (Minutes)</th>
                                            <th style="width: 65px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr  dir-paginate="cl in ExamSetupList |orderBy:sortKey:reverse| filter:searchData.ExamSetup | itemsPerPage: perPage.ExamSetup|orderBy:ExamDate_BS" current-page="currentPages.ExamSetup" pagination-id="ExamSetupPagination">
                                            <td class="text-center">{{$index+1}}</td>
                                            <td>{{cl.ExamDate_BS}}</td>
                                            <td>{{cl.ExamTypeName}}</td>
                                            <td>{{cl.ClassName}}/{{cl.SectionName}}</td>
                                            <td>{{cl.SubjectName}}</td>
                                            <td>{{cl.TeacherName}}</td>
                                            <td>{{cl.Lesson}}</td>
                                            <td>{{cl.StartTime| date : "h:mm a" }}</td>
                                            <td>{{cl.Duration}}</td>
                                            <td>
                                                <a class="p-1" href="#" ng-click="GetExamSetupById(cl)">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelExamSetupById(cl)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- table end -->
                            </div>
                        </div>
                        <footer class="row align-items-center">
                            <div class="col-md-12">
                                <dir-pagination-controls pagination-id="ExamSetupPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html"></dir-pagination-controls>
                            </div>
                        </footer>
                    </div>
                </div>
                <div id="exam-setup-form">
                    <div class="card p-2">
                        <div class="row"> 

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Class</label>
                                    <select class="form-control form-control-sm " ng-model="newExamSetup.ClassId" ng-change="GetClassWiseSubMap()">
                                        <option>-- Select Class --</option>
                                        <option ng-repeat="ct in ClassColl" ng-value="ct.ClassId" ng-selected="ct.ClassId==newExamSetup.ClassId">
                                            {{ct.Name}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Section</label>
                                    @*<select id="cboSection" class="form-control form-control-sm select2" multiple ng-change="GetClassWiseSubMap()" ng-model="newExamSetup.SectionId">
                                        <option ng-repeat="ct in SectionClassColl  |  filter: { ClassId: newExamSetup.ClassId }:true  " ng-value="ct.SectionId">
                                            {{ct.SectionName}}
                                        </option>
                                    </select>*@
                                    <select ng-model="newExamSetup.SectionId" class="form-control input-sm select2" multiple="multiple" id="cboSection" name="cboSection"  ng-change="GetClassWiseSubMap()">
                                        <option ng-repeat="cl in SectionClassColl | filter: { ClassId: newExamSetup.ClassId }:true" value="{{cl.SectionId}}" ng-selected="{{newExamSetup.SectionIdColl_TMP.containt(cl.SectionId)}}">
                                            {{cl.SectionName}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Exam Type</label>
                                    <select class="form-control form-control-sm " ng-change="GetExamDet()" style="width:100%" ng-model="newExamSetup.ExamTypeId">
                                        <option>-- Select ExamType --</option>
                                        <option ng-value="cl.ExamTypeId" ng-repeat="cl in ExamTypeColl |  filter: { IsOnlineExam: true }:true" ng-selected="cl.ExamTypeId==newExamSetup.ExamTypeId">{{cl.Name}}</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Subject</label>
                                    <select class="form-control form-control-sm " ng-model="newExamSetup.SubjectId">
                                        <option ng-repeat="ct in newExamSetup.SubjectList" ng-value="ct.SubjectId" ng-selected="ct.SubjectId==newExamSetup.SubjectId">
                                            {{ct.Name}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Lesson<span style="color:red">*</span></label>
                                    <input type="text"
                                           class="form-control form-control-sm" ng-model="newExamSetup.Lesson" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Exam Date</label>
                                    <input type="text"
                                           class="form-control form-control-sm" date-picker ng-model="newExamSetup.ExamDate_TMP" date-detail="newExamSetup.ExamDateDet">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Start Time</label>
                                    <input type="time"
                                           class="form-control form-control-sm" ng-model="newExamSetup.StartTime_TMP" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Duration(Minutes)</label>
                                    <input type="number"
                                           class="form-control form-control-sm" ng-model="newExamSetup.Duration" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Result Date</label>
                                    <input type="text"
                                           class="form-control form-control-sm" date-picker ng-model="newExamSetup.ResultDate_TMP" date-detail="newExamSetup.ResultDateDet">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Result Time</label>
                                    <input type="time"
                                           class="form-control form-control-sm" ng-model="newExamSetup.ResultTime_TMP" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="">Full Marks</label>
                                            <input type="number"
                                                   class="form-control form-control-sm" ng-change="checkFullMark()" ng-model="newExamSetup.FullMarks" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="">Pass Marks</label>
                                            <input type="number"
                                                   class="form-control form-control-sm" ng-change="NotGreaterthenFullMark()" ng-model="newExamSetup.PassMarks" />
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-md-12">
                                <label for="">Instruction</label>
                                <textarea class="textarea " id="Instruction" html-editor
                                          placeholder="Place some text here"
                                          style="width: 100%;height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 1%;" ng-model="newExamSetup.Instruction"></textarea>
                            </div>

                        </div>
                        <label>Question Model</label>
                        <div class="table-responsive pb-2 mt-2">
                            <div class="table-scroll-x-y">
                                <table id=""
                                       class="table table-hover table-bordered th-fixed-top bg-white w-100">
                                    <thead>
                                        <tr>
                                            <th style="width: 80px">S.No.</th>

                                            <th style="width: 150px">Category</th>
                                            <th style="width: 150px"> Exam Model</th>
                                            <th style="width: 140px">No of Question </th>
                                            <th style="width: 90px"> Marks </th>
                                            <th style="width: 90px">Total</th>
                                            <th style="width: 70px">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="Det in newExamSetup.QuestionModelColl">
                                            <td>{{getLetter($index)}}</td>

                                            <td>
                                                <select class="form-control form-control-sm select2" ng-change="OnChangeCategoryList(Det)" ng-model="Det.CategoryId">
                                                    <option ng-repeat="ct in CategoryListColl" ng-value="{{ ct.CategoryId }}" ng-selected="ct.CategoryId==Det.CategoryId">
                                                        {{ct.CategoryName}}
                                                    </option>
                                                </select>

                                            </td>
                                            <td>
                                                <input class="form-control form-control-sm " ng-model="Det.ExamModalName" disabled />
                                            </td>
                                            <td>
                                                <input type="number"
                                                       class="form-control form-control-sm" ng-change="CalcTotal(Det)" ng-model="Det.NoOfQuestion" />
                                            </td>
                                            <td>
                                                <input type="number"
                                                       class="form-control form-control-sm" ng-change="CalcTotal(Det)" ng-model="Det.Marks" />
                                            </td>
                                            <td>
                                                <input type="number"
                                                       class="form-control form-control-sm" ng-model="Det.Total" disabled />
                                            </td>

                                            <td>
                                                <a class="p-1" ng-click="AddQuestionMode($index)">
                                                    <i class="fas fa-plus text-info"></i>
                                                </a>
                                                <a class="p-1" ng-click="delQuestionMode($index)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>


                            </div>

                        </div>
                        <div class="row mt-4">
                            <div class="col-md-2">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" type="checkbox"
                                           id="customCheckbox1" ng-model="newExamSetup.IsAlerttoStudents">
                                    <label for="customCheckbox1"
                                           class="custom-control-label">Alert to Students</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label class="checkbox-wrap">
                                    Shuffle Questions
                                    <input type="checkbox" id="chkShuffleQuestions" ng-model="newExamSetup.ShuffleQuestions" />
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="col-md-7 form-inline">
                                <label class="checkbox-wrap">
                                    Include Negative Mark
                                    <input type="checkbox" id="negativemarkCheckbox" ng-model="newExamSetup.IsIncludeNegativeMark" />
                                    <span class="checkmark"></span>
                                </label>
                                <div id="negativemarkCheckboxdiv" ng-show="newExamSetup.IsIncludeNegativeMark==true"
                                     @*style="display:none"*@>
                                    <div class="ml-4 form-inline">
                                        <label>
                                            Marks Will Be Deducted in Each Incorrect Answer
                                        </label>
                                        <input type="text"
                                               class="form-control form-control-sm ml-1" ng-model="newExamSetup.DeductMark">(%)
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="time-label">
                            <span class="d-block border-0 p-3 text-center">
                                <button type="button" class="btn btn-sm btn-info" id="back-btn" data-dismiss="modal" style="min-width: 90px;">
                                    Back to
                                    List
                                </button>
                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearExamSetup()">Reset</button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateExamSetup()">{{newExamSetup.Mode}}</button>
                            </span>
                        </div>
                    </div>

                </div>
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
</div>
<style>
    .textarea {
        height: 50px !important
    }
