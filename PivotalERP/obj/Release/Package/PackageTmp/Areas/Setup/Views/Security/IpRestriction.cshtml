
<script src="~/jslib/Setup/IPRestriction.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="IPRestrictionController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content">

                    <!-- form area starts -->
                    <div id="allow-class-form">
                        <div class="card card-default">

                            <div class="card-body p-0">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">

                                            <div class="col-md-12">
                                                <div class="custom-control custom-checkbox checkbox-lg">
                                                    <input type="checkbox"
                                                           class="custom-control-input"
                                                           id="checkbox-2" ng-model="newIPRestriction.EnableApplication" />
                                                    <label class="custom-control-label" for="checkbox-2">Enable Application Wide IP Restriction ?</label>
                                                </div>
                                            </div>
                                            <div class="col-md-8 mt-2">
                                                <label>If Enabled, Dynamic ERP will only be accessible from the specifically defined IP addresses. </label><br>
                                                <label>Access will be rejected from all IP addresses</label><br>
                                                <label class="mt-4">Wild cards are allowed, such as : 123.169.1*, will allow all IP address ranging from 123.169.1.1 to 174.166.1.225</label><br>
                                                <label>Wild cards will be used at any level.</label>
                                            </div>
                                            <div class="col-md-8 mt-2">
                                                <div class="form-group">
                                                    <label for="">Allowed IP Addresses (Comma Seperated)</label>

                                                    <textarea cols="30" rows="5" class="form-control form-control-sm" ng-model="newIPRestriction.AllowedIPAddress"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label for="">Blocked IP Addresses (Comma Seperated)</label>

                                                    <textarea cols="30" rows="5" class="form-control form-control-sm" ng-model="newIPRestriction.BlockedIPAddress"></textarea>
                                                </div>

                                                <div class="time-label py-3" >
                                                    <span class="d-block border-0 p-1 text-center">

                                                        <button type="button"
                                                                class="btn btn-sm btn-success"
                                                                style="min-width: 90px" ng-click="SaveUpdateIPRestriction()">
                                                            {{newIPRestriction.Mode}}
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>


                            </div>

                            
                        </div>

                    </div>


                </div>

            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>