
<script src="~/jslib/Setup/AllowBranch.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="AllowBranchController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content">

                    <!-- form area starts -->
                    <div id="allow-branch-form">
                        <div class="card card-default">

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">User </label>                                                  
                                                    <select class="form-control form-control-sm select2" ng-model="newAllowBranch.UserId" ng-change="GetAllowBranchList()">
                                                        <option ng-value="0">**Select User**</option>
                                                        <option ng-value="cl.UserId" ng-repeat="cl in UserList">{{cl.UserName}}</option>
                                                    </select>
                                                </div>
                                            </div>


                                            <div class="col-md-2 mt-4 ">
                                                <button type="button"
                                                        class="btn btn-sm btn-success"
                                                        style="min-width: 90px" ng-click="SaveUpdateAllowBranch()">
                                                    <i class="fas fa-database w-t"></i> {{newAllowBranch.Mode}}
                                                </button>

                                            </div>

                                            <div class="col-md-4 mt-4">
                                                <div class="custom-control custom-checkbox checkbox-lg">
                                                    <input type="checkbox"
                                                           class="custom-control-input"
                                                           id="checkbox-2" ng-model="newAllowBranch.CheckedAll" ng-change="CheckUnCheckAll()" />
                                                    <label class="custom-control-label" for="checkbox-2">{{ newAllowBranch.CheckedAll==true ? "Un-Checked All": "Checked All" }}</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12" ng-repeat="br in BranchList">
                                                <div class="custom-control custom-checkbox checkbox-lg">
                                                    <input type="checkbox"
                                                           class="custom-control-input"
                                                           id="checkbox-branch-{{$index}}" ng-model="br.Allow" />
                                                    <label class="custom-control-label" for="checkbox-branch-{{$index}}">{{br.Name}}</label>
                                                </div>
                                            </div>                                             
                                        </div>
                                    </div>


                                </div>


                            </div>

                        </div>

                    </div>

                </div>

            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>