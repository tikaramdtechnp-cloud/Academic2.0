<script src="~/jslib/Setup/AllowShift.js?v=20251115"></script>

<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="AllowShiftController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content">

                    <!-- form area starts -->
                    <div id="allow-class-form">
                        <div class="card card-default">

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="">User </label>
                                                    <select class="form-control form-control-sm select2" ng-model="newAllowShift.UserId">
                                                        <option ng-value="0">**Select User**</option>
                                                        <option ng-value="cl.id" ng-repeat="cl in UserList" ng-selected="cl.id==newAllowShift.UserId">{{cl.text}}</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-2 mt-4 ">
                                                <button type="button"
                                                        class="btn btn-sm btn-success"
                                                        style="min-width: 90px" ng-click="SaveUpdateAllowShift()">
                                                    <i class="fas fa-database w-t"></i>{{newAllowShift.Mode}}
                                                </button>

                                            </div>

                                            <div class="col-md-4 mt-4">
                                                <div class="custom-control custom-checkbox checkbox-lg">
                                                    <input type="checkbox"
                                                           class="custom-control-input"
                                                           id="checkbox-2" ng-model="newAllowShift.CheckAll" />
                                                    <label class="custom-control-label" for="checkbox-2">Check All</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="custom-control custom-checkbox checkbox-lg">
                                                    <input type="checkbox"
                                                           class="custom-control-input"
                                                           id="checkbox-branch-1" />
                                                    <label class="custom-control-label" for="checkbox-branch-1">Assets</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="custom-control custom-checkbox checkbox-lg">
                                                    <input type="checkbox"
                                                           class="custom-control-input"
                                                           id="checkbox-branch-2" />
                                                    <label class="custom-control-label" for="checkbox-branch-2">Attendance</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>