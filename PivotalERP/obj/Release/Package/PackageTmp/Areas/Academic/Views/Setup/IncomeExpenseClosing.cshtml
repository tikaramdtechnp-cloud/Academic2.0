
<script src="~/jslib/academic/setup/IncomeExpenseClosing.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="IncomeExpenseClosingController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:52px!important">
                <div class="tab-content">
                    <div class="IncomeExpenseClosing-section">
                        <header class="row">
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">From Fiscal Year:</span>
                                        </div>
                                        
                                        <select class="form-control form-control-sm select2" ng-model="newData.PreviousPeriodId" ng-change="onFiscalYearChange()">
                                            <option ng-repeat="cc in CostClassColl track by cc.CostClassId" ng-value="cc.CostClassId" ng-selected="cc.CostClassId == newData.PreviousPeriodId">
                                                {{cc.Name}}
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group mb-0">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">To Fiscal Year:</span>
                                        </div>
                                        
                                        <select class="form-control form-control-sm select2" ng-model="newData.CurrentssPeriodId" ng-change="onFiscalYearChange()">
                                            <option ng-repeat="cc in CostClassColl track by cc.CostClassId" ng-value="cc.CostClassId" ng-if="cc.CostClassId !== newData.PreviousPeriodId" ng-selected="cc.CostClassId == newData.CurrentssPeriodId">
                                                {{cc.Name}}
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <input type="text"class="form-control form-control-sm" date-picker ng-model="newData.CurrentsStartDate_TMP" date-detail="newData.CurrentsStartDateDet" disabled/>
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 70px;" ng-click="UpdateIncomeExpenseClosing()"><i class="fas fa-save mr-2"></i>Update</button>
                            </div>
                        </header>
                    </div>

                </div>


            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>
