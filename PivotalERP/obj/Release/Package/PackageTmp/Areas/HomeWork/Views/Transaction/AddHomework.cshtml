                <div class="homework-add-form" id="homework-add-form">
                    <div class="card py-2">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="">Teacher Name</label>
                                            <select class="form-control form-control-sm select2" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.TeacherId" @*ng-change="GetTeacherWiseClassList()"*@>
                                                <option ng-repeat="T in TeacherNameList" ng-value="T.EmployeeId" ng-selected="newAddHomework.TeacherId==T.EmployeeId">{{T.Name}}- {{ T.EmployeeCode}}</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-sm-2 col-lg-2 col-md-2" ng-show="AcademicConfig.ActiveBatch==true">
                                        <label for="">Batch</label>
                                        <select class="form-control form-control-sm select2" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.BatchId">
                                            <option ng-value="0">**Select Batch**</option>
                                            <option ng-value="cl.id" ng-repeat="cl in BatchList" ng-selected="cl.id==newAddHomework.BatchId">{{cl.text}}</option>
                                        </select>
                                    </div>

                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="">Class</label>
                                            <select class="form-control form-control-sm select2" ng-model="newAddHomework.SelectedClass" ng-disabled="newAddHomework.HomeWorkId">
                                                <option ng-value="0">**All**</option>
                                                <option ng-value="cl" ng-repeat="cl in ClassSection.ClassList">{{cl.text}}</option>
                                            </select>

                                            @*<select class="form-control form-control-sm select2" style="width: 100%" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.SelectedClass">
                                                    <option ng-value="cs" ng-repeat="cs in ClassSection.ClassList">{{cs.text}}</option>
                                                </select>*@
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="">Section</label>
                                            <select class="form-control form-control-sm select2" data-placeholder="Select Section" ng-model="newAddHomework.SectionId" ng-disabled="newAddHomework.HomeWorkId">
                                                <option ng-value="se.SectionId" ng-repeat="se in ClassSection.SectionList |  filter: { ClassId: newAddHomework.ClassId }:true">{{se.SectionName}}</option>
                                            </select>
                                            @*<select class="select2 form-control-sm" data-placeholder="Select Section" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.SectionId">
                                                    <option ng-value="se.SectionId" ng-repeat="se in  ClassSection.SectionListOnly |  filter: { ClassId: newAddHomework.SelectedClass.ClassId }:true'">{{se.SectionName}}</option>
                                                </select>*@
                                        </div>
                                    </div>
                                    <div class="col-md-2" ng-show="newAddHomework.SelectedClass.ClassType==2  &&  AcademicConfig.ActiveClassYear==true">
                                        <div class="form-group">
                                            <label for="">Class Year</label>
                                            <select class="form-control form-control-sm select2" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.ClassYearId">
                                                <option ng-value="0">**Select Year**</option>
                                                <option ng-value="cl.id" ng-repeat="cl in ClassYearList" ng-selected="cl.id==newAddHomework.ClassYearId">{{cl.text}}</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-2" ng-show="newAddHomework.SelectedClass.ClassType==3 &&  AcademicConfig.ActiveSemester==true">
                                        <div class="form-group">
                                            <label for="">Semester</label>
                                            <select class="form-control form-control-sm select2" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.SemesterId">
                                                <option ng-value="0">**Select Semester**</option>
                                                <option ng-value="cl.id" ng-repeat="cl in SemesterList" ng-selected="cl.id==newAddHomework.SemesterId">{{cl.text}}</option>
