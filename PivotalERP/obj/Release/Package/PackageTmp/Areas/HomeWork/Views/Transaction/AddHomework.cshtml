                                                    ng-change="GetLessonTopicDetailsWise(newAddHomework.Lesson)">
                                                <option ng-repeat="S in SubjectLessonWiseList" value="{{S.LessonName}}">{{S.LessonName}}</option>
                                            </select>

                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="">Topic</label>
                                            <input type="text" placeholder="" class="form-control form-control-sm" ng-if="!Configuration.HomeworkTopic|| newAddHomework.HomeWorkId" ng-disabled="Configuration.HomeworkTopic && newAddHomework.HomeWorkId" ng-model="newAddHomework.Topic" />
