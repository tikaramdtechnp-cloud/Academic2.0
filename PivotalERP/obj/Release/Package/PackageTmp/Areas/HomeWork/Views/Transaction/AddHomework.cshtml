                                                <option ng-repeat="S in SubjectList" ng-value="S.SubjectId" ng-selected="newAddHomework.SubjectId==S.SubjectId">{{S.text}}</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="">Lesson</label>
                                            <input type="text" placeholder="" class="form-control form-control-sm" ng-if="!Configuration.HomeworkLesson || newAddHomework.HomeWorkId" ng-disabled="Configuration.HomeworkLesson && newAddHomework.HomeWorkId" ng-model="newAddHomework.Lesson" />
                                            <select class="form-control form-control-sm select2" ng-disabled="newAddHomework.HomeWorkId"
