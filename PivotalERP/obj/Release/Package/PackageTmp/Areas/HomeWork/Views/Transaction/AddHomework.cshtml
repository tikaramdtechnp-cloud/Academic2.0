                                                <option ng-repeat="S in LessonTopicDetailsWiseList" ng-value="S.TopicName" @*ng-selected="newAddHomework.Topic==S.TopicId"*@>{{S.TopicName}}</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for=""> Homework Type </label>
                                            <select class="form-control form-control-sm select2" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.HomeworkTypeId">
                                                <option ng-repeat="T in HomeworkTypeList" ng-value="T.HomeworkTypeId" ng-selected="newAddHomework.HomeworkTypeId==T.HomeworkTypeId">{{T.Name}}</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="">Homework Description</label>
                                            <textarea class="textarea" placeholder="Place some text here" style=" width: 100%; height: 183.062px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px; " ng-model="newAddHomework.Description" html-editor></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 d-flex">
                                        <div class="col-md-6 d-flex">
                                            <div class="col-md-7">
                                                <div class="form-group">
                                                    <label for="">Deadline Date</label>
                                                    <input type="text" date-picker ng-model="newAddHomework.DeadlineDate_TMP" date-detail="newAddHomework.DeadlineDateDet" placeholder="" class="form-control form-control-sm" />
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label for="">Time</label>
                                                    <input type="time" placeholder="" class="form-control form-control-sm" ng-model="newAddHomework.DeadlineTime_TMP" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 d-flex">
                                            <div class="col-md-7">
                                                <div class="form-group">
                                                    <label for="">Deadline for Re-do</label>
                                                    <input type="text" date-picker placeholder="" class="form-control form-control-sm" date-detail="newAddHomework.DeadlineforRedoDet" ng-model="newAddHomework.DeadlineforRedo_TMP" />
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label for="">Time</label>
                                                    <input type="time" placeholder="" class="form-control form-control-sm" ng-model="newAddHomework.DeadlineForReDoTime_TMP" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>File</label>
                                                @*<input id="flHomeWork" type="file" multiple file-model-resize ng-model="HomeWork_Files_TMP" after-selected="AfterChooseFile()" fileread="HomeWork_Files_Data" accept="image/png, image/gif, image/jpeg, image/jpg" />*@

                                                <input id="flHomeWork" type="file" multiple file-model-resize @*ng-disabled="newAddHomework.HomeWorkId"*@ ng-model="HomeWork_Files_TMP" after-selected="AfterChooseFile()" fileread="HomeWork_Files_Data" accept="image/png, image/gif, image/jpeg, image/jpg" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 d-flex">
                                        <div class="col-md-3">
                                            <div class="form-group mt-3">
                                                <label class="checkbox-wrap">
                                                    Student Submissions Required?
                                                    <input type="checkbox" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.SubmissionsRequired" />
                                                    <span class="checkmark"></span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group mt-3">
                                                <label class="checkbox-wrap">
                                                    Allow Submission After Deadline
                                                    <input type="checkbox" ng-disabled="newAddHomework.HomeWorkId" ng-model="newAddHomework.IsAllowLateSibmission" />
                                                    <span class="checkmark"></span>
                                                </label>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="time-label pb-3">
                            <span class="d-block border-0 text-center">
                                <button type="button" class="btn btn-sm btn-info" id="back-homework-btn" style="min-width: 90px">
                                    Back to List
                                </button>
                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearAddHomework()">Reset</button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateAddHomework()">{{newAddHomework.Mode}}</button>
                            </span>
                        </div>
                    </div>
                </div>


                <!-- Attachment Modal with PDF and Image support Modal 1 -->
                <div class="modal fade" id="attachmentModalOnly" tabindex="-1" role="dialog" aria-labelledby="attachmentModalOnlyLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="attachmentModalOnlyLabel">Homework Attachments</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="col-12">
                                    <div class="card p-2" style="border: 1px solid #ccc;">
                                        <div class="p-2" style="border-bottom: 1px solid #ccc; background-color: #f1f1f1;">
                                            <label><b>Attachments</b></label>
                                        </div>
                                        <div class="image-set m-t-20 d-flex flex-wrap">
                                            <div class="m-2 text-center" ng-repeat="file in AttFilesViewOnly">

                                                <!-- Image -->
                                                <img ng-if="file.type === 'image'"
                                                     ng-src="{{file.url}}"
                                                     alt="Attachment {{$index+1}}"
                                                     style="height:130px; cursor:pointer;"
                                                     ng-click="previewFile(file)" />

                                                <!-- PDF -->
                                                <div ng-if="file.type === 'pdf'"
                                                     style="width:130px; height:130px; border:1px solid #ccc; display:flex; align-items:center; justify-content:center; cursor:pointer;"
                                                     ng-click="previewFile(file)">
                                                    <div>
                                                        <i class="fas fa-file-pdf fa-3x text-danger"></i><br />
                                                        <small>Open PDF</small>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div ng-if="!AttFilesViewOnly.length" class="text-center p-2 text-muted">
                                            No attachments found.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Attachment Modal 2-->
                <div aria-hidden="true" aria-labelledby="previewModalLabel" class="modal fade" id="previewModal" role="dialog" tabindex="-1" style="margin-top:50px;">
                    <div class="modal-dialog" role="document" style="margin-top: 0; width: auto; max-width: 90vw; padding: 3px; display: flex; justify-content: center; align-items: center;">
                        <div class="modal-content" style="width: auto; display: inline-block; padding: 10px;">

                            <div class="modal-body p-0" style="padding: 10px; text-align: center;">

                                <!-- Image Preview -->
                                <img ng-if="SelectedFilePreview.type === 'image'"
                                     ng-src="{{SelectedFilePreview.url}}"
                                     alt="Preview"
                                     id="modalImage"
                                     style="display: block; width: 100%; height: auto; max-height: 70vh; object-fit: contain;" />
                                <!-- PDF Preview -->
                                <iframe ng-if="SelectedFilePreview.type === 'pdf'"
                                        ng-src="{{SelectedFilePreview.safeUrl || SelectedFilePreview.url}}"
                                        type="application/pdf"
                                        style="width: 80vw; height: 70vh; border: none;"></iframe>
                            </div>
                            <div class="modal-footer px-0 pt-2 pb-0" style="display: flex; justify-content: flex-end; gap: 3px;">
                                <a ng-href="{{SelectedFilePreview.url}}" class="btn btn-sm btn-success" target="_blank" download style="text-decoration: none; font-size: 14px;">
                                    Download
                                </a>
                                <button class="btn btn-danger btn-rounded btn-sm text-center" data-dismiss="modal" type="button" style="min-width: 80px;">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>