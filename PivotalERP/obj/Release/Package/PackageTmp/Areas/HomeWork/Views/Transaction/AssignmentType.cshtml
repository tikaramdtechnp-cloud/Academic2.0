
<script src="~/jslib/homework/AssignmentType.js?v=20251115"></script>
<div class="hold-transition layout-navbar-fixed" ng-app="myApp" ng-controller="AssignmentTypeController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid" style="margin-top: -10px;">
            <section class="iframe-content-starts-here">
                <div class="assignment-type-form" id="assignment-type-section">
                    <div class="card p-0">
                        <!-- Table nav menu -->
                        <header class="row">
                            <div class="col-md-7">
                                <div class="clearfix">
                                    <form class="form-inline">
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar" type="search" placeholder="Search"
                                                   aria-label="Search" ng-model="searchData.AssignmentType" />
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0" type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end col-md-8 -->
                            <div class="col-md-5 text-right">
                                <div class="dropdown dnld-file" data-toggle="tooltip" data-placement="top" title="Download File">
                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="dropdownMenuButton">
                                        <span class="dropdown-item">Choose an option:</span>
                                        <a class="dropdown-item wait" export-excel table-id="'#AssignmentType'" sheet-name="'AssignmentTypeList'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                        <a class="dropdown-item wait" onClick="$('#AssignmentType').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                       
                                    </div>
                                </div>
                                <a print-tbl table-id="'#AssignmentType'" href="#" class="btn btn-secondary btn-light btn-sm"
                                   data-toggle="tooltip" data-placement="top" title="Print">
                                    <i class="fas fa-print"></i>
                                </a>
                                <button type="button" class="btn addBtn btn-sm btn-success" id="add-assignment-type-btn"
                                        style="min-width: 90px">
                                    <i class="fas fa-plus w-t"></i> Add Assignment
                                    Type
                                </button>
                            </div>
                        </header>
                        <!--Table nav menu Ending -->
                        <div class="table-responsive">
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="AssignmentType" class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 70px">S.N.</th>
                                            <th style="width: 250px">Name</th>
                                            <th style="width: 350px">
                                                Description
                                            </th>
                                            <th style="width: 90px">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr dir-paginate="cl in AssignmentTypeList | filter:searchData.AssignmentType | itemsPerPage: perPage.AssignmentType" current-page="currentPages.AssignmentType" pagination-id="AssignmentTypePagination">
                                            <td>{{$index+1}}</td>
                                            <td>{{cl.Name}}</td>
                                           
                                            <td>
                                                <span ng-bind-html="cl.Description | unsafe">
                                                </span>
                                            </td>
                                            <td>
                                                <a class="p-1" href="#" ng-click="GetAssignmentTypeById(cl)">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelAssignmentTypeById(cl)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="assignment-type-form" id="assignment-type-form">
                    <div class="card py-2">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <label for="">Assignment Type</label>
                                            <input type="text" class="form-control form-control-sm" ng-model="newAssignmentType.Name" />
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="">Order No.</label>
                                            <input type="number" placeholder="" class="form-control form-control-sm" ng-model="newAssignmentType.OrderNo" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="">Description</label>
                                            <textarea class="textarea" placeholder="Place some text here" style="
                                                                          width: 100%;
                                                                          height: 200px;
                                                                          font-size: 14px;
                                                                          line-height: 18px;
                                                                          border: 1px solid #dddddd;
                                                                          padding: 10px;
                                                                        " ng-model="newAssignmentType.Description" html-editor></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="time-label pb-3">
                            <span class="d-block border-0 text-center">
                                <button type="button" class="btn btn-sm btn-info" id="back-assignment-btn" style="min-width: 90px">
                                    Back to List
                                </button>
                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearAssignmentType()">Reset</button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateAssignmentType()">{{newAssignmentType.Mode}}</button>
                            </span>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>