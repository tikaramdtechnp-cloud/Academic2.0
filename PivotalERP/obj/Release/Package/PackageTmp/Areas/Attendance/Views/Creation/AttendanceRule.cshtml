<script src="~/jslib/Attendance/AttendanceRule.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="AttendanceRuleController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:50px!important">
                <div class="card py-2">
                    <div class="card" style="border: 1px solid #d4e1db;">
                        <div class="card-header p-2" style="background-color: #e9f2ee;">
                            <h3 class="card-title">   Advance Employee Policy Details</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label>Permitted Late Arrival(In Min.)</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAttendanceRule.PermittedLateArrival" />
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label>Permitted Early Departure(In Min.)</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAttendanceRule.PermittedEarlyDeparture" />
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label>Mark as Half Day if working hour Less Than(In Min.)</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAttendanceRule.MarkasHalfDayifworkinghourLessThan" />
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label>Mark as Absent if working hour Less Than(In Min.)</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAttendanceRule.MarkasAbsentifworkinghourLessThan" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card" style="border: 1px solid #d4e1db;">
                        <div class="card-header p-2" style="background-color: #e9f2ee;">
                            <h3 class="card-title">  Half Day & Absent For Late Arrival & Early Departure</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3 col-md-3">
                                    <div class="form-group">
                                        <label>Late Arrival(In Min.)</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAttendanceRule.LateArrival" />
                                    </div>
                                </div>
                                <div class="col-sm-3 col-md-3">
                                    <div class="form-group">
                                        <label>Show As for Late Arrival</label>
                                        <select class="form-control form-control-sm">
                                            <option value="1"> None</option>
                                            <option value="2">Cut Half Day</option>
                                            <option value="2">Cut Full Day</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3 col-md-3">
                                    <div class="form-group">
                                        <label>Early Departure(In Min.)</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAttendanceRule.EarlyDeparture" />
                                    </div>
                                </div>
                                <div class="col-sm-3 col-md-3">
                                    <div class="form-group">
                                        <label>Show As for Early Departure</label>
                                        <select class="form-control form-control-sm">
                                            <option value="1"> None</option>
                                            <option value="2">Cut Half Day</option>
                                            <option value="2">Cut Full Day</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card" style="border: 1px solid #d4e1db;">
                        <div class="card-header p-2" style="background-color: #e9f2ee;">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox"
                                       id="customCheckbox1" value="option1">
                                <label for="customCheckbox1"
                                       class="custom-control-label">Enable Late Incoming</label>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3 col-md-3">
                                    <div class="form-group">
                                        <label>No Of Late In A Month</label>
                                        <input type="number" class="form-control form-control-sm" ng-model="newAttendanceRule.NoOfLateInAMonth" />
                                    </div>
                                </div>
                                <div class="col-sm-3 col-md-3">
                                    <div class="form-group">
                                        <label>Cut Days</label>
                                        <select class="form-control form-control-sm select2">
                                            <option value="1">Half Day</option>
                                            <option value="2">Absent</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3 col-md-3">
                                    <div class="form-group">
                                        <label>Ignore Over time Less than(In Min)</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAttendanceRule.IgnoreOvertimeLessthan" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="time-label">
                        <span class="d-block border-0 p-3 text-center">
                            <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearAttendanceRule()">Reset</button>
                            <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateAttendanceRule()">{{newAttendanceRule.Mode}}</button>
                        </span>
                    </div>
                </div>
                <!-- form area ends -->
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>