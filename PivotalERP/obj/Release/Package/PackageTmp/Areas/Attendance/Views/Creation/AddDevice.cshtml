
<script src="~/jslib/attendance/WebSocketEx.js"></script>
<script src="~/jslib/Attendance/AddDevice.js?v=20251115"></script>

<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="AddDeviceController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:50px!important">
                <div class="tab-content" id="device-section">
                    <div class="card py-2">
                        <header class="row">
                            <div class="col-md-4">
                                <div class="clearfix">
                                    <div class="form-inline mb-0">
                                        <div class="input-group input-group-sm mr-sm-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text cstm">Show</span>
                                            </div>
                                            <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.AddDevice">
                                                <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.AddDevice">{{pp.text}}</option>
                                            </select>
                                            <div class="input-group-append">
                                                <span class="input-group-text bg-white"><small>entries</small></span>
                                            </div>
                                        </div>
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar"
                                                   type="search" placeholder="Search" ng-model="searchData.AddDevice"
                                                   aria-label="Search">
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0" type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-1">
                                <div class="form-group d-flex">
                                 
                                    <label class="checkbox-wrap">
                                        Use SSL
                                        <input type="checkbox" id="chkUseSSL" name="chkGodownWise" ng-model="UseSSL" />
                                        <span class="checkmark"></span>
                                    </label>

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group d-flex mb-2">
                                    <label class="mt-1 mr-2">
                                        Port
                                    </label>
                                    <input type="number" ng-model="DevicePort" class="form-control form-control-sm">
                                </div>
                            </div>
                            <div class="col-md-5 text-right">
                                <a class="btn btn-success btn-sm ml-2" style="color:#fff;"
                                   ng-click="showSelectDeviceMessage()">
                                    <i class="fas fa-upload w-t"></i> Upload Card No
                                </a>
                                <a class="btn btn-danger btn-sm ml-2" style="color:#fff;"
                                   ng-click="showDeleteDeviceMessage()">
                                    <i class="fas fa-trash w-t"></i> Delete Card No
                                </a>
                                @*<a class="btn btn-success btn-sm ml-1" data-toggle="modal" data-target="#SearchCardNo" style="color:#fff;">
                                    <i class="fas fa-search w-t">
                                    </i>
                                    Search Card No
                                </a>*@
                                <button type="button" class="btn btn-sm btn-info"
                                        style="min-width: 90px" ng-click="checkDeviceStatus()">
                                    <i class="fas fa-chart-bar w-t"></i> Show Device Status
                                </button>
                                <button type="button" class="btn btn-sm btn-success" id="add-device"
                                        style="min-width: 90px">
                                    <i class="fas fa-plus w-t"></i> Add Device
                                </button>
                            </div>
                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table"
                                       class="main-table table table-sm table-bordered bg-white">
                                    <thead class="text-nowrap">
                                        <tr>
                                            <th style="width: 200px">Name</th>
                                            <th style="width: 150px">Serial No</th>
                                            <th style="width: 150px">Location</th>
                                            <th style="width: 100px">DeviceCompany</th>
                                            <th style="width: 100px">For</th>
                                            <th style="width: 150px">Status</th>
                                            <th style="width: 150px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr dir-paginate="cl in AddDeviceList | filter:searchData.AddDevice | itemsPerPage: perPage.AddDevice" current-page="currentPages.AddDevice" pagination-id="AddDevicePagination">
                                            <td><label> <input type="checkbox" ng-model="cl.IsSelected" /> {{cl.Name}} </label> </td>
                                            <td>{{cl.MachineSerialNo}}</td>
                                            <td>{{cl.Location}}</td>
                                            <td>{{cl.DeviceCompany}}</td>
                                            <td>{{ cl.ForId == 1 ? 'Class' : (cl.ForId == 2 ? 'Hostel' : '') }}</td>
                                            <td>{{cl.Status}}</td>
                                            <td>
                                                <a class="p-1" href="#" ng-click="GetAddDeviceById(cl)" data-toggle="tooltip"
                                                   data-placement="top" title="Edit">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelAddDeviceById(cl)" data-toggle="tooltip"
                                                   data-placement="top" title="Delete">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>

                                                <a class="p-1" href="#" data-toggle="tooltip"
                                                   data-placement="top" title="Download All User" ng-click="getUserInfo(cl)">
                                                    <i class="fas fa-cloud-download-alt text-secondary"></i>
                                                </a>
                                                <a class="p-1" href="#" data-toggle="tooltip"
                                                   data-placement="top" title="Upload User Finger to Device" ng-click="upLoadUserInfoToMachine(cl)">
                                                    <i class="fas fa-file-upload text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" data-toggle="tooltip"
                                                   data-placement="top" title="Upload User Card to Device" ng-click="upLoadUserCardToMachine(cl)">
                                                    <i class="fas fa-file-upload text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" data-toggle="tooltip"
                                                   data-placement="top" title="Download All Attendance Log" ng-click="downloadAllLog(cl)">
                                                    <i class="fas fa-download text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" data-toggle="tooltip"
                                                   data-placement="top" title="Download New Attendance Log Only" ng-click="downloadNewLog(cl)">
                                                    <i class="fas fa-file-download text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" data-toggle="tooltip"
                                                   data-placement="top" title="Clear User Log" ng-click="cleanlog(cl)">
                                                    <i class="fas fa-user-times text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- table end -->
                        </div>
                        <footer class="row align-items-center">
                            <div class="col-md-12">
                                <dir-pagination-controls pagination-id="AddDevicePagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)"></dir-pagination-controls>
                            </div>
                        </footer>
                    </div>
                </div>
                <!-- form area starts -->
                <div id="add-device-form">
                    <div class="card ">
                        <div class="card-body p-2">
                            <div class="row">
                                <div class="col-sm-4 col-md-4">
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAddDevice.Name" />
                                    </div>
                                </div>
                                <div class="col-sm-4 col-md-4">
                                    <div class="form-group">
                                        <label for="name">Machine Serial No.</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAddDevice.MachineSerialNo" />
                                    </div>
                                </div>
                                <div class="col-sm-4 col-md-4">
                                    <div class="form-group">
                                        <label for="name">Location</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newAddDevice.Location" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="">Device Company</label>
                                        <select class="form-control form-control-sm select2" ng-model="newAddDevice.DeviceCompany">
                                            <option ng-value="dc.id" ng-repeat="dc in DeviceCompanyColl" ng-selected="dc.id==newAddDevice.DeviceCompany">{{dc.text}}</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="">For</label>
                                        <select class="form-control form-control-sm select2" ng-model="newAddDevice.ForId">
                                            <option ng-value="dc.id" ng-repeat="dc in ForList" ng-selected="dc.id==newAddDevice.ForId">{{dc.text}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="time-label">
                                <span class="d-block border-0 p-3 text-center">
                                    <button type="button" class="btn btn-sm btn-info" id="deviceback-btn"
                                            style="min-width: 90px">
                                        Back to List
                                    </button>
                                    <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearAddDevice()">Reset</button>
                                    <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateAddDevice()">{{newAddDevice.Mode}}</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- form area ends -->
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->



    <div class="modal fade" id="UploadCard" style="margin-top: 0px;">
        <div class="modal-dialog modal-sm" style="max-width: 400px!important;">
            <div class="modal-content">
                <div class="modal-header  p-2">
                    <h6 class="modal-title">Upload Card No</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="">Card No</label>
                        <input type="text" class="form-control form-control-sm" ng-model="newUpload.CardNo" />
                    </div>
                </div>
                <div class="time-label">
                    <span class="d-block border-0 p-3 text-center">
                        <button ng-disabled="loadingstatus=='running'" type="button" class="btn load btn-success" ng-click="UploadCardno()" style="min-width: 60px;">Upload</button>
                    </span>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>


    <div class="modal fade" id="DeleteCard" style="margin-top: 0px;">
        <div class="modal-dialog modal-sm" style="max-width: 400px!important;">
            <div class="modal-content">
                <div class="modal-header  p-2">
                    <h6 class="modal-title">Delete Card No</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="">Card No</label>
                        <input type="text" class="form-control form-control-sm" ng-model="newDelete.CardNo" />
                    </div>
                </div>
                <div class="time-label">
                    <span class="d-block border-0 p-3 text-center">
                        <button ng-disabled="loadingstatus=='running'" type="button" class="btn load btn-success" ng-click="DeleteCardno()" style="min-width: 60px;">Delete</button>
                    </span>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>

    <div class="modal fade" id="SearchCardNo" style="margin-top: 0px;">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header  p-2">
                    <h6 class="modal-title">Search Card No</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group d-flex">
                                <label style="width:90px">Card No : </label>
                                <input class="form-control form-control-sm" type="text" ng-model="searchData.CardNo">

                            </div>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-sm btn-success" ng-click="FindCardno()" style="min-width: 60px;">Find</button>
                        </div>

                    </div>
                    <div class="table-scroll-x-y table-scroll mt-2" style="height:auto!important;max-height:calc(100vh - 8rem)!important">
                        <table class="main-table table table-sm table-bordered bg-white">
                            <thead>
                                <tr>
                                    <th style="width: 140px">RFID Card No.</th>
                                    <th style="width: 180px">Device Name</th>
                                    <th style="width: 130px">Machine Serial</th>
                                    <th style="width: 120px">IP Address</th>
                                    <th style="width: 140px">Location</th>
                                    <th style="width: 130px">Branch</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="cl in CardNolist | filter:searchData.CardNo">
                                    <td>{{cl.RFIDCardNumber}}</td>
                                    <td>{{cl.DeviceName}}</td>
                                    <td>{{cl.MachineSerial}}</td>
                                    <td>{{cl.IPAddress}}</td>
                                    <td>{{cl.Location}}</td>
                                    <td>{{cl.Branch}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>