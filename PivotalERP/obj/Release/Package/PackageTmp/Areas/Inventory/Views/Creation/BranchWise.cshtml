
<script src="~/jslib/inventory/creation/BranchWise.js?v=20251012"></script>
<div class="hold-transition layout-navbar-fixed" ng-app="myApp" ng-controller="BranchWiseController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content">
                    <div class="card card-default">
                        <div class="card-body">

                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label> Branch Name</label>
                                        <select class="form-control form-control-sm select2" ng-model="newBranchWise.BranchNameId">
                                            <option ng-value="0">**Select BranchName**</option>
                                            <option ng-value="pl.id" ng-repeat="pl in BranchNameList" ng-selected="pl.id==newBranchWise.BranchNameId">{{pl.text}}</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label> Product Group</label>
                                        <select class="form-control form-control-sm select2" ng-model="newBranchWise.ProductGroupId">
                                            <option ng-value="0">**Select ProductGroup**</option>
                                            <option ng-value="pl.id" ng-repeat="pl in ProductGroupList" ng-selected="pl.id==newBranchWise.ProductGroupId">{{pl.text}}</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="col-md-2">

                                    <div class="form-group">
                                        <label for="">Applicable From</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newBranchWise.ApplicableForm_TMP" date-picker date-detail="newBranchWise.ApplicableFormDet">
                                    </div>

                                </div>

                                <div class="col-md-2 mt-4">

                                    <button class="btn btn-sm btn-success" style="min-width: 90px;">Load</button>

                                </div>
                            </div>

                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                    <thead class=" text-nowrap">
                                        <tr>
                                            <th style="width: 80px;">S.No</th>
                                            <th style="width: 300px;">Product </th>

                                            <th style="width: 80px;">Per</th>

                                            <th style="width: 100px;">Sell </th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="bw in newBranchWise.BranchWiseDetailsColl">
                                            <td>{{$index+1}}</td>
                                            <td>{{bw.Product}}</td>
                                            <td>{{bw.Per}}</td>
                                            <td>{{bw.Sell}}</td>


                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label> To Branch</label>
                                        <select class="form-control form-control-sm select2" ng-model="newBranchWise.ToBranchId">
                                            <option ng-value="0">**Select ToBranch**</option>
                                            <option ng-value="pl.id" ng-repeat="pl in ToBranchList" ng-selected="pl.id==newBranchWise.ToBranchId">{{pl.text}}</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="col-md-2 mt-4">
                                    <button class="btn btn-sm btn-success" style="min-width: 90px;">Transfer</button>
                                </div>
                            </div>
                        </div>


                        <div class="time-label">
                            <span class="d-block border-0 p-3 text-center">

                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearBranchWise()">Reset</button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateBranchWise()">{{newBranchWise.Mode}}</button>

                            </span>
                        </div>
                    </div>

                </div>
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>

</div>




