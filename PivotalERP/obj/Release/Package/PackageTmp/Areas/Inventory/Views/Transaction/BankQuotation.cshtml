                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">Total</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="number" class="form-control float-right serial" ng-model="beData.TotalAmount" readonly />
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- row -->
                        </form>
                    </div>
                    <!-- /.card body -->
                </div>
                <div style="height: 30px"></div>
            </div>
        </div>
