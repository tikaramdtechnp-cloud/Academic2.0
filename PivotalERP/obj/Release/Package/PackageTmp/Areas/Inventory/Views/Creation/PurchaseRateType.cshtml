
<script src="~/jslib/inventory/creation/PurchaseRateType.js?v=20251012"></script>
<div class="hold-transition layout-navbar-fixed" ng-app="myApp" ng-controller="PurchaseRateTypeController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content">
                    <div class="card card-default">
                        <div class="card-body">

                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                    <thead class=" text-nowrap">
                                        <tr>
                                            <th style="width: 80px;">S.No</th>
                                            <th style="width: 180px;">Rate </th>

                                            <th style="width: 200px;">Name</th>

                                            <th style="width: 100px;">Alias</th>
                                            <th style="width: 100px;">Is Active</th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="cl in newPurchaseRateType.PurchaseRateTypeDetailsColl">
                                            <td>1</td>
                                            <td>
                                                <select class="form-control form-control-sm select2" ng-model="cl.RateTypeId">
                                                    <option ng-value="0">**Select RateType**</option>
                                                    <option ng-value="pl.id" ng-repeat="pl in RateTypeList" ng-selected="pl.id==cl.RateTypeId">{{pl.text}}</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-control-sm" ng-model="cl.Name">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-control-sm" ng-model="cl.Alias">
                                            </td>
                                            <td class="text-center">
                                                <div class="custom-control custom-checkbox checkbox-lg ml-3">
                                                    <input type="checkbox"
                                                           class="custom-control-input"
                                                           id="checkbox-3"
                                                           value="" ng-model="cl.IsActive" />
                                                    <label class="custom-control-label"
                                                           for="checkbox-3"></label>
                                                </div>
                                            </td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                        <div class="time-label">
                            <span class="d-block border-0 p-3 text-center">

                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearPurchaseRateType()">Reset</button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdatePurchaseRateType()">{{newPurchaseRateType.Mode}}</button>

                            </span>
                        </div>
                    </div>

                </div>
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
</div>




