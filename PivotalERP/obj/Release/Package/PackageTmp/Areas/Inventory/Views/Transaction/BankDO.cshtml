<script>
    var VoucherType = "@ViewBag.VoucherType";
</script>
<div ng-app="myApp" ng-controller="BankDOController" ng-init="getVoucherNo()">
    <div class="sale-page-wrap">
        <div class="overflow-hidden">
            @RenderPage("~/Views/Global/_WaitDialog.cshtml")
            <!-- Page Content  -->
            <div class="content-wrapper-new">
                <div class="card">
                    <div class="card-header header-corner-triangle overflow-hidden">
                        <div class="row">
                            <h3 class="card-title">Bank D.O.</h3>
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-4 col-form-label">Voucher Type</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" style="width: 100%;" ng-model="beData.VoucherId" ng-change="getVoucherNo()">
                                            <option ng-repeat="vt in VoucherTypeColl track by vt.VoucherId" value="{{vt.VoucherId}}" ng-selected="vt.VoucherId == beData.VoucherId">
                                                {{vt.VoucherName}}
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-4 col-form-label">For Year</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" style="width: 100%;" ng-model="beData.CostClassId" ng-change="getVoucherNo()">
                                            <option ng-repeat="cc in CostClassColl track by cc.CostClassId" value="{{cc.CostClassId}}" ng-selected="cc.CostClassId == beData.CostClassId">
                                                {{cc.Name}}
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        <form action="">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">D.O. No:</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="text" class="form-control serial" placeholder="" ng-model="beData.AutoManualNo">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">Quotation No:</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="text" class="form-control serial" placeholder="" ng-model="beData.QuotationNo" id="txtQuotationNo" ng-blur="getQuotationDet()">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">D.O. Date</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="text" class="form-control float-right serial" voucher-date-ad ng-model="beData.VoucherDateDet" ng-blur="getVoucherNo()" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">Bank Name</label>
                                        <div class="col-sm-6 col-md-9">
                                            <input type="text" class="form-control float-right serial" ng-model="beData.BankName" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">Bank Branch</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="text" class="form-control float-right serial" ng-model="beData.BankBranch" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">Party Name</label>
                                        <div class="col-sm-9 col-md-9">
                                            <input type="text" class="form-control float-right" ng-model="beData.PartyName" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">Address</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="text" class="form-control float-right" ng-model="beData.PartyAddress" readonly />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">Mobile No.</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="text" class="form-control float-right" ng-model="beData.MobileNo" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">Bank D.O.Ref. No.</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="text" class="form-control float-right" ng-model="beData.DORefNo" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
                                        <div class="col-sm-10 col-md-10">
                                            <input type="text" class="form-control float-right" ng-model="beData.Narration" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-6 col-form-label">Amount</label>
                                        <div class="col-sm-6 col-md-6">
                                            <input type="number" class="form-control float-right serial" ng-model="beData.Price" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- row -->
                        </form>
                    </div>
                    <!-- /.card body -->
                </div>
                <div style="height: 30px"></div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>

    <footer class="main-footer control-btns pt-0">

        <div class="row">
            <div class="col-sm-4">
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#documentAttachModal">
                    D.O. Attach ({{beData.AttechFiles.length}} )
                </button>
            </div>
            <div class="col-sm-8">
                <form class="form-inline justify-content-end">
                    <button type="button" class="btn btn-secondary ml-1 serial" ng-click="AddBankQuotation()">Save</button>
                    <button type="button" class="btn btn-default ml-1" ng-click="Clear()">Reset</button>
                    
                    @*<button type="button" class="btn btn-primary ml-1">Save</button>*@
                </form>

            </div>
        </div>
    </footer>
    <!--  Document Attach footer Modal demo -->
    <div class="modal fade sales-invoice-page-modal document-attach-modal" id="documentAttachModal" tabindex="-1" role="dialog" aria-labelledby="documentAttachModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title" id="exampleModalCenterTitle">D.O. Attach</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body gradient-bg">
                    <div class="input-group" ng-repeat="fl in beData.AttechFiles">
                        <a href="#">{{$index+1}}  -  {{fl.name}}</a>
                    </div>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="exampleInputFile" multiple file-model="beData.AttechFiles">
                            <label class="custom-file-label" for="exampleInputFile">Choose file ({{beData.AttechFiles.length}} )</label>
                        </div>
                    </div>
                </div>
                <!-- end modal body -->
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal">Ok</button>
                    @*<button type="button" class="btn btn-sm btn-primary">Ok</button>*@
                </div>
            </div>
        </div>
    </div>
</div>

