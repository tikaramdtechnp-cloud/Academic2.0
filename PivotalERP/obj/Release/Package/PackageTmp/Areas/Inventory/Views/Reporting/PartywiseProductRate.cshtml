<div ng-app="myApp" ng-controller="partyWiseProductRateCtrl" ng-class="{waiting: loadingstatus=='running'}">
    <section class="iframe-content-starts-here" style="padding-top:50px!important">
        @RenderPage("~/Views/Global/_WaitDialog.cshtml")
        <div class="sale-page-wrap" data-bind="nextFieldOnEnter:true">
            <div class="overflow-hidden">
                <nav id="sidebarzz" class="order-last float-right active active">
                    <div class="custom-menu">
                        <button type="button" id="ctmRightSidebarCollapse" class="btn btn-primary"></button>
                    </div>
                    <div class="" id="firstpanel">
                        <div class="right-box-wrap">
                            <!--Anything to be added here-->
                        </div>
                    </div>
                </nav>
                <div class="content-wrapper-new">
                    <!-- Main content -->
                    <div class="">
                        <!-- Page Content  -->
                        <div class="container-fluid">
                            <div class="card mb-0">
                                <div class="card-header header-corner-triangle border py-1 px-2">
                                    <div class="row">
                                        <div class="col-sm-8">
                                            <h3 class="mb-0">Party Wise Product Rate List</h3>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group  mb-0">
                                                <a href="#" class="btn btn-success btn-sm px-1" style="float: right; min-width: 75px" data-toggle="tooltip" data-placement="top" title="" data-original-title="Load" ng-click="GetAllProduct()" ng-disabled="loadingstatus=='running'"><i class="fas fa-download"> &nbsp;&nbsp;</i>Load</a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <header class="row">
                                        <div class="col-md-5 col-sm-5">
                                            <div class="clearfix">
                                                <form class="form-inline">
                                                    <div class="input-group input-group-sm mr-sm-2">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text cstm">Find:</span>
                                                        </div>
                                                        <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                                        <select class="form-control pr-0"
                                                                id="exampleFormControlSelect1">
                                                            <option>Contain</option>
                                                            <option>Prefix</option>
                                                        </select>
                                                    </div>
                                                    <div class="input-group input-group-sm" style="width: 150px;">
                                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search" ng-model="search" ng-change="onFilterTextBoxChanged()">

                                                        <div class="input-group-append">
                                                            <button type="submit" class="btn btn-default">
                                                                <i class="fas fa-search"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="col-md-7 col-sm-7 text-right">
                                            <form class="form-inline  float-right">
                                                <a href="#" class="btn btn-secondary btn-light btn mr-2" ng-click="PrintBarCode()">
                                                    <i class="fa fa-barcode"></i>
                                                </a>
                                                <div class="input-group input-group-sm mr-sm-2">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text cstm">Search By:</span>
                                                    </div>
                                                    @*Edited by bibek start here Added Angular for Search*@

                                                    <div class="input-group-prepend">
                                                        <select class="form-control form-control-sm select2bs4" style="width: 100%;" ng-model="paginationOptions.SearchColDet">
                                                            <option ng-value="asp" ng-repeat="asp in columnDefs">{{asp.headerName}}</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="input-group input-group-sm" style="width: 150px;">
                                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search" ng-model="paginationOptions.SearchVal">
                                                    @*Edited by bibek End here*@

                                                    <div class="input-group-append">
                                                        <button type="submit" class="btn btn-default">
                                                            <i class="fas fa-search"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                <div class="dropdown dnld-file ml-2">
                                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle"
                                                            type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                            aria-haspopup="true" aria-expanded="false">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-right"
                                                         aria-labelledby="dropdownMenuButton">
                                                        <span class="dropdown-item">Choose an option:</span>
                                                        <a class="dropdown-item" href="#" ng-click="DownloadAsXls()">
                                                            <img src="~/wwwroot/dynamic/images/flaticons/excel.png"
                                                                 class="img-fluid exports-icon" alt="Excel image">
                                                            Excel
                                                        </a>
                                                        <a class="dropdown-item" href="#" ng-click="onBtExport()">
                                                            <img src="~/wwwroot/dynamic/images/flaticons/csv.png"
                                                                 class="img-fluid exports-icon">
                                                            CSV
                                                        </a>

                                                    </div>
                                                </div>
                                                <a href="#" class="btn btn-secondary btn-light btn-sm ml-2" ng-click="Print(false)">
                                                    <i class="fas fa-print"></i>
                                                </a>
                                                <a href="#" class="btn btn-secondary btn-light btn-sm ml-2"
                                                   data-toggle="modal" data-target="#itemAllocationForModal" data-placement="bottom" title="Filter">
                                                    <i class="fas fa-filter"></i>
                                                </a>
                                            </form>

                                        </div>

                                    </header>
                                    <div id="datatable" style="height: calc(100vh - 8.5rem); width: 100%;" class="ag-theme-alpine"></div>

                                </div>
                            </div>





                        </div>
                        <!-- /.container-fluid -->
                    </div>

                </div>
                <!-- Add ReportTemplates Modal Dailog -->
                <div class="modal fade bd-example-modal-xl sales-invoice-page-modal" id="FrmPrintReport" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter2Title" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title" id="exampleModalCenterTitle">Report Viewer</h6>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <iframe id="frmRpt" style='width: 100%; height: 600px; background-color: white; visibility:visible;' frameborder='0' scrolling='yes'></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Add min Rows For Barcode Modal Dailog -->
                <div class="modal fade bd-example-modal-xl sales-invoice-page-modal" id="FrmMinRowsReport" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter2Title" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title" id="exampleModalCenterTitle">For Barcode</h6>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row">
                                            <label class="col-md-4">No. Of Rows</label>
                                            <div class="col-md-8">
                                                <input type="number" class="form-control form-control-sm serial" placeholder="" ng-model="newPrint.minRows">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer" style="padding: 3px; margin-top: -20px; ">
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-dismiss="modal" style="min-width:90px">Cancel</button>
                                <button type="button" class="btn btn-sm btn-success" ng-click="Print(true)" style="min-width:90px">Print</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>

<script>
    (function ($) {

        "use strict";

        var fullHeight = function () {

