
<script src="~/jslib/inventory/creation/PartywiseChargeSetup.js?v=20251012"></script>
<div class="hold-transition layout-navbar-fixed" ng-app="myApp" ng-controller="PartywiseChargeSetupController" ng-init="LoadData()">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <section class="iframe-content-starts-here">
                        <div class="tab-content">
                            <div class="card card-default">
                                <div class="card-body">

                                    <div class="row">

                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label> Select Party</label>
                                                <select class="form-control form-control-sm select2" ng-model="newPartywiseChargeSetup.PartyId">
                                                    <option ng-value="0">**Select Party**</option>
                                                    <option ng-value="pl.id" ng-repeat="pl in PartyList" ng-selected="pl.id==newPartywiseChargeSetup.PartyId">{{pl.text}}</option>
                                                </select>

                                            </div>
                                        </div>
                                       
                                    </div>

                                    <div class="table-scroll-x-y sales-main-table table-scroll">
                                        <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                            <thead class=" text-nowrap">
                                                <tr>
                                                    <th style="width: 80px;">S.No</th>
                                                    <th style="width: 200px;">Ledger Name</th>
                                                    <th style="width: 100px;">Rate</th>
                                                    <th style="width: 100px;">Amount</th>
                                                </tr>

                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="cl in newPartywiseChargeSetup.PartywiseChargeSetupDetailsColl">
                                                    <td>{{$index+1}}</td>
                                                    <td>
                                                        <select class="form-control form-control-sm select2" ng-model="cl.LedgerNameId">
                                                            <option ng-value="0">**Select LedgerName**</option>
                                                            <option ng-value="pl.id" ng-repeat="pl in LedgerNameList" ng-selected="pl.id==cl.LedgerNameId">{{pl.text}}</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control form-control-sm" ng-value="0.00" ng-model="cl.Rate">
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control form-control-sm" ng-value="0.00" ng-model="cl.Amount" number-input>
                                                    </td>
                                                    
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                                <div class="time-label">
                                    <span class="d-block border-0 p-3 text-center">

                                        <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearPartywiseChargeSetup()">Reset</button>
                                        <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdatePartywiseChargeSetup()">{{newPartywiseChargeSetup.Mode}}</button>

                                    </span>
                                </div>
                            </div>

                        </div>
                    </section>
                    <!-- /.row -->
                </div>
                <!--/. container-fluid -->
            </section>

        </div>
    </div>
</div>




