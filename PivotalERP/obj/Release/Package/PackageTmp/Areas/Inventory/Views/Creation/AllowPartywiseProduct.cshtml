
<script src="~/jslib/inventory/creation/AllowPartywiseProduct.js?v=20251012"></script>
<div class="hold-transition layout-navbar-fixed" ng-app="myApp" ng-controller="AllowPartywiseProductController" ng-init="LoadData()">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <section class="iframe-content-starts-here">
                        <div class="tab-content">
                            <div class="card card-default">
                                <div class="card-body">

                                    <div class="row">

                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label> Select Party</label>
                                                <select class="form-control form-control-sm select2" ng-model="newAllowPartywiseProduct.PartyId">
                                                    <option ng-value="0">**Select Party**</option>
                                                    <option ng-value="pl.id" ng-repeat="pl in PartyList" ng-selected="pl.id==newAllowPartywiseProduct.PartyId">{{pl.text}}</option>
                                                </select>

                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label> Product Type</label>
                                                <select class="form-control form-control-sm select2" ng-model="newAllowPartywiseProduct.ProductTypeId">
                                                    <option ng-value="0">**Select ProductType**</option>
                                                    <option ng-value="pl.id" ng-repeat="pl in ProductTypeList" ng-selected="pl.id==newAllowPartywiseProduct.ProductTypeId">{{pl.text}}</option>
                                                </select>

                                            </div>
                                        </div>
                                        <div class="col-md-2 mt-4">
                                            <button class="btn btn-sm btn-success" style="min-width: 90px;">Load</button>
                                        </div>

                                    </div>

                                    <div class="table-scroll-x-y sales-main-table table-scroll">
                                        <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                            <thead class=" text-nowrap">
                                                <tr>
                                                    <th style="width: 80px;">S.No</th>
                                                    <th style="width: 200px;">Name</th>
                                                    <th style="width: 100px;">Alias</th>
                                                    <th style="width: 100px;">Code</th>
                                                    <th style="width: 150px;">Group</th>

                                                </tr>

                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="cl in newAllowPartywiseProduct.AllowPartywiseProductDetailsColl">
                                                    <td>{{$index+1}}</td>
                                                    <td>{{cl.Name}}</td>
                                                    <td>{{cl.Alias}}</td>
                                                    <td>{{cl.Code}}</td>
                                                    <td>{{cl.Group}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                                <div class="time-label">
                                    <span class="d-block border-0 p-3 text-center">

                                        <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearAllowPartywiseProduct()">Reset</button>
                                        <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateAllowPartywiseProduct()">{{newAllowPartywiseProduct.Mode}}</button>

                                    </span>
                                </div>
                            </div>

                        </div>
                    </section>
                    <!-- /.row -->
                </div>
                <!--/. container-fluid -->
            </section>

        </div>
    </div>
</div>




