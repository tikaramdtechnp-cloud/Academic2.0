<script src="~/jslib/inventory/creation/BillOfMaterial.js?v=20251012"></script>
<div class="hold-transition layout-navbar-fixed" ng-app="myApp" ng-controller="BillOfMaterialController" ng-init="LoadData()">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <section class="iframe-content-starts-here">

                        <div id="ledger-group-section">
                            <div class="card card-default">
                                <div class="card-body">

                                    <div class="row">

                                        <div class="col-md-5">

                                            <div class="form-group">
                                                <label for="name">Name</label>
                                                <input type="text" class="form-control form-control-sm" ng-model="newBillOfMaterial.Name">
                                            </div>

                                        </div>


                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label> Product</label>
                                                <select class="form-control form-control-sm select2" ng-model="newBillOfMaterial.ProductId">
                                                    <option ng-value="0">**Select AreaType**</option>
                                                    <option ng-value="pl.id" ng-repeat="pl in ProductList" ng-selected="pl.id==newBillOfMaterial.ProductId">{{pl.text}}</option>
                                                </select>

                                            </div>
                                        </div>
                                        <div class="col-md-2">

                                            <div class="form-group">
                                                <label for="">Qty.</label>
                                                <input type="number" class="form-control form-control-sm" ng-model="newBillOfMaterial.Qty">
                                            </div>

                                        </div>

                                    </div>
                                    <div class="table-scroll-x-y sales-main-table table-scroll">
                                        <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                            <thead class=" text-nowrap">
                                                <tr>
                                                    <th style="width: 80px;">S.No</th>
                                                    <th style="width: 300px;">Product</th>
                                                    <th style="width: 100px;">Godown</th>
                                                    <th style="width: 100px;">Product Type</th>
                                                    <th style="width: 100px;">Qty.</th>
                                                    <th style="width: 100px;">Rate</th>
                                                    <th style="width: 100px;">Unit</th>
                                                    <th style="width: 300px;">Notes</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="cl in newBillOfMaterial.BillOfMaterialDetailsColl">
                                                    <td>{{$index+1}}</td>
                                                    <td>
                                                        <select class="form-control form-control-sm select2" ng-model="cl.ProductId">
                                                            <option ng-value="0">**Select Product**</option>
                                                            <option ng-value="pl.id" ng-repeat="pl in ProductList" ng-selected="pl.id==cl.ProductId">{{pl.text}}</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <select class="form-control form-control-sm select2" ng-model="cl.GodownId">
                                                            <option ng-value="0">**Select Godown**</option>
                                                            <option ng-value="pl.id" ng-repeat="pl in GodownList" ng-selected="pl.id==cl.GodownId">{{pl.text}}</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <select class="form-control form-control-sm select2" ng-model="cl.ProductTypeId">
                                                            <option ng-value="0">**Select ProductType**</option>
                                                            <option ng-value="pl.id" ng-repeat="pl in ProductTypeList" ng-selected="pl.id==cl.ProductTypeId">{{pl.text}}</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control form-control-sm" ng-value="0.00" ng-model="cl.Qty">
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control form-control-sm" ng-value="0.00" ng-model="cl.Rate">
                                                    </td>
                                                    <td>
                                                        {{cl.Unit}}
                                                        <select class="form-control form-control-sm select2" ng-model="cl.UnitId">
                                                            <option ng-value="0">**Select Unit**</option>
                                                            <option ng-value="pl.id" ng-repeat="pl in UnitList" ng-selected="pl.id==cl.UnitId">{{pl.text}}</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        {{cl.Notes}}
                                                        <textarea type="text" class="form-control form-control-sm" ng-model="cl.Notes" rows="1"></textarea>
                                                    </td>

                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Description</label>
                                            <textarea class="form-control form-control-sm" ng-model="newBillOfMaterial.Description" rows="1"></textarea>
                                        </div>
                                    </div>

                                    <div class="time-label">
                                        <span class="d-block border-0 p-3 text-center">

                                            <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearBillOfMaterial()">Reset</button>
                                            <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateBillOfMaterial()">{{newBillOfMaterial.Mode}}</button>

                                        </span>
                                    </div>
                                </div>


