
<script src="~/jslib/appcms/socialmedia.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="SocialMediaController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top: 54px!important;">
                <div class="tab-content" id="table-listing" >
                    <div class="card">
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table"
                                       class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 45px">S.No</th>
                                            <th style="width: 120px">Social Media</th>
                                            <th class="text-center" style="width: 80px">
                                                Icons
                                            </th>
                                            <th style="width:400px">URl</th>
                                            <th class="text-center" style="width: 140px">Show/Hide</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="sm in SocialMediaList">
                                            <td>
                                                <input type="number" class="form-control form-control-sm" ng-model="sm.OrderNo" ng-hide="sm.SocialMediaId>0" />
                                                <span ng-show="sm.SocialMediaId>0"> {{sm.OrderNo}}</span>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-control-sm" ng-model="sm.Name" ng-hide="sm.SocialMediaId>0"/>
                                                <span ng-show="sm.SocialMediaId>0"> {{sm.Name}}</span>
                                            </td>
                                            <td class="text-center">
                                                <label for="choosefbfile{{$index}}">  <img src="{{sm.IconData || sm.IconPath}}" style="height:35px;" /></label>
                                                <input id="choosefbfile{{$index}}" type="file" accept=".jpg,.jpeg,.png" style="display: none;" file-model fileread="sm.IconData" ng-model="sm.Icon_TMP" />                                                 
                                            </td>
                                            <td><input type="text" class="form-control form-control-sm" ng-model="sm.URLPath" /></td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-toggle" data-toggle="buttons" style="border: 1px solid #76be4e; border-radius: 12px;">
                                                    <label class="btn btn-sm bg-default py-0" style="border-radius: 11px;" ng-class="(sm.IsActive==true ? 'active' : '')">
                                                        <input type="radio" name="options" autocomplete="off" ng-value="true" ng-model="sm.IsActive"> Show
                                                    </label>
                                                    <label class="btn btn-sm bg-default py-0" style="border-radius: 11px;" ng-class="(sm.IsActive==false ? 'active' : '')">
                                                        <input type="radio" name="options" autocomplete="off" ng-value="false" ng-model="sm.IsActive">
                                                        Hide
                                                    </label>
                                                </div>
                                                <a class="p-1 btn btn-sm btn-default" ng-click="delURL($index)">
                                                    <i class="fas fa-trash-alt w-t text-danger"></i>
                                                </a>
                                            </td> 
                                        </tr>                                                                           
                                    </tbody>
                                </table>

                                <!-- table end -->
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <div class="float-right">
                                        <a class="p-1 btn btn-sm btn-default" ng-click="AddNewUrl($index)">
                                            <i class="fas fa-plus text-primary"></i>
                                        </a>
                                       
                                    </div>
                                </div>
                            </div>

                            <div class="time-label mt-3">
                                <span class="d-block border-0 p-3 text-center">
                                    <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;">Reset</button>
                                    <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateSocialMedia()">Save</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>


