<script src="~/jslib/AppCMS/quotes.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="QuotesController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top: 50px!important;">
                <div class="tab-content" id="table-listing">
                    <!-- Second Tab Content -->
                    <div class="card py-2">
                        <header class="row">
                            <div class="col-md-7">
                                <div class="clearfix">
                                    <form class="form-inline mb-2">
                                        <div class="input-group input-group-sm mr-sm-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text cstm">Show</span>
                                            </div>
                                            <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.Quotes">
                                                <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.Quotes">{{pp.text}}</option>
                                            </select>
                                            <div class="input-group-append">
                                                <span class="input-group-text bg-white"><small>entries</small></span>
                                            </div>
                                        </div>
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar"
                                                   type="search" placeholder="Search"
                                                   aria-label="Search" ng-model="searchData.Quotes">
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0" type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end col-md-8 -->
                            <div class="col-md-5 text-right">
                                <div class="dropdown dnld-file" data-toggle="tooltip" data-placement="top"
                                     title="Download File">
                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                        <span class="dropdown-item">Choose an option:</span>
                                        <a class="dropdown-item wait" export-excel table-id="'#main-table'" sheet-name="'Quotes'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                        <a class="dropdown-item wait" onClick="$('#main-table').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>


                                    </div>
                                </div>
                                <a print-tbl table-id="'#main-table'" class="btn btn-secondary btn-light btn-sm wait" title="Print">
                                    <i class="fas fa-print"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-success" id="open-form-btn"
                                        style="min-width: 90px">
                                    <i class="fas fa-plus w-t"></i> Add Quotes
                                </button>
                            </div>
                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 70px">S.No.</th>
                                            <th style="width: 150px">Date</th>
                                            <th style="width: 350px">Quotes</th>
                                            <th style="width:120px">For User</th>
                                            <th style="width: 70px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr dir-paginate="cl in QuotesList | filter:searchData.Quotes | itemsPerPage: perPage.Quotes" current-page="currentPages.Quotes" pagination-id="QuotesPagination">
                                            <td>{{$index+1}}</td>
                                            <td ng-show="LANG=='np'">{{cl.ForDate_BS}}</td>
                                            <td ng-show="LANG=='in'">{{cl.ForDate | dateFormat}}</td>
                                            <td>{{cl.Title}}</td>
                                            <td>{{cl.For}}</td>
                                            <td>
                                                <a class="p-1" href="#" ng-click="ShowPersonalImg(cl)">
                                                    <i class="fas fa-eye text-secondary"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="GetQuotesById(cl)">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelQuotesById(cl)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- table end -->
                            </div>
                        </div>
                        <footer class="row align-items-center">
                            <div class="col-md-12">
                                <dir-pagination-controls pagination-id="QuotesPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                </dir-pagination-controls>
                            </div>
                        </footer>
                    </div>
                </div>
                <!-- form area starts -->
                <div id="quotes-form">
                    <div>
                        <div class="card">
                            <div class="card-body p-2">
                                <div class="timeline-item">
                                    <div class="row">
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Quotes Title</label>
                                                        <textarea class="form-control form-control-sm"
                                                                  rows="3" ng-model="newQuotes.Title"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="">For Date</label>
                                                        <input type="text"
                                                               class="form-control form-control-sm" date-picker ng-model="newQuotes.ForDate_TMP" date-detail="newQuotes.ForDateDet">
                                                    </div>
                                                </div>
                                                <div class="col-md-8">
                                                    <div class="form-group">
                                                        <label for="">Quotes For</label>
                                                        <div class="row">
                                                            <div class="col-md-3">
                                                                <div class="custom-control custom-checkbox">
                                                                    <input class="custom-control-input" type="checkbox"
                                                                           id="customCheckbox1" ng-model="newQuotes.ForStudent">
                                                                    <label for="customCheckbox1"
                                                                           class="custom-control-label">Student</label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <div class="custom-control custom-checkbox">
                                                                    <input class="custom-control-input" type="checkbox"
                                                                           id="customCheckbox2" ng-model="newQuotes.ForTeacher">
                                                                    <label for="customCheckbox2"
                                                                           class="custom-control-label">Teacher</label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <div class="custom-control custom-checkbox">
                                                                    <input class="custom-control-input" type="checkbox"
                                                                           id="customCheckbox3" ng-model="newQuotes.ForAdmin">
                                                                    <label for="customCheckbox3"
                                                                           class="custom-control-label">Admin</label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="" class="invisible">Photo</label>
                                            <div class="person-photo-attachment-wrap text-center">
                                                <div class="img-wrap mx-auto" style="width:100%;">
                                                    <img ng-src="{{newQuotes.PhotoData || newQuotes.ImagePath}}" class="img-fluid" alt="" id="imgPhoto1">
                                                </div>
                                                <!-- Button trigger modal -->
                                                <button type="button" class="btn btn-outline-secondary btn-sm" data-toggle="modal" data-target="#updatePhoto">
                                                    <i class="fas fa-camera w-t"></i> Upload Image
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="time-label">
                                        <span class="d-block border-0 p-3 text-center">
                                            <button type="button" class="btn btn-sm btn-info" id="back-to-list"
                                                    style="min-width: 90px">
                                                Back to List
                                            </button>
                                            <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearQuotes()">Reset</button>
                                            <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateQuotes()">{{newQuotes.Mode}}</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.row -->
        </div>
    </section>
    @*Photo upload Model*@
    <div class="modal fade" id="updatePhoto" tabindex="-1" aria-labelledby="updatePhotoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updatePhotoLabel">Upload Photo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="flaticon-close"></i>
                    </button>
                </div>
                <div class="modal-body text-center" border-0 pb-0" file-dropzone="[image/png, image/jpeg]"
                     data-max-file-size="3" ng-model="newQuotes.Photo_TMP" @*after-selected="AddQuotesPhoto()"*@ fileread="newQuotes.PhotoData">
                    <div class="photo-upload-wrap">
                        <span class="static-content">
                            <img ng-src="{{newQuotes.PhotoData  || newQuotes.ImagePath}}" class="img-fluid" id="imgPhoto">
                            <span>Drag & Drop your<br>image here</span>
                        </span>
                    </div>
                    <div class="text-muted pb-3">or</div>
                    <label for="choose-file" type="button" class="btn btn-secondary btn-light btn-sm">Upload Image</label>
                    <input id="choose-file" type="file" accept=".jpg,.jpeg,.pdf,doc,docx,application/msword,.png" style="display: none;" file-model ng-model="newQuotes.Photo_TMP" @*after-selected="AddVideosPhoto()"*@ fileread="newQuotes.PhotoData" />
                    <a ng-click="ClearQuotesPhoto()" href="#" class="text-danger d-block mt-3">remove current image</a>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-dafault" data-dismiss="modal">Ok</button>
                    @*<button type="button" class="btn btn-secondary px-4" ng-click="AddAuthorImage()">Save</button>*@
                </div>
            </div>
        </div>
    </div>
    <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="PersonalImg" role="dialog" tabindex="-1" style="margin-top:50px;">
        <div class="modal-dialog" role="document" style="margin-top: 0; width: auto; max-width: 90vw; padding: 3px; display: flex; justify-content: center; align-items: center;">
            <div class="modal-content" style="width: auto; display: inline-block; padding: 10px;">
                <div class="modal-body p-0" style="padding: 10px;">
                    <img ng-src="{{viewImg.ContentPath}}" alt="" id="modalImage" style="display: block; width: 100%; height: auto; max-height: 70vh; object-fit: contain;">
                </div>
                <div class="modal-footer px-0 pt-2 pb-0" style="display: flex; justify-content: flex-end; gap: 3px;">
                    <a href="{{viewImg.ContentPath}}" class="btn btn-sm btn-success" target="_blank" download style="text-decoration: none; font-size: 14px;">Download</a>
                    <button class="btn btn-danger btn-rounded btn-sm text-center" data-dismiss="modal" type="button" style="min-width: 80px;">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

