<script src="~/jslib/AppCMS/CommitteHeirarchy.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="CommitteHeirarchyController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top: 52px!important;">
                <div class="tab-content">
                    <div id="sh-table-listing" >
                        <div class="card py-2">
                            <header class="row">
                                <div class="col-md-7">
                                    <div class="clearfix">
                                        <form class="form-inline mb-2">
                                            <div class="input-group input-group-sm mr-sm-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text cstm">Show</span>
                                                </div>
                                                <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                                <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.CommitteHierarchy">
                                                    <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.CommitteHierarchy">{{pp.text}}</option>
                                                </select>
                                                <div class="input-group-append">
                                                    <span class="input-group-text bg-white"><small>entries</small></span>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm table-search-filed">
                                                <input class="form-control form-control-navbar" type="search" placeholder="Search"
                                                       aria-label="Search" ng-model="searchData.CommitteHierarchy" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-default border-left-0" type="submit">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!-- end col-md-8 -->
                                <div class="col-md-5 text-right">

                                    <div class="dropdown dnld-file" data-toggle="tooltip" data-placement="top" title="Download File">
                                        <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button" id="dropdownMenuButton"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-download"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                            <span class="dropdown-item">Choose an option:</span>
                                            <a class="dropdown-item wait" export-excel table-id="'#main-table'" sheet-name="'CommitteeHeirarchy'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                            <a class="dropdown-item wait" onClick="$('#main-table').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>

                                        </div>
                                    </div>
                                    <a print-tbl table-id="'#main-table'" class="btn btn-secondary btn-light btn-sm wait" title="Print">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-success" id="add-member" style="min-width: 90px">
                                        <i class="fas fa-plus w-t"></i> Add Executive Members
                                    </button>
                                </div>
                            </header>
                            <div>
                                <div class="table-scroll-x-y sales-main-table table-scroll">
                                    <table id="main-table"
                                           class="main-table table table-sm table-bordered bg-white">
                                        <thead>
                                            <tr>
                                                <th style="width: 70px">S.No.</th>
                                                <th style="width: 170px">Designation</th>
                                                <th style="width: 300px">Name</th>
                                                <th style="width: 300px">Department</th>
                                                <th style="width: 150px">Contact No.</th>
                                                <th style="width: 90px">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="cl in CommitteHierarchyList | filter:searchData.CommitteHierarchy | itemsPerPage: perPage.CommitteHierarchy" current-page="currentPages.CommitteHierarchy" pagination-id="CommitteHierarchyPagination">
                                                <td>{{cl.OrderNo}}</td>
                                                <td>{{cl.Designation}}</td>
                                                <td>{{cl.FullName}}</td>
                                                <td>{{cl.Department}}</td>
                                                <td>{{cl.ContactNo}}</td>
                                                <td>
                                                    <a class="p-1" href="#" ng-click="ShowPersonalImg(cl)">
                                                        <i class="fas fa-eye text-secondary"></i>
                                                    </a>
                                                    <a class="p-1" href="#" ng-click="GetCommitteHierarchyById(cl)">
                                                        <i class="fas fa-edit text-info"></i>
                                                    </a>
                                                    <a class="p-1" href="#" ng-click="DelCommitteHierarchyById(cl)">
                                                        <i class="fas fa-trash-alt text-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!-- table end -->
                                </div>
                            </div>
                            <footer class="row align-items-center">
                                <div class="col-md-12">
                                    <dir-pagination-controls pagination-id="CommitteHierarchyPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                    </dir-pagination-controls>
                                </div>
                            </footer>
                        </div>
                    </div>
                    <!-- form area starts -->
                    <div id="sh-form">
                        <div class="card">
                            <div class="card-body py-2 px-0">
                                <div class="timeline-item">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="row">
                                                <!-- select for others -->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="">Full Name</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newCommitteHierarchy.FullName" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="">Designation</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newCommitteHierarchy.Designation" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="">Qualification</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newCommitteHierarchy.Qualification" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="">Contact</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newCommitteHierarchy.ContactNo" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="">Email</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newCommitteHierarchy.Email" />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="">Department</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newCommitteHierarchy.Department" />
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <label for="">Order No.</label>
                                                        <input type="number" class="form-control form-control-sm" ng-model="newCommitteHierarchy.OrderNo" />
                                                    </div>
                                                </div>
                                                <!-- fields after clicking radio button ends -->
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            @*<label for="" class="invisible">Photo</label>*@
                                            <div class="person-photo-attachment-wrap text-center">
                                                <div class="img-wrap mx-auto">
                                                    <img ng-src="{{newCommitteHierarchy.PhotoData || newCommitteHierarchy.ImagePath}}" class="img-fluid" alt="" id="imgPhoto1">
                                                </div>
                                                <!-- Button trigger modal -->
                                                <button type="button" class="btn btn-outline-secondary btn-sm" data-toggle="modal" data-target="#updatePhoto">
                                                    <i class="fas fa-camera w-t"></i> Upload Image
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="table-scroll-x-y sales-main-table table-scroll mt-2">
                                        <table id="main-table"
                                               class="main-table table table-sm table-bordered bg-white">
                                            <thead>
                                                <tr>
                                                    <th style="width: 60px">S.No</th>
                                                    <th style="width: 120px">Social Media</th>
                                                    <th class="text-center" style="width: 80px">
                                                        Icons
                                                    </th>
                                                    <th style="width:400px">URl</th>
                                                    <th class="text-center" style="width: 90px">Show/Hide</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="sm in newCommitteHierarchy.SocialMediaColl">
                                                    <td>
                                                        {{sm.OrderNo}}
                                                    </td>
                                                    <td>
                                                        {{sm.Name}}
                                                    </td>
                                                    <td class="text-center">
                                                        <label for="choosefbfile{{$index}}">  <img src="{{sm.IconPath}}" style="height:35px;" /></label>
                                                    </td>
                                                    <td><input type="text" class="form-control form-control-sm" ng-model="sm.UrlPath" /></td>
                                                    <td class="text-center">
                                                        <div class="btn-group btn-group-toggle ml-2" data-toggle="buttons" style="border: 1px solid #76be4e; border-radius: 12px;">
                                                            <label class="btn btn-sm bg-default py-0" style="border-radius: 11px;" ng-class="(sm.IsActive==true ? 'active' : '')">
                                                                <input type="radio" name="options" autocomplete="off" ng-value="true" ng-model="sm.IsActive"> Show
                                                            </label>
                                                            <label class="btn btn-sm bg-default py-0" style="border-radius: 11px;" ng-class="(sm.IsActive==false ? 'active' : '')">
                                                                <input type="radio" name="options" autocomplete="off" ng-value="false" ng-model="sm.IsActive">
                                                                Hide
                                                            </label>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                        <!-- table end -->
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="time-label">
                                                <span class="d-block border-0 p-3 text-center">
                                                    <button type="button" class="btn btn-sm btn-info" id="back-to-Committe-list"
                                                            style="min-width: 90px">
                                                        Back to List
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-default" style="min-width: 90px" ng-click="ClearCommitteHierarchy()">
                                                        Reset
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-success" style="min-width: 90px" ng-click="SaveUpdateCommitteHierarchy()">
                                                        {{newCommitteHierarchy.Mode}}
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                        <!-- col-md-9 -->

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- form area ends -->
                </div>
            </section>
        </div>
    </section>

    <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="PersonalImg" role="dialog" tabindex="-1" style="margin-top:50px;">
        <div class="modal-dialog" role="document" style="margin-top: 0; width: auto; max-width: 90vw; padding: 3px; display: flex; justify-content: center; align-items: center;">
            <div class="modal-content" style="width: auto; display: inline-block; padding: 10px;">
                <div class="modal-body p-0" style="padding: 10px;">
                    <img ng-src="{{viewImg.ContentPath}}" alt="" id="modalImage" style="display: block; width: 100%; height: auto; max-height: 70vh; object-fit: contain;">
                </div>
                <div class="modal-footer px-0 pt-2 pb-0" style="display: flex; justify-content: flex-end; gap: 3px;">
                    <a href="{{viewImg.ContentPath}}" class="btn btn-sm btn-success" target="_blank" download style="text-decoration: none; font-size: 14px;">Download</a>
                    <button class="btn btn-danger btn-rounded btn-sm text-center" data-dismiss="modal" type="button" style="min-width: 80px;">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Committe Heirarchy photo model -->
    <div class="modal fade" id="updatePhoto" tabindex="-1" aria-labelledby="updatePhotoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updatePhotoLabel">Upload Photo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="flaticon-close"></i>
                    </button>
                </div>
                <div class="modal-body text-center" border-0 pb-0" file-dropzone="[image/png, image/jpeg]"
                     data-max-file-size="3" ng-model="newCommitteHierarchy.Photo_TMP" @*after-selected="AddCommitteHierarchyPhoto()"*@ fileread="newCommitteHierarchy.PhotoData">
                    <div class="photo-upload-wrap">
                        <span class="static-content">
                            <img ng-src="{{newCommitteHierarchy.PhotoData || newCommitteHierarchy.ImagePath}}" class="img-fluid" id="imgPhoto">
                            <span>Drag & Drop your<br>image here</span>
                        </span>
                    </div>
                    <div class="text-muted pb-3">or</div>
                    <label for="choose-file" type="button" class="btn btn-secondary btn-light btn-sm">Upload Image</label>
                    <input id="choose-file" type="file" accept=".jpg,.jpeg,.pdf,doc,docx,application/msword,.png" style="display: none;" file-model ng-model="newCommitteHierarchy.Photo_TMP" @*after-selected="AddStudentPhoto()"*@ fileread="newCommitteHierarchy.PhotoData" />
                    <a ng-click="ClearCommitteHierarchyPhoto()" href="#" class="text-danger d-block mt-3">remove current image</a>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-dafault" data-dismiss="modal">Ok</button>
                    @*<button type="button" class="btn btn-secondary px-4" ng-click="AddCommitteHierarchyImage()">Save</button>*@
                </div>
            </div>
        </div>
    </div>
</div>






