
<script src="~/jslib/appcms/nepalimonth.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="NepaliMonthController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content" id="table-listing" style="margin-top: -10px;">
                    <div class="card p-2">
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table"
                                       class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 80px">S.No</th>
                                            <th style="width: 220px">Month Name</th>                                           
                                            <th style="width:120px">Order No.</th>
                                            <th class="text-center" style="width: 90px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="sm in NepaliMonthList">
                                            <td>
                                                <input  type="number" class="form-control form-control-sm" ng-model="sm.NM" />                                                
                                            </td>
                                            <td>
                                                <input type="text" class="form-control form-control-sm" ng-model="sm.Name"/>                                                
                                            </td>
                                            <td>
                                                <input type="number" class="form-control form-control-sm" ng-model="sm.SNo" />                                                
                                            </td>  
                                            <td class="text-center" ng-show="sm.NM>15">                                                
                                                <a class="p-1 btn btn-sm btn-default" ng-click="delURL($index)">
                                                    <i class="fas fa-trash-alt w-t text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- table end -->
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <div class="float-right">
                                        <a class="p-1 btn btn-sm btn-default" ng-click="AddNewUrl($index)">
                                            <i class="fas fa-plus text-primary"></i>
                                        </a>

                                    </div>
                                </div>
                            </div>

                            <div class="time-label mt-3">
                                <span class="d-block border-0 p-3 text-center">
                                    <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;">Reset</button>
                                    <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="CallSaveUpdateMonth()">Save</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>


