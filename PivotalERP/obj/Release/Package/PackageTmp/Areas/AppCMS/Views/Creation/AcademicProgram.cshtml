
<script src="~/jslib/appcms/AcademicProgram.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="AcademicProgramsController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top: 52px!important;">
                <div class="tab-content" id="table-listing">
                    <div id="acad-prog-table-listing">
                        <!-- Second Tab Content -->
                        <div class="card">
                            <header class="row">
                                <div class="col-md-7">
                                    <div class="clearfix">
                                        <form class="form-inline mb-2">
                                            <div class="input-group input-group-sm mr-sm-2">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text cstm">Show</span>
                                                </div>
                                                <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                                <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.AcademicPrograms">
                                                    <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.AcademicPrograms">{{pp.text}}</option>
                                                </select>
                                                <div class="input-group-append">
                                                    <span class="input-group-text bg-white"><small>entries</small></span>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm table-search-filed">
                                                <input class="form-control form-control-navbar"
                                                       type="search" placeholder="Search"
                                                       aria-label="Search" ng-model="searchData.AcademicPrograms">
                                                <div class="input-group-append">
                                                    <button class="btn btn-default border-left-0" type="submit">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!-- end col-md-8 -->
                                <div class="col-md-5 text-right">

                                    <div class="dropdown dnld-file" data-toggle="tooltip" data-placement="top"
                                         title="Download File">
                                        <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                            <i class="fas fa-download"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                            <span class="dropdown-item">Choose an option:</span>
                                            <a class="dropdown-item wait" export-excel table-id="'#main-table'" sheet-name="'AcademicProgram'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                            <a class="dropdown-item wait" onClick="$('#main-table').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>

                                        </div>
                                    </div>
                                    <a print-tbl table-id="'#main-table'" class="btn btn-secondary btn-light btn-sm wait" title="Print">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-success" id="add-acad-prog"
                                            style="min-width: 90px">
                                        <i class="fas fa-plus w-t"></i> Add Academic Programs
                                    </button>
                                </div>
                            </header>
                            <div>
                                <div class="table-scroll-x-y sales-main-table table-scroll">
                                    <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                        <thead>
                                            <tr>
                                                <th style="width: 50px">Order No.</th>
                                                @*<th style="width: 200px">Submenu Title</th>*@
                                                <th style="width: 200px">Heading</th>
                                                <th style="width: 300px">Description</th>
                                                <th style="width: 100px">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="cl in AcademicProgramsList | filter:searchData.AcademicPrograms | itemsPerPage: perPage.AcademicPrograms" current-page="currentPages.AcademicPrograms" pagination-id="AcademicProgramsPagination">
                                                <td>{{cl.OrderNo}}</td>
                                                @*<td>{{cl.SubmenuTitle}}</td>*@
                                                <td>{{cl.Title}}</td>
                                                <td>{{cl.Description}}</td>
                                                <td>
                                                    <a class="p-1" href="#" ng-click="ShowPersonalImg(cl)">
                                                        <i class="fas fa-eye text-secondary"></i>
                                                    </a>
                                                    <a class="p-1" href="#" ng-click="GetAcademicProgramsById(cl)">
                                                        <i class="fas fa-edit text-info"></i>
                                                    </a>
                                                    <a class="p-1" href="#" ng-click="DelAcademicProgramsById(cl)">
                                                        <i class="fas fa-trash-alt text-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!-- table end -->
                                </div>
                            </div>
                            <footer class="row align-items-center">
                                <div class="col-md-12">
                                    <dir-pagination-controls pagination-id="AcademicProgramsPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                    </dir-pagination-controls>
                                </div>
                            </footer>
                        </div>
                    </div>
                    <!-- form area starts -->
                    <div id="acad-prog-form">
                        <div class="card">
                            <div class="card-body p-2">
                                <div class="timeline-item">
                                    <div class="row">
                                        <div class="col-md-9">
                                            <div class="row">
                                                @*<div class="col-md-12">
                                                        <div class="form-group">
                                                            <label for="">Submenu Title</label>
                                                            <input type="text" class="form-control form-control-sm" ng-model="newAcademicPrograms.SubmenuTitle" />
                                                        </div>
                                                    </div>*@
                                                <div class="col-md-9">
                                                    <div class="form-group">
                                                        <label for="">Heading</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newAcademicPrograms.Title" />
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label for="">Order No.</label>
                                                        <input type="number" class="form-control form-control-sm" ng-model="newAcademicPrograms.OrderNo" />
                                                    </div>
                                                </div>
                                                <!-- fields after clicking radio button ends -->
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Description</label>
                                                        <textarea class="form-control form-control-sm" rows="1" ng-model="newAcademicPrograms.Description"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="">Content</label>
                                                        <textarea class="textarea" placeholder="Place some text here"
                                                                  style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" html-editor ng-model="newAcademicPrograms.Content"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <label for="" class="invisible">Photo</label>
                                            <div class="person-photo-attachment-wrap text-center">
                                                <div class="img-wrap mx-auto" style="width:100%">
                                                    <img ng-src="{{newAcademicPrograms.PhotoDataAcadImage || newAcademicPrograms.ImagePath }}" class="img-fluid" alt="" id="imgAcadImage1" style="height:240px; width:100%;">
                                                </div>
                                                <label for="choose-sfile" type="button" class="btn btn-outline-secondary btn-sm mt-1 mb-0"> <i class="fas fa-camera w-t"></i> Upload Image</label>
                                                <input id="choose-sfile" type="file" accept=".jpg,.jpeg,.pdf,doc,docx,application/msword,.png" style="display: none;" file-model ng-model="newAcademicPrograms.PhotoAcadImage_TMP" fileread="newAcademicPrograms.PhotoDataAcadImage" />
                                                <canvas id="canvas" width="320" height="240" style="display:none"></canvas>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="time-label">
                                        <span class="d-block border-0 p-3 text-center">
                                            <button type="button" class="btn btn-sm btn-info" id="back-to-acad-prog-list"
                                                    style="min-width: 90px">
                                                Back to List
                                            </button>
                                            <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearAcademicPrograms()">Reset</button>
                                            <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateAcademicPrograms()">{{newAcademicPrograms.Mode}}</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>


    <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="PersonalImg" role="dialog" tabindex="-1" style="margin-top:50px;">
        <div class="modal-dialog" role="document" style="margin-top: 0; width: auto; max-width: 90vw; padding: 3px; display: flex; justify-content: center; align-items: center;">
            <div class="modal-content" style="width: auto; display: inline-block; padding: 10px;">
                <div class="modal-body p-0" style="padding: 10px;">
                    <img ng-src="{{viewImg.ContentPath}}" alt="" id="modalImage" style="display: block; width: 100%; height: auto; max-height: 70vh; object-fit: contain;">
                </div>
                <div class="modal-footer px-0 pt-2 pb-0" style="display: flex; justify-content: flex-end; gap: 3px;">
                    <a href="{{viewImg.ContentPath}}" class="btn btn-sm btn-success" target="_blank" download style="text-decoration: none; font-size: 14px;">Download</a>
                    <button class="btn btn-danger btn-rounded btn-sm text-center" data-dismiss="modal" type="button" style="min-width: 80px;">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>