                    <!-- /.timeline-label -->
                    <!-- timeline item -->
                    <div>
                        <!-- <i class="fas fa-envelope bg-blue"></i> -->
                        <div class="timeline-item">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="row">

                                        <!-- select for others -->
                                        <div class="col-md-12" id="meet-others">
                                            <div class="form-group">
                                                <label for="">Headline</label>
                                                <input type="text"
                                                       class="form-control form-control-sm" ng-model="newNotice.HeadLine" />
                                            </div>
                                        </div>
                                        <!-- fields after clicking radio button ends -->
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea class="form-control form-control-sm" ng-model="newNotice.Description"
                                                          rows="1"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="">Notice Date</label>
                                                <input type="text"
                                                       class="form-control form-control-sm" date-picker ng-model="newNotice.NoticeDate_TMP" date-detail="newNotice.NoticeDateDet" before-days="0" after-days="40">
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="">Published on</label>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <input type="text"
                                                               class="form-control form-control-sm" date-picker ng-model="newNotice.PublishedOn_TMP" date-detail="newNotice.PublishedOnDet" before-days="0" after-days="40">
                                                    </div>
                                                    <div class="col-md-6">
                                                        <input type="time" class="form-control form-control-sm" ng-model="newNotice.PublishTime_TMP" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for=""> Valid Upto</label>
                                                <input type="text"
                                                       class="form-control form-control-sm" date-picker ng-model="newNotice.ValidUpto_TMP" date-detail="newNotice.ValidUptoDet" before-days="0" after-days="365">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="">Order No.</label>
                                                <input type="text"
                                                       class="form-control form-control-sm" ng-model="newNotice.OrderNo" />
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" type="checkbox" ng-model="newNotice.ShowInApp"
                                                       id="customCheckboxapp" value="option1">
                                                <label for="customCheckboxapp"
                                                       class="custom-control-label">
                                                    Show in App
                                                </label>
                                            </div>

                                        </div>
                                        <div class="col-md-2">
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" type="checkbox" ng-model="newNotice.ShowInWebsite"
                                                       id="customwebsite" value="option1">
                                                <label for="customwebsite"
                                                       class="custom-control-label">
                                                    Show in Website
                                                </label>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- col-md-9 -->
                                <div class="col-md-3">
                                    <label for="" class="invisible">Photo</label>
                                    <div class="person-photo-attachment-wrap text-center">
                                        <div class="img-wrap mx-auto">
                                            <img ng-src="{{newNotice.PhotoData || newNotice.ImagePath}}" class="img-fluid" alt="" id="imgPhoto1">
                                        </div>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-outline-secondary btn-sm" data-toggle="modal" data-target="#updatePhoto">
                                            <i class="fas fa-camera w-t"></i> Upload Photo
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
