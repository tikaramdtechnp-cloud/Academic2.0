<style>
    .card-head {
        padding: 0px 15px !important;
    }
</style>
<link href="~/wwwroot/dynamic/css/lessonplan.css" rel="stylesheet" />
<script src="~/jslib/appcms/Program.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="ProgramController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content">
                    <!-- Third Tab Content -->
                    <div id="root">
                        <div class="card-primary card-tabs">
                            <header class="if-page-have-nav-tabs px-2">
                                <div class="row upper-tab">
                                    <div class="col-md-12">
                                        <ul class="nav nav-tabs cstm-nav-tabs-border-bottom-active" id="myTab" role="tablist">
                                            <li class="nav-item" role="presentation">
                                                <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                                                   aria-controls="profile" aria-selected="false">Program</a>
                                            </li>
                                            <li class="nav-item" role="presentation">
                                                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab"
                                                   aria-controls="contact" aria-selected="false">Syllabus</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </header>
                            <div class="tab-content" id="myTabContent">
                                <!--Program Tab Starts-->
                                <div class="tab-pane fade main-section active show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <div class="Program-section mt-2" id="Program-section">
                                        <header class="row">
                                            <div class="col-md-7">
                                                <div class="clearfix">
                                                    <form class="form-inline">

                                                        <div class="input-group input-group-sm mr-sm-2">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text cstm">Show</span>
                                                            </div>
                                                            <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                                            <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.Program">
                                                                <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.Program">{{pp.text}}</option>
                                                            </select>
                                                            <div class="input-group-append">
                                                                <span class="input-group-text bg-white"><small>entries</small></span>
                                                            </div>
                                                        </div>
                                                        <div class="input-group input-group-sm table-search-filed">
                                                            <input class="form-control form-control-navbar" type="search"
                                                                   placeholder="Search" aria-label="Search" ng-model="searchData.Program">
                                                            <div class="input-group-append">
                                                                <button class="btn btn-default border-left-0" type="submit">
                                                                    <i class="fas fa-search"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                            <!-- end col-md-8 -->
                                            <div class="col-md-5 text-right">

                                                <div class="dropdown dnld-file" data-toggle="tooltip"
                                                     data-placement="top" title="Download File">
                                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                                            id="dropdownMenuButton" data-toggle="dropdown"
                                                            aria-haspopup="true" aria-expanded="false">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-right"
                                                         aria-labelledby="dropdownMenuButton">
                                                        <span class="dropdown-item">Choose an option:</span>
                                                        <a class="dropdown-item wait" export-excel table-id="'#main-table'" sheet-name="'Program'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                                        <a class="dropdown-item wait" onClick="$('#main-table').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>

                                                    </div>
                                                </div>
                                                <a print-tbl table-id="'#main-table'" class="btn btn-secondary btn-light btn-sm wait" title="Print">
                                                    <i class="fas fa-print"></i>
                                                </a>

                                                <button type="button" class="btn btn-sm btn-success" id="add-Program" style="min-width: 90px;">
                                                    <i class="fas fa-plus w-t"></i> Add Program
                                                </button>

                                            </div>
                                        </header>
                                        <div>
                                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                                <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                                    <thead class=" text-nowrap">
                                                        <tr>
                                                            <th style="width: 50px;">Order No</th>
                                                            <th style="width: 200px;">Program Name</th>

                                                            <th style="width: 450px;">Description</th>
                                                            <th style="width: 70px;">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr dir-paginate="bl in ProgramList | filter:searchData.Program | itemsPerPage: perPage.Program" current-page="currentPages.Program" pagination-id="ProgramPagination">
                                                            <td>{{bl.OrderNo}}</td>
                                                            <td>{{bl.Name}}</td>

                                                            <td>{{bl.Description}}</td>
                                                            <td class="">
                                                                <a class="p-1" href="#" ng-click="GetProgramById(bl)">
                                                                    <i class="fas fa-edit text-info"></i>
                                                                </a>
                                                                <a class="p-1" href="#" ng-click="DelProgramById(bl)">
                                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <!-- table end -->
                                        </div>
                                        <footer class="row align-items-center">
                                            <div class="col-md-12">
                                                <dir-pagination-controls pagination-id="ProgramPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                                </dir-pagination-controls>
                                            </div>
                                        </footer>
                                    </div>

                                    <!-- form area starts -->
                                    <div id="Program-form">
                                        <div class="card card-default">

                                            <div class="card-body px-0 py-2">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label for="">Program Name</label>
                                                                    <input type="text"
                                                                           class="form-control form-control-sm" ng-model="newProgram.Name" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="form-group">
                                                                    <label for="">Order No</label>
                                                                    <input type="number"
                                                                           class="form-control form-control-sm" ng-model="newProgram.OrderNo" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label for="">Description</label>
                                                                    <textarea class="textarea" placeholder="Place some text here" style="
                                                                          width: 100%;
                                                                          height: 200px;
                                                                          font-size: 14px;
                                                                          line-height: 18px;
                                                                          border: 1px solid #dddddd;
                                                                          padding: 10px;
                                                                        " ng-model="newProgram.Description" html-editor></textarea>
                                                                    <!--<textarea class="textarea"
                                                                              style="width: 100%; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"--> @*html-editor*@ <!--ng-model="newProgram.Description"></textarea>-->
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <!-- timeline time label -->
                                            <div class="time-label pb-3">
                                                <span class="d-block border-0 p-1 text-center">
                                                    <button type="button" class="btn btn-sm btn-info" id="back-to-list-Program" style="min-width: 90px;">Back To List</button>
                                                    <button type="button"
                                                            class="btn btn-sm btn-default"
                                                            style="min-width: 90px" ng-click="ClearProgram()">
                                                        Reset
                                                    </button>
                                                    <button type="button"
                                                            class="btn btn-sm btn-success"
                                                            style="min-width: 90px" ng-click="SaveUpdateProgram()">
                                                        {{newProgram.Mode}}
                                                    </button>
                                                </span>
                                            </div>
                                            <!-- /.timeline-label -->
                                        </div>

                                    </div>

                                    <!-- form area ends -->
                                </div>
                                <!--Program Tab Ends-->
                                <!--Syllabus Tab Starts-->
                                <div class="tab-pane fade main-section" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                    <div class="tab-content" id="table-listing">
                                        <div class="Syllabus-section mt-2" id="Syllabus-section">
                                            <header class="row">
                                                <div class="col-md-7">
                                                    <div class="clearfix">
                                                        <form class="form-inline">

                                                            <div class="input-group input-group-sm mr-sm-2">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text cstm">Show</span>
                                                                </div>
                                                                <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                                                <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.Syllabus">
                                                                    <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.Syllabus">{{pp.text}}</option>
                                                                </select>
                                                                <div class="input-group-append">
                                                                    <span class="input-group-text bg-white"><small>entries</small></span>
                                                                </div>
                                                            </div>
                                                            <div class="input-group input-group-sm table-search-filed">
                                                                <input class="form-control form-control-navbar" type="search"
                                                                       placeholder="Search" aria-label="Search" ng-model="searchData.Syllabus">
                                                                <div class="input-group-append">
                                                                    <button class="btn btn-default border-left-0" type="submit">
                                                                        <i class="fas fa-search"></i>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                                <!-- end col-md-8 -->
                                                <div class="col-md-5 text-right">

                                                    <div class="dropdown dnld-file" data-toggle="tooltip"
                                                         data-placement="top" title="Download File">
                                                        <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                                                id="dropdownMenuButton" data-toggle="dropdown"
                                                                aria-haspopup="true" aria-expanded="false">
                                                            <i class="fas fa-download"></i>
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-right"
                                                             aria-labelledby="dropdownMenuButton">
                                                            <span class="dropdown-item">Choose an option:</span>
                                                            <a class="dropdown-item wait" export-excel table-id="'#main-table1'" sheet-name="'Syllabus'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                                            <a class="dropdown-item wait" onClick="$('#main-table1').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>

                                                        </div>
                                                    </div>
                                                    <a print-tbl table-id="'#main-table1'" class="btn btn-secondary btn-light btn-sm wait" title="Print">
                                                        <i class="fas fa-print"></i>
                                                    </a>

                                                    <button type="button" class="btn btn-sm btn-success" id="add-Syllabus" style="min-width: 90px;">
                                                        <i class="fas fa-plus w-t"></i> Add Syllabus
                                                    </button>

                                                </div>
                                            </header>
                                            <div>
                                                <div class="table-scroll-x-y sales-main-table table-scroll">
                                                    <table id="main-table1" class="main-table table table-sm table-bordered bg-white">
                                                        <thead class=" text-nowrap">
                                                            <tr>
                                                                <th style="width: 60px;">S.No.</th>
                                                                <th style="width: 270px;">Syllabus </th>
                                                                <th style="width: 120px;">Program</th>
                                                                <th style="width: 120px;">No Of Syllabus</th>
                                                                <th style="width: 70px;">Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr dir-paginate="bl in SyllabusList | filter:searchData.Syllabus | itemsPerPage: perPage.Syllabus" current-page="currentPages.Syllabus" pagination-id="SyllabusPagination">
                                                                <td>{{$index+1}}</td>
                                                                <td>{{bl.Name}}</td>
                                                                <td>{{bl.Program}}</td>
                                                                <td>{{bl.NoOfSyllabus}}</td>
                                                                <td class="">
                                                                    <a class="p-1" href="#" ng-click="GetSyllabusPlanById(bl)">
                                                                        <i class="fas fa-edit text-info"></i>
                                                                    </a>
                                                                    <a class="p-1" href="#" ng-click="DelSyllabusById(bl)">
                                                                        <i class="fas fa-trash-alt text-danger"></i>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <!-- table end -->
                                            </div>
                                            <footer class="row align-items-center">
                                                <div class="col-md-12">
                                                    <dir-pagination-controls pagination-id="SyllabusPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                                    </dir-pagination-controls>
                                                </div>
                                            </footer>
                                        </div>

                                        <!-- form area starts -->
                                        <div id="Syllabus-form">
                                            <div class="card card-default">

                                                <div class="card-body px-0 py-2">

                                                    <div class="row mt-2">
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label for="">Syllabus Name</label>
                                                                <input type="text"
                                                                       class="form-control form-control-sm" ng-model="newSyllabus.Name" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label>Program</label>
                                                                <select class="form-control form-control-sm select2" ng-model="newSyllabus.ProgramId">
                                                                    <option ng-value="cl.ProgramId" ng-repeat="cl in ProgramList" ng-selected="newSyllabus.ProgramId == cl.ProgramId">{{cl.Name}}</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <div class="quantity">
                                                                <label>Number of Option</label>
                                                                <div class="input-group">
                                                                    <input type="number" id="quantity" name="quantity" class="input-number form-control form-control-sm addsubtip" ng-model="newSyllabus.NoOfSyllabus" min="1" max="100" ng-change="ChangeNoOfSyllabus()">
                                                                    <span class="input-group-btn">
                                                                        <button class="quantity-left-minus btn  btn-sm btn btn-number" data-type="plus" data-field="" ng-click="addNL(-1)">
                                                                            <i class="fas fa-minus subt"></i>
                                                                        </button>
                                                                    </span>
                                                                    <span class="input-group-btn">
                                                                        <button class="quantity-right-plus btn btn-number btn-sm btn" data-type="minus" data-field="" ng-click="addNL(1)">
                                                                            <i class="fas fa-plus add"></i>
                                                                        </button>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="accordion" id="accordionExample2" style="margin-top: 0;">
                                                        <div class="card">
                                                            <div id="headingTwo">
                                                                <h2 class="mb-0 collapsed" @*data-toggle="collapse"
                                                        data-target="#collapseTwo" aria-expanded="false"
                                                        aria-controls="collapseTwo"*@>
                                                                    <span class="acc_open">Syllabus Details</span>

                                                                </h2>
                                                            </div>
                                                            <div id="collapseTwo" class="collapse show"
                                                                 aria-labelledby="headingTwo"
                                                                 data-parent="#accordionExample2">
                                                                <div class="card-body">
                                                                    <div class="timeline-item">
                                                                        <div class="row">
                                                                            <div class="col-md-4 addtopic">
                                                                                <label>Program Category and Its Subjects</label>
                                                                                <div class="lesson" ng-repeat="ld in newSyllabus.DetailsColl" @*ng-class="{{ld.SNo==1 ? 'activetopic':''}}"*@>
                                                                                    <div class="d-flex">
                                                                                        <i class="fas fa-caret-right mr-3"></i>
                                                                                        <div><label class="numbering">{{ld.SNo}}</label></div>
                                                                                        <div class="titleName">
                                                                                            <input class="form-control form-control-sm txtip" placeholder="Syllabus name" ng-model="ld.SyllabusName" ng-focus="ChangeCurrentSyllabus(ld)" @*ng-click="GetSyllabusTopicById(ld)"*@>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-md-8">
                                                                                <div class="one-lesson-subtopic" ng-repeat="tc in CurrentSyllabus.TopicColl">
                                                                                    <div class="lesson">
                                                                                        <div class="d-flex">
                                                                                            <div><label class="numbering">{{CurrentSyllabus.SNo}}.{{tc.SNo}}</label></div>
                                                                                            <div class="titleName">
                                                                                                <input type="text" class="form-control form-control-sm txtip" placeholder="Syllabus topic name" ng-model="tc.TopicName">
                                                                                            </div>
                                                                                            <i class="fas fa-plus addicon ml-2" ng-show="tc.SNo==CurrentSyllabus.TopicColl.length" ng-click="AddTopic($index)"></i>
                                                                                            <i class="far fa-trash-alt delete-icon ml-2" ng-show="tc.SNo>1" ng-click="DelTopic($index)"></i>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- timeline time label -->
                                                <div class="time-label pb-3">
                                                    <span class="d-block border-0 p-1 text-center">
                                                        <button type="button" class="btn btn-sm btn-info" id="back-to-list-Syllabus" style="min-width: 90px;">Back To List</button>
                                                        <button type="button"
                                                                class="btn btn-sm btn-default"
                                                                style="min-width: 90px" ng-click="ClearSyllabus()">
                                                            Reset
                                                        </button>
                                                        <button type="button"
                                                                class="btn btn-sm btn-success"
                                                                style="min-width: 90px" ng-click="SaveUpdateSyllabus()">
                                                            {{newSyllabus.Mode}}
                                                        </button>
                                                    </span>
                                                </div>
                                                <!-- /.timeline-label -->
                                            </div>

                                        </div>

                                        <!-- form area ends -->
                                    </div>
                                </div>
                                <!--Syllabus Tab Ends-->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>