
<script src="~/jslib/export/tableExport.js"></script>
<script src="~/jslib/export/jquery.base64.js"></script>

@*<script src="~/jslib/export/html2canvas.js"></script>*@

<script src="~/jslib/export/jspdf/libs/sprintf.js"></script>
<script src="~/jslib/export/jspdf/jspdf.js"></script>
<script src="~/jslib/export/jspdf/libs/base64.js"></script>

<script src="~/jslib/AppCms/GrievanceRedressalTeam.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="GrievanceRedressalTeamController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style=" padding-top:50px !important;">
                <div class="tab-content">
                    <!--GrievanceRedressalTeam section-->
                    <div id="GrievanceRedressalTeam-section" class="card py-2">
                        <header class="row">
                            <div class="col-md-7">
                                <form class="form-inline clearfix">
                                    <div class="input-group input-group-sm mr-sm-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text cstm">Show</span>
                                        </div>

                                        <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.GrievanceRedressal">
                                            <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.GrievanceRedressal">{{pp.text}}</option>
                                        </select>

                                        <div class="input-group-append">
                                            <span class="input-group-text bg-white"><small>entries</small></span>
                                        </div>

                                        <div class="input-group input-group-sm table-search-filed ml-2">
                                            <input class="form-control form-control-navbar"
                                                   type="search"
                                                   placeholder="Search"
                                                   aria-label="Search"
                                                   ng-model="searchData.GrievanceRedressal" />
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0" type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-5 text-right">
                                <div class="dropdown dnld-file" data-toggle="tooltip"
                                     data-placement="top" title="Download File">
                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-download py-1"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="dropdownMenuButton">
                                        <span class="dropdown-item">Choose an option:</span>
                                        <a class="dropdown-item wait" export-excel table-id="'#main-table'" sheet-name="'ClassWiseSubject'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                        <a class="dropdown-item wait" onClick="$('#main-table').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                    </div>
                                </div>
                                <a print-tbl table-id="'#main-table'" class="btn btn-secondary mx-1 btn-light btn-sm wait"
                                   data-toggle="tooltip" data-placement="bottom"
                                   title="Print">
                                    <i class="fas fa-print py-1"></i>
                                </a>
                                <!-- Add Executive Members Button -->
                                <button type="button"
                                        id="add-Details"
                                        class="btn btn-sm btn-success"
                                        style="min-width: 90px;"
                                        ng-click="resetGrievanceRedressalTeam()">
                                    <i class="fas fa-plus w-t"></i> Add Executive Members
                                </button>
                            </div>

                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table" make-table-resizable
                                       class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 45px;text-align:center;" ng-click="sortGrievanceRedressal('OrderNo')">S.N</th>
                                            <th style="width: 100px" ng-click="sortGrievanceRedressal('Designation')">Designation</th>
                                            <th style="width: 150px" ng-click="sortGrievanceRedressal('Name')">Name</th>
                                            <th style="width: 100px" ng-click="sortGrievanceRedressal('Department')">Department</th>
                                            <th style="width: 100px">Contact No.</th>
                                            <th style="width: 60px;text-align:center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr dir-paginate="C in GrievanceRedressalList| filter:searchData.GrievanceRedressal | itemsPerPage: perPage.GrievanceRedressal|orderBy:sortKeys.GrievanceRedressal:reverses.GrievanceRedressal track by $index" current-page="currentPages.GrievanceRedressal" pagination-id="GrievanceRedressalPagination">

                                            <td style="text-align:center;">{{C.OrderNo}}</td>
                                            <td>{{C.Designation}}</td>
                                            <td>{{C.Name}}</td>
                                            <td>{{C.Department}}</td>
                                            <td>{{C.Contact}}</td>

                                            <td style="text-align:center;">
                                                <a class="p-1" href="#" ng-click="ShowPersonalImg(C)" ng-show="C.Image">
                                                    <i class="fas fa-eye text-secondary"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="GetGrievanceRedressalTeamById(C)">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelGrievanceRedressalTeam(C,$index)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <footer class="row align-items-center">
                            <div class="col-md-12">
                                <dir-pagination-controls pagination-id="GrievanceRedressalPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                </dir-pagination-controls>
                            </div>
                        </footer>
                    </div>
                    <div class="tab-content" id="myTabContent">
                        <!--GrievanceRedressalTeam form-->
                        <div id="GrievanceRedressalTeam-form" class="card p-0 mb-0">
                            <div class="card-body px-0 py-2">
                                <div class="row">
                                    <!-- Left Section: 2/3 width -->
                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Full Name<span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control form-control-sm" ng-model="addNewDetails.Name" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Designation<span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control form-control-sm" ng-model="addNewDetails.Designation" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Qualification</label>
                                                    <input type="text" class="form-control form-control-sm" ng-model="addNewDetails.Qualification" />
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Contact<span class="text-danger">*</span></label>
                                                    <input type="text" class="form-control form-control-sm" ng-model="addNewDetails.Contact" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="text" class="form-control form-control-sm" ng-model="addNewDetails.Email" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Department</label>
                                                    <input type="text" class="form-control form-control-sm" ng-model="addNewDetails.Department" />
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label>Order No.</label>
                                                    <input type="number"
                                                           ng-model="addNewDetails.OrderNo"
                                                           class="form-control form-control-sm"
                                                           step="1"
                                                           min="0"
                                                           placeholder="0" />
                                                </div>

                                            </div>

                                        </div>
                                    </div>

                                    <!-- Right Section: 1/3 width -->
                                    <div class="col-md-3">

                                        @* To show img *@
                                        <div class="mb-4" style="text-align: center;">
                                            <div class="person-photo-attachment-wrap text-center">
                                                <div class="img-wrap mx-auto">
                                                    <img ng-src="{{addNewDetails.PhotoData || addNewDetails.Image }}" class="img-fluid" alt="" id="imgPhoto1" width="320" height="240">
                                                </div>
                                                <label for="choose-file" type="button" class="btn btn-default btn-sm mt-1 mb-0">Upload Photo<span class="text-danger">*</span></label>
                                                <input id="choose-file" type="file" accept=".jpg,.jpeg,.pdf,doc,docx,application/msword,.png" style="display: none;" file-model ng-model="addNewDetails.Photo_TMP" fileread="addNewDetails.PhotoData" />
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>

                            <div class="text-center">
                                <button type="button"
                                        class="btn btn-sm btn-info text-center"
                                        id="back-Details"
                                        style="min-width: 90px">
                                    Back To List
                                </button>
                                <button type="button"
                                        class="btn btn-sm text-dark bg-white border"
                                        style="min-width: 90px;"
                                        ng-click="resetGrievanceRedressalTeam()">
                                    Reset
                                </button>

                                <button type="button"
                                        class="btn btn-sm btn-info text-center bg-success"
                                        style="min-width: 90px"
                                        ng-click="SaveUpdateGrievanceRedressalTeam()">
                                    Save
                                </button>
                            </div>
                        </div>

                    </div>
                    @*show this when click on eye icon*@
                    <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="PersonalImg" role="dialog" tabindex="-1" style="margin-top:50px;">
                        <div class="modal-dialog" role="document" style="margin-top: 0; width: auto; max-width: 90vw; padding: 3px; display: flex; justify-content: center; align-items: center;">
                            <div class="modal-content" style="width: auto; display: inline-block; padding: 10px;">
                                <div class="modal-body p-0" style="padding: 10px;">
                                    <img ng-src="{{viewImg.ContentPath}}" alt="" id="modalImage" style="display: block; width: 100%; height: auto; max-height: 70vh; object-fit: contain;">
                                </div>
                                <div class="modal-footer px-0 pt-2 pb-0" style="display: flex; justify-content: flex-end; gap: 3px;">
                                    <a href="{{viewImg.ContentPath}}" class="btn btn-sm btn-success" target="_blank" download style="text-decoration: none; font-size: 14px;">Download</a>
                                    <button class="btn btn-danger btn-rounded btn-sm text-center" data-dismiss="modal" type="button" style="min-width: 80px;">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </section>
        </div>
    </section>
</div>