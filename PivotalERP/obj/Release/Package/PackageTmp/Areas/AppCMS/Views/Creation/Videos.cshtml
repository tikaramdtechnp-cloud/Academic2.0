                                <div class="time-label">
                                    <span class="d-block border-0 p-3 text-center">
                                        <button type="button"
                                                class="btn btn-sm btn-info"
                                                id="back-to-list"
                                                style="min-width: 90px">
                                            Back to List
                                        </button>
                                        <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearVideos()">Reset</button>
                                        <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateVideos()">{{newVideos.Mode}}</button>
                                    </span>
                                </div>
                            </div>
                            <!-- col-md-9 -->

                        </div>
                    </div>
                </div>
                <!-- form area ends -->
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
