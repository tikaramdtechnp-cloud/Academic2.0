
<script src="~/jslib/appcms/Weekend.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="weekendController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="card p-2">
                    <label class="mb-4"><b>Days</b></label>
                    <div class="row">

                        <div class="col-md-7">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckboxsun" ng-model="WeekendList[0].IsChecked">
                                        <label for="customCheckboxsun" class="custom-control-label">{{WeekendList[0].DayName}}</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckboxmon"  ng-model="WeekendList[1].IsChecked">
                                        <label for="customCheckboxmon" class="custom-control-label">{{WeekendList[1].DayName}}</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckboxtue"  ng-model="WeekendList[2].IsChecked">
                                        <label for="customCheckboxtue" class="custom-control-label">{{WeekendList[2].DayName}}</label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckboxwed"  ng-model="WeekendList[3].IsChecked">
                                        <label for="customCheckboxwed" class="custom-control-label">{{WeekendList[3].DayName}}</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckboxthu"  ng-model="WeekendList[4].IsChecked">
                                        <label for="customCheckboxthu" class="custom-control-label">{{WeekendList[4].DayName}}</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckboxfri"  ng-model="WeekendList[5].IsChecked">
                                        <label for="customCheckboxfri" class="custom-control-label">{{WeekendList[5].DayName}}</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" type="checkbox" id="customCheckboxsat"  ng-model="WeekendList[6].IsChecked" checked>
                                        <label for="customCheckboxsat" class="custom-control-label">{{WeekendList[6].DayName}}</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 mt-4">
                        <div class="form-group">
                            <label for="">Color</label>
                            <input type="color"
                                   class="form-control form-control-sm"   ng-model="WeekendList[0].ColorCode"/>
                        </div>
                    </div>

                    <div class="time-label">
                        <span class="d-block border-0 p-3 text-center">
                            <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;">Reset</button>
                            <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateEventType()">Save</button>
                        </span>
                    </div>


                </div>
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->

</div>

