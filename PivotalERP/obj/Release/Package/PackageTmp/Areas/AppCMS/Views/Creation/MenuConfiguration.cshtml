
<script src="~/jslib/AppCMS/MenuConfiguration.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="MenuConfigController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="tab-content" id="table-listing" style="margin-top: -10px;">

                    <div class="card p-2">
                        <header class="row">
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px">
                                  Reset
                                </button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px" ng-click="SaveUpdateEntity()">
                                    <i class="fas fa-save w-t"></i> Save
                                </button>

                            </div>
                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll mt-2">
                                <table id="MenuConfiguration"
                                       class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 40px">S.No</th>
                                            <th style="width: 200px">Menu Name</th>
                                            <th style="width: 200px">Label</th>
                                            <th style="width:80px">Order No</th>
                                            <th class="text-center" style="width: 90px">Show/Hide</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="et in EntityColl">
                                            <td>{{$index+1}}</td>
                                            <td>{{et.Name}}</td>
                                            <td><input type="text" class="form-control form-control-sm" ng-model="et.Label" /></td>
                                            <td><input type="number" class="form-control form-control-sm" ng-model="et.OrderNo" /></td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-toggle ml-2" data-toggle="buttons" style="border: 1px solid #76be4e; border-radius: 12px;">
                                                    <label class="btn btn-sm bg-default py-0" style="border-radius: 11px;" ng-class="(et.IsActive==true ? 'active' : '')">
                                                        <input type="radio" name="options" autocomplete="off" ng-value="true" ng-model="et.IsActive"> Show
                                                    </label>
                                                    <label class="btn btn-sm bg-default py-0" style="border-radius: 11px;" ng-class="(et.IsActive==false ? 'active' : '')">
                                                        <input type="radio" name="options" autocomplete="off" ng-value="false" ng-model="et.IsActive">
                                                        Hide
                                                    </label>
                                                </div>
                                            </td>
                                        </tr>
                                    
                                    </tbody>
                                </table>
                                <!-- table end -->
                            </div>

                          
                        </div>
                       
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>




