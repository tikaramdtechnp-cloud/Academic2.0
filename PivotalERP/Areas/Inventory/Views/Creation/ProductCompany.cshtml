<script src="~/jslib/inventory/creation/ProductCompany.js?v=20251012"></script>
<div ng-app="myApp" ng-controller="ProductCompany" ng-class="{waiting: loadingstatus=='running'}" ng-init="GetProductCompany()" ng-cloak>
    <div class="container-fluid">
        <section class="iframe-content-starts-here" style="padding-top:50px!important">
            <div class="tab-content">
                <div class="card-primary card-tabs">
                    <div class="card-header with-gradient-bg p-0 border-bottom-0">
                        <div class="card-header p-0 border-bottom-0">
                            <ul class="nav nav-tabs pt-1" id="custom-tabs-four-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true"> List</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Product Company</a>
                                </li>
                            </ul>
                        </div>
                        </div>
                        <div class="card-body p-2">
                            <div class="tab-content" id="custom-tabs-four-tabContent">
                                <div class="tab-pane fade show active" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                                    <header class="row">
                                        <div class="col-md-8">
                                            <div class="clearfix">
                                                <form class="form-inline">
                                                    <div class="input-group input-group-sm">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text cstm">Show</span>
                                                        </div>
                                                        <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.ProductCompany">
                                                            <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.ProductCompany">{{pp.text}}</option>
                                                        </select>
                                                        <div class="input-group-append">
                                                            <span class="input-group-text bg-white"><small>entries</small></span>
                                                        </div>
                                                    </div>
                                                    <div class="input-group input-group-sm table-search-filed">
                                                        <input class="form-control form-control-navbar" type="search"
                                                               placeholder="Search" aria-label="Search" ng-model="searchData.ProductCompany">
                                                        <div class="input-group-append">
                                                            <button class="btn btn-default border-left-0" type="submit">
                                                                <i class="fas fa-search"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <!-- end col-md-8 -->
                                        <div class="col-md-4 text-right">
                                            <div class="dropdown dnld-file"
                                                 data-placement="top" title="Download File">
                                                <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                                        id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-download"></i>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-right"
                                                     aria-labelledby="dropdownMenuButton">
                                                    <span class="dropdown-item">Choose an option:</span>
                                                    <a class="dropdown-item wait" export-excel table-id="'#datatable'" sheet-name="'debtorcreditortypes'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                                    <a class="dropdown-item wait" onClick="$('#datatable').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                                   
                                                </div>
                                                <a print-tbl table-id="'#datatable'" class="btn btn-secondary btn-light btn-sm wait"
                                                   title="Print">
                                                    <i class="fas fa-print"></i>
                                                </a>
                                            </div>


                                        </div>
                                    </header>
                                    <div class="search-toolbar">
                                        <table cellpadding="12" class="table table-bordered table-striped table-hover table-sm mb-1" id="datatable">
                                            <thead>
                                                <tr>
                                                    <th style="text-align: center; width: 7%;">

                                                        S.No
                                                        <span class="glyphicon sort-icon" ng-show="sortKey=='ProductCompanyId'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                    </th>

                                                    <th ng-click="sort('Name')" style="text-align:left;width: 20% ;">
                                                        Name
                                                        <span class="glyphicon sort-icon" ng-show="sortKey=='Name'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                    </th>

                                                    <th ng-click="sort('Code')" style="text-align:left;width: 10%;">
                                                        Code
                                                        <span class="glyphicon sort-icon" ng-show="sortKey=='Code'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                    </th>
                                                    <th ng-click="sort('Address')" style="text-align:left;width:10%;">

                                                        Alias
                                                        <span class="glyphicon sort-icon" ng-show="sortKey=='Address'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                    </th>
                                                    <th ng-click="sort('ContactPerson')" style="text-align: left; width: 15%;">

                                                        Contact Person
                                                        <span class="glyphicon sort-icon" ng-show="sortKey=='ContactPerson'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                    </th>
                                                    <th ng-click="sort('Email')" style="text-align: left; width: 15%;">

                                                        Email
                                                        <span class="glyphicon sort-icon" ng-show="sortKey=='Email'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                    </th>

                                                    <th ng-click="sort('Website')" style="text-align: left; width: 15%;">

                                                        Website
                                                        <span class="glyphicon sort-icon" ng-show="sortKey=='Website'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                    </th>



                                                    <th style="text-align: center; width: 10%;">Action</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr dir-paginate="newProductCompany in CompanyColl|orderBy:sortKey:reverse|filter:searchData.ProductCompany|itemsPerPage:perPage.ProductCompany" current-page="currentPages.ProductCompany" pagination-id="ProductCompanyPagination">


                                                    <td style="text-align:center;margin:auto">
                                                        {{$index+1}}
                                                    </td>
                                                    <td style="text-align: left; margin: auto">
                                                        {{newProductCompany.Name}}
                                                    </td>

                                                    <td style="text-align: left; margin: auto">
                                                        {{newProductCompany.Code}}
                                                    </td>

                                                    <td style="text-align: left; margin: auto">
                                                        {{newProductCompany.Address}}
                                                    </td>
                                                    <td style="text-align: left; margin: auto">
                                                        {{newProductCompany.ContactPerson}}
                                                    </td>
                                                    <td style="text-align: left; margin: auto">
                                                        {{newProductCompany.Email}}
                                                    </td>
                                                    <td style="text-align: left; margin: auto">
                                                        {{newProductCompany.Website}}
                                                    </td>
                                                    <td class="project-actions" style="text-align:center">
                                                        <div class="btn-group-sm">
                                                            <a href="#" class="btn btn-sm btn-info" ng-click="getProductCompanyById(newProductCompany)"><i class="fas fa-pencil-alt"></i></a>
                                                            <a href="#" class="btn btn-sm btn-danger" ng-click="deleteProductCompany(newProductCompany,$index)"><i class="fas fa-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <div class="col-md-12">
                                            <dir-pagination-controls pagination-id="ProductCompanyPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                            </dir-pagination-controls>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                    <div class="p-2">
                                        <form>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>Name<span style="color:red">*</span></label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newProductCompany.Name">
                                                    </div>
                                                </div>

                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Code</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newProductCompany.Code">
                                                    </div>
                                                </div>

                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Address</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newProductCompany.Address">
                                                    </div>
                                                </div>

                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Contact Person</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newProductCompany.ContactPerson">
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Contact No.</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newProductCompany.PhoneNo">
                                                    </div>
                                                </div>

                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Email</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newProductCompany.Email">
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="form-group">
                                                        <label>Website</label>
                                                        <input type="text" class="form-control form-control-sm" ng-model="newProductCompany.Website">
                                                    </div>
                                                </div>
                                            </div>

                                        </form>
                                        <footer class="mt-4">
                                            <div class="text-center control-btns">
                                                <button type="button" class="btn btn-sm btn-default" style="min-width:90px" ng-click="ClearProductCompany()">Cancel</button>
                                                <button type="button" class="btn btn-sm btn-success"style="min-width:90px" ng-click="SaveProductCompany()">Save</button>
                                            </div>

                                        </footer>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.container-fluid -->
          
    
            </section>
            </div>
</div>




