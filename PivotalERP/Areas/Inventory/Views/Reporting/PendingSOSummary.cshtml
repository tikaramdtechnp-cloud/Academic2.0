
<script src="~/jslib/inventory/reporting/sales.js?v=20251012"></script>
<style>
    .third-level-scroll-only {
        height: 100px !important;
        overflow: unset;
    }
</style>
<div ng-app="myApp" ng-controller="pendingSOSummaryCtrl" ng-class="{waiting: loadingstatus=='running'}">
    @RenderPage("~/Views/Global/_WaitDialog.cshtml")
    <!-- Main content -->
    <div class="content  third-level-scroll-only">
        <!-- Page Content  -->
        <div class="container-fluid">
            <div class="container-fluid" style="width:100%;">
                <div class="card overflow-hidden">
                    <div class="card-header header-corner-triangle border">
                        <form action="">
                            <div class="row">
                                <div class="col-sm-11">
                                    <label>PENDING SALES ORDER SUMMARY</label>
                                </div>
                                <div class="col-sm-1">
                                    <div class="form-group">
                                        <a href="#" class="btn btn-primary btn-sm" style="float: right; max-width: 100px" data-toggle="tooltip" data-placement="top" title="" data-original-title="Load" ng-click="GetData()" ng-disabled="loadingstatus=='running'"><i class="fas fa-download">Load</i></a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div id="datatable" style="height: calc(100vh - 200px);width: 100%;" class="ag-theme-balham"></div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </div>



    <footer class="main-footer control-btns">

        <div class="row">
            <div class="col-sm-3">
                <div class="form-group row">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label>Find :</label>
                        </div>
                        <input type="text" name="table_search" class="form-control text-dark input-sm" placeholder="Search" ng-model="search" ng-change="onFilterTextBoxChanged()">
                    </div>
                </div>
            </div>
            <div class="col-sm-3">

            </div>
            <div class="col-sm-6 text-right">
                <button type="button" class="btn-secondary btn-sm"><i class="fas fa-print" ng-disabled="loadingstatus=='running'">Print</i></button>
                <button type="button" class="btn-primary btn-sm" ng-click="onBtExport()" ng-disabled="loadingstatus=='running'"><i class="fas fa-file-export">Export</i></button>
            </div>
        </div>
    </footer>

</div>