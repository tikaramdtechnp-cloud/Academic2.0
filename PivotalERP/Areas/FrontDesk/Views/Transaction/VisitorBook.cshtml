                            <thead>
                                <tr>
                                    <th style="width: 200px;">Name</th>
                                    <th style="width: 100px;">Address</th>
                                    <th style="width: 100px;">Purpose</th>
                                    <th style="width: 150px;">Out Time</th>
                                    <th style="width: 150px;">In Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{CurVisitor.OthersName}}</td>
                                    <td>{{CurVisitor.Address}}</td>
                                    <td>{{CurVisitor.Purpose}}</td>
                                    <td>{{CurVisitor.OutTime |timeFormat}}</td>
                                    <td><input type="time" class="form-control form-control-sm" ng-model="CurVisitor.InTime_TMP" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="time-label">
                    <span class="d-block border-0 p-3 text-center">
                        <button type="button" class="btn btn-sm btn-info" ng-click="UpdateInTime()" style="min-width: 90px;">Update InTime</button>
                    </span>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>
