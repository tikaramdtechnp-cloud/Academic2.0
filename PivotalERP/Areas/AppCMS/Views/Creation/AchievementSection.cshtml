<script src="~/jslib/appcms/AchievementSection.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="AchievementSectionController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:52px!important">
                <div class="tab-content">

                    <div class="AchievementSection-section" id="AchievementSection-section">
                        <header class="row">
                            <div class="col-md-7">
                                <div class="clearfix">
                                    <form class="form-inline">

                                        <div class="input-group input-group-sm mr-sm-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text cstm">Show</span>
                                            </div>
                                            <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                            <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.AchievementSection">
                                                <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.AchievementSection">{{pp.text}}</option>
                                            </select>
                                            <div class="input-group-append">
                                                <span class="input-group-text bg-white"><small>entries</small></span>
                                            </div>
                                        </div>
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar" type="search"
                                                   placeholder="Search" aria-label="Search" ng-model="searchData.AchievementSection">
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0" type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end col-md-8 -->
                            <div class="col-md-5 text-right">

                                <div class="dropdown dnld-file" data-toggle="tooltip"
                                     data-placement="top" title="Download File">
                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="dropdownMenuButton">
                                        <span class="dropdown-item">Choose an option:</span>
                                        <a class="dropdown-item" href="#"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                        <a class="dropdown-item" href="#"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>

                                    </div>
                                </div>
                                <a href="#" class="btn btn-secondary btn-light btn-sm" data-toggle="tooltip"
                                   data-placement="bottom" title="Print">
                                    <i class="fas fa-print"></i>
                                </a>

                                <button type="button" class="btn btn-sm btn-success" id="add-AchievementSection" style="min-width: 90px;">
                                    <i class="fas fa-plus w-t"></i> Add AchievementSection
                                </button>

                            </div>
                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                    <thead class=" text-nowrap">
                                        <tr>
                                            <th style="width: 60px;">S.No.</th>
                                            <th style="width: 90px;">Headline</th>
                                            <th style="width: 200px;">Category</th>
                                            <th style="width: 130px;">Achievement Date</th>
                                            <th style="width: 200px;">Tags</th>
                                            <th style="width: 70px;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr dir-paginate="bl in AchievementSectionList | filter:searchData.AchievementSection | itemsPerPage: perPage.AchievementSection" current-page="currentPages.AchievementSection" pagination-id="AchievementSectionPagination">
                                            <td>{{$index+1}}</td>
                                            <td>{{bl.Headline}}</td>
                                            <td>{{bl.Category}}</td>
                                            <td>{{bl.AchievementDateBS}}</td>
                                            <td>{{bl.Tags}}</td>
                                            <td class="">

                                                <a class="p-1" href="#" ng-click="GetAchievementSectionById(bl)">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelAchievementSectionById(bl)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- table end -->
                        </div>
                        <footer class="row align-items-center">
                            <div class="col-md-12">
                                <dir-pagination-controls pagination-id="AchievementSectionPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                </dir-pagination-controls>
                            </div>
                        </footer>
                    </div>

                </div>

                <!-- form area starts -->
                <div id="AchievementSection-form">
                    <div class="card card-default">

                        <div class="card-body px-0 py-2">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="row">
                                        <div class="col-md-8" id="meet-others">
                                            <div class="form-group">
                                                <label for="">Headline</label>
                                                <input type="text"
                                                       class="form-control form-control-sm" ng-model="newAchievementSection.Headline" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Category</label>
                                                <select class="form-control form-control-sm select2" style="width: 100%" ng-model="newAchievementSection.CategoryId">
                                                    <option ng-value="ay.CategoryId" ng-repeat="ay in CategoryList" ng-selected="ay.CategoryId==newAchievementSection.CategoryId">{{ay.Name}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="">Achievement Date</label>
                                                <input type="text" class="form-control form-control-sm" date-picker ng-model="newAchievementSection.AchievementDate_TMP" date-detail="newAchievementSection.AchievementDateDet" style="width:100%" />
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label for="">Tags</label>
                                                <input type="text"
                                                       class="form-control form-control-sm" ng-model="newAchievementSection.Tags" />
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="">Description</label>
                                                <textarea class="textarea"
                                                          style="width: 100%; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" html-editor ng-model="newAchievementSection.Description"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="person-photo-attachment-wrap text-center">
                                        <div class="img-wrap mx-auto">
                                            <img ng-src="{{newAchievementSection.PhotoData || newAchievementSection.Photo}}" class="img-fluid" alt="" id="imgLogo1">
                                        </div>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-outline-secondary btn-sm" data-toggle="modal" data-target="#updateLogo">
                                            <i class="fas fa-camera w-t"></i> Upload Photo
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- timeline time label -->
                        <div class="time-label pb-3">
                            <span class="d-block border-0 p-1 text-center">
                                <button type="button" class="btn btn-sm btn-info" id="back-to-list-AchievementSection" style="min-width: 90px;">Back To List</button>
                                <button type="button"
                                        class="btn btn-sm btn-default"
                                        style="min-width: 90px" ng-click="ClearAchievementSection()">
                                    Reset
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-success"
                                        style="min-width: 90px" ng-click="SaveUpdateAchievementSection()">
                                    {{newAchievementSection.Mode}}
                                </button>
                            </span>
                        </div>
                        <!-- /.timeline-label -->
                    </div>
                    <div class="modal fade" id="updateLogo" tabindex="-1" aria-labelledby="updateLogoLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="updateLogoLabel">Upload Photo</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <i class="flaticon-close"></i>
                                    </button>
                                </div>
                                <div class="modal-body text-center" border-0 pb-0" file-dropzone="[image/png, image/jpeg]"
                                     data-max-file-size="3" ng-model="newAchievementSection.Photo_TMP" @*after-selected="AddAboutUsPhoto()"*@ fileread="newAchievementSection.PhotoData">
                                    <div class="photo-upload-wrap">
                                        <span class="static-content">
                                            <img ng-src="{{newAchievementSection.PhotoData || newAchievementSection.Photo}}" class="img-fluid" id="imgLogo">
                                            <span>Drag & Drop your<br>image here</span>
                                        </span>
                                    </div>
                                    <div class="text-muted pb-3">or</div>
                                    <label for="choose-fileLogo" type="button" class="btn btn-secondary btn-light btn-sm">Upload Image</label>
                                    <input id="choose-fileLogo" type="file" accept=".jpg,.jpeg,.pdf,doc,docx,application/msword,.png" style="display: none;" file-model ng-model="newAchievementSection.Photo_TMP" fileread="newAchievementSection.PhotoData" />
                                    <a ng-click="ClearPhoto()" href="#" class="text-danger d-block mt-3">remove current image</a>
                                </div>
                                <div class="modal-footer justify-content-center">
                                    <button type="button" class="btn btn-dafault" data-dismiss="modal">Ok</button>
                                    @*<button type="button" class="btn btn-secondary px-4" ng-click="AddAboutUsImage()">Save</button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- form area ends -->

            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>
