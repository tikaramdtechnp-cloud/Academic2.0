<script src="~/jslib/Attendance/LeaveQuote.js?v=20251115"></script>

<script src="~/jslib/export/tableExport.js"></script>
<script src="~/jslib/export/jquery.base64.js"></script>

@*<script src="~/jslib/export/html2canvas.js"></script>*@

<script src="~/jslib/export/jspdf/libs/sprintf.js"></script>
<script src="~/jslib/export/jspdf/jspdf.js"></script>
<script src="~/jslib/export/jspdf/libs/base64.js"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="LeaveQuoteController" ng-init="LoadData()">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:50px!important">
                <div class="tab-content" id="LeaveQuote-section">
                    <div class="card py-2">
                        <header class="row">
                            <div class="col-md-7">
                                <div class="clearfix">
                                    <form class="form-inline">
                                        <div class="input-group input-group-sm mr-sm-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text cstm">Show</span>
                                            </div>
                                            <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.LeaveQuote">
                                                <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.LeaveQuote">{{pp.text}}</option>
                                            </select>
                                            <div class="input-group-append">
                                                <span class="input-group-text bg-white"><small>entries</small></span>
                                            </div>
                                        </div>
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar"
                                                   type="search" placeholder="Search" ng-model="searchData.LeaveQuote"
                                                   aria-label="Search">
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0" type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-5 text-right">
                                <div class="dropdown dnld-file ml-2" data-toggle="tooltip"
                                     data-placement="top" title="Download File">
                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="dropdownMenuButton">
                                        <span class="dropdown-item">Choose an option:</span>
                                        <a class="dropdown-item wait" export-excel table-id="'#leaveQuota'" sheet-name="'LeaveQuotaList'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                        <a class="dropdown-item wait" onClick="$('#leaveQuota').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>

                                    </div>
                                </div>
                                <a print-tbl table-id="'#leaveQuota'" href="#" class="btn btn-secondary btn-light btn-sm"
                                   data-toggle="tooltip" data-placement="top" title="Print">
                                    <i class="fas fa-print"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-success" id="add-LeaveQuote"
                                        style="min-width: 90px">
                                    <i class="fas fa-plus w-t"></i> Add LeaveQuote
                                </button>
                            </div>
                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="leaveQuota"
                                       class="main-table table table-sm table-bordered bg-white">
                                    <thead class="text-nowrap">
                                        <tr>
                                            <th style="width: 70px">S.No</th>
                                            <th style="width: 110px">Name</th>
                                            <th style="width: 160px">Period</th>
                                            <th style="width: 90px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr dir-paginate="cl in LeaveQuoteList | filter:searchData.LeaveQuote | itemsPerPage: perPage.LeaveQuote" current-page="currentPages.LeaveQuote" pagination-id="LeaveQuotePagination">
                                            <td>{{$index+1}}</td>
                                            <td>{{cl.Name}}</td>
                                            <td>{{cl.PeriodName}}</td>
                                            <td>
                                                <a class="p-1" href="#" ng-click="GetLeaveQuoteById(cl)" data-toggle="tooltip"
                                                   data-placement="top" title="Edit">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelLeaveQuoteById(cl)" data-toggle="tooltip"
                                                   data-placement="top" title="Delete">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- table end -->
                        </div>
                        <footer class="row align-items-center">
                            <div class="col-md-12">
                                <dir-pagination-controls pagination-id="LeaveQuotePagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)"></dir-pagination-controls>
                            </div>
                        </footer>
                    </div>
                </div>
                <!-- form area starts -->
                <div id="LeaveQuote-form">
                    <div class="card ">
                        <div class="card-body px-0 py-2">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label for="">Name</label>
                                        <input type="text" class="form-control form-control-sm" ng-model="newLeaveQuote.Name">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="">Period</label>
                                        <select class="form-control form-control-sm select2" ng-model="newLeaveQuote.PeriodId">
                                            <option ng-value="fp.PeriodId" ng-repeat="fp in PeriodList" ng-selected="fp.PeriodId==newLeaveQuote.PeriodId">{{fp.Name}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <label><b>Leave:</b></label>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="main-table" class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 130px" ng-repeat="lt in newLeaveQuote.LeaveQuotaDetail">{{lt.Name}}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td ng-repeat="lt in newLeaveQuote.LeaveQuotaDetail"> <input type="number" class="form-control form-control-sm" ng-model="lt.NoOfLeave" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <hr style="height:3px;border-width:0;color:gray;background-color:gray">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">

                                        <label for="Branch"><b>Branch:</b></label>
                                        <div>
                                            <select class="form-control form-control-sm" size="15" style="width:180px;" ng-model="newLeaveQuote.BranchId" multiple ng-options="branch.BranchId as branch.Name for branch in BranchList"> </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="Department"><b>Department:</b></label>
                                        <div>
                                            <select class="form-control form-control-sm" size="15" style="width:180px;" ng-model="newLeaveQuote.DepartmentId" multiple ng-options="dept.DepartmentId as dept.Name for dept in DepartmentList"> </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="Designation"><b>Designation:</b></label>
                                        <div>
                                            <select class="form-control form-control-sm" size="15" style="width:180px;" ng-model="newLeaveQuote.DesignationId" multiple ng-options="deg.DesignationId as deg.Name for deg in DesignationList"> </select>


                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="ServiceType"><b>ServiceType:</b></label>
                                        <div>
                                            <select class="form-control form-control-sm" size="15" style="width:180px;" ng-model="newLeaveQuote.ServiceTypeId" multiple ng-options="ser.ServiceTypeId as ser.Name for ser in ServiceTypeList"> </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="Employee"><b>Employee:</b></label>
                                        <div>
                                            <input type="text" ng-model="searchEmp" class="form-control form-control-sm" placeholder="Search">
                                            <select class="form-control form-control-sm" size="13" ng-model="newLeaveQuote.EmployeeId" multiple ng-options="emp.EmployeeId as emp.CodeName for emp in EmployeeList |filter:searchEmp"> </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="time-label">
                                <span class="d-block border-0 p-3 text-center">
                                    <button type="button" class="btn btn-sm btn-info" id="LeaveQuote-btn"
                                            style="min-width: 90px">
                                        Back to List
                                    </button>
                                    <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearLeaveQuote()">Reset</button>
                                    <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateLeaveQuote()">{{newLeaveQuote.Mode}}</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- form area ends -->
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>