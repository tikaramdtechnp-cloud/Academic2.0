<style>
    .table td {
        padding: 0.25rem;
    }
</style>
<script src="~/jslib/attendance/AllowPayHeading.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="AllowPayHeadingController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here">
                <div class="card p-0" style="margin-top:-15px;">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group d-flex">
                                <label class="mr-2 mt-1">Branch</label>
                                <select class="form-control form-control-sm select2" ng-model="newFilter.BranchId">
                                    <option ng-value="0">**Select All**</option>
                                    <option ng-repeat="B in BranchList" ng-value="B.BranchId" ng-selected="B.BranchId==newFilter.BranchId">{{B.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group d-flex">
                                <label class="mr-2 mt-1">Department</label>
                                <select class="form-control form-control-sm select2" ng-model="newFilter.DepartmentId">
                                    <option ng-value="0">**Select All**</option>
                                    <option ng-value="c.id" ng-repeat="c in DepartmentList" ng-selected="c.id==newFilter.DepartmentId">{{c.text}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group d-flex">
                                <label class="mr-2 mt-1">Category</label>
                                <select class="form-control form-control-sm select2" ng-model="newFilter.CategoryId">
                                    <option ng-value="0">**Select All**</option>
                                    <option ng-value="c.id" ng-repeat="c in CategoryList" ng-selected="c.id==newFilter.CategoryId">{{c.text}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-sm btn-success float-right" ng-click="GetPayHeadingForAllow()"><i class="fas fa-sync-alt mr-1"></i> Load</button>
                        </div>
                    </div>
                    <header class="row">
                        <div class="col-md-7">
                            <div class="clearfix">
                                <form class="form-inline">
                                    <div class="input-group input-group-sm mr-sm-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text cstm">Show</span>
                                        </div>
                                        <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                        <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.AllowPayHeading">
                                            <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.AllowPayHeading">{{pp.text}}</option>
                                        </select>
                                        <div class="input-group-append">
                                            <span class="input-group-text bg-white"><small>entries</small></span>
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm table-search-filed">
                                        <input class="form-control form-control-navbar"
                                               type="search" placeholder="Search"
                                               aria-label="Search" ng-model="searchData.AllowPayHeading">
                                        <div class="input-group-append">
                                            <button class="btn btn-default border-left-0"
                                                    type="submit">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-5 text-right">
                            <div class="dropdown dnld-file" data-toggle="tooltip" data-placement="top" title="Download File">
                                <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-download"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right"
                                     aria-labelledby="dropdownMenuButton">
                                    <span class="dropdown-item">Choose an option:</span>
                                    <a class="dropdown-item wait" export-excel table-id="'#AllowPayheading'" sheet-name="'AllowPayheading'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                    <a class="dropdown-item wait" onClick="$('#AllowPayheading').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>
                                </div>
                            </div>
                            <button class="btn btn-sm btn-success mx-2" ng-click="SaveAllowPayHeading()" style="min-width:70px"> Save</button>
                            <button class="btn btn-sm btn-danger" style="min-width:70px"> Delete</button>
                        </div>
                    </header>
                    <div class="table-scroll-x-y sales-main-table table-scroll" style="max-height: calc(100vh - 11.5rem);">
                        <table id="AllowPayheading"
                               class="main-table table table-sm table-bordered bg-white">
                            <thead>
                                <tr>
                                    <th class="text-center align-middle cstm-sticky" ng-click="sortEmpWise('EmployeeCode')" style="width: 70px; left: 0; z-index: 3; background-color: #fff">Code</th>
                                    <th class="text-center align-middle cstm-sticky" ng-click="sortEmpWise('EnrollNo')" style="width: 80px; left: 70px; z-index: 3; background-color: #fff">Enroll No</th>
                                    <th class="align-middle cstm-sticky" ng-click="sortEmpWise('EmployeeName')" style="width: 180px; left: 150px; z-index: 3; background-color: #fff">Name</th>
                                    <th class="text-center" style="width: 120px;z-index:2" ng-repeat="Ph in PayHeadingList">
                                        <label for="customCheckboxHeader{{$index}}">{{Ph.Name}}</label>
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" type="checkbox"
                                                   id="customCheckboxHeader{{$index}}" ng-model="Ph.IsAllow" ng-change="CheckUnCheckAll(Ph)">
                                            <label for="customCheckboxHeader{{$index}}" class="custom-control-label"></label>
                                        </div>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr dir-paginate="cl in AllowPayHeadingList | filter:searchData.AllowPayHeading |orderBy:sortKeys.EmployeeWise:reverses.EmployeeWise | itemsPerPage: perPage.AllowPayHeading" current-page="currentPages.AllowPayHeading" pagination-id="AllowPayHeadingPagination">
                                    <td class="align-middle text-center cstm-sticky" style="width: 70px; left: 0; z-index: 1; background-color: #fff">{{cl.EmployeeCode}}</td>
                                    <td class="align-middle text-center cstm-sticky" style="width: 80px; left: 70px; z-index: 1; background-color: #fff">{{cl.EnrollNo}}</td>
                                    <td class="align-middle cstm-sticky" style="width: 180px; left: 150px; z-index: 1; background-color: #fff">{{cl.EmployeeName}}</td>
                                    <td class="text-center" ng-repeat="Ph in cl.PayHeadColl">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" type="checkbox" id="customCheckbox{{cl.EmployeeId}}_{{Ph.PayHeadingId}}" value="option11" ng-model="Ph.IsAllow">
                                            <label for="customCheckbox{{cl.EmployeeId}}_{{Ph.PayHeadingId}}" class="custom-control-label">
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <footer class="row align-items-center">
                        <div class="col-md-12">
                            <dir-pagination-controls pagination-id="AllowPayHeadingPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                            </dir-pagination-controls>
                        </div>
                    </footer>
                </div>
            </section>
        </div>
    </section>

</div>