
<script src="~/jslib/payroll/RptSalarySheet.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="RptSalarySheetController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:50px!important">
                <div class="card py-2">
                    <div class="row">
                        <div class="col-sm-2 col-md-2">
                            <div class="form-group">
                                <label>For Year</label>
                                <select class="form-control form-control-sm" ng-model="newPaySlip.YearId">
                                    <option ng-value="A.id" ng-repeat="A in AcademicYearColl" ng-selected="A.id==newPaySlip.YearId">{{A.text}}</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-2 col-md-2">
                            <div class="form-group">
                                <label for="">For Month</label>
                                <select class="form-control form-control-sm select2" ng-model="newPaySlip.MonthId">
                                    <option ng-value="cl.id" ng-repeat="cl in MonthList" ng-selected="cl.id==newPaySlip.MonthId">{{cl.text}}</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Branch</label>
                                <select class="form-control form-control-sm select2" ng-model="newPaySlip.SelectedBranch">
                                    <option ng-value="0">**Select All**</option>
                                    <option ng-repeat="B in BranchList" ng-value="B">{{B.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Department</label>
                                <select class="form-control form-control-sm select2" ng-model="newPaySlip.SelectDepartment">
                                    <option ng-value="0">**Select All**</option>
                                    <option ng-value="c" ng-repeat="c in DepartmentList">{{c.text}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Category</label>
                                <select class="form-control form-control-sm select2" ng-model="newPaySlip.SelectedCategory">
                                    <option ng-value="0">**Select All**</option>
                                    <option ng-value="c" ng-repeat="c in CategoryList">{{c.text}}</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-7 col-lg-7 col-md-7"
                             id="meet-employee">
                            <label for="inlineFormInputGroup">Select Employee</label>
                            <div class="input-group-prepend">
                                <select class="input-group-text dropdown-toggle p-0"
                                        style="outline: none;
                                                                            border-top-right-radius: unset;
                                                                            border-bottom-right-radius: unset;
                                                                            margin-right: -3px;
                                                                            z-index: 1;
                                                                    " ng-model="newPaySlip.SelectEmployee">

                                    <option class="dropdown-item" ng-repeat="ss in EmployeeSearchOptions" ng-value="ss.value" ng-selected="ss.value==newPaySlip.EmployeeSearchBy">
                                        {{ss.text}}
                                    </option>

                                </select>
                                <select class="form-control select2bs4 form-control-sm" all-employee ng-model="newPaySlip.EmployeeId" student-detail="newPaySlip.EmployeeDetails" side-bar-data="newPaySlip.EmpSideBarData" search-by="newPaySlip.EmployeeSearchBy">
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="">Select Report</label>
                                <select name="comment-group" id="" form="" class="form-control form-control-sm select2" ng-change="PrintPaySlip()" ng-model="newPaySlip.RptTranId">
                                    <option ng-value="0" ng-selected="true">Select Report</option>
                                    <option ng-value="rt.RptTranId" ng-repeat="rt in newPaySlip.TemplatesColl">{{rt.ReportName}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="text-right">
                                <button class="btn btn-sm btn-success mt-4" ng-click="PrintPaySlip()"><i class="fas fa-sync-alt mr-2"></i> Load</button>
                            </div>

                        </div>
                    </div>
                    <div class="row mt-2" id="schedule-report-table">
                        <iframe id="frmRptBillPrint" style='width: 100%;height:calc(100vh - 200px);background-color: white;visibility: visible;' frameborder='0' scrolling='yes'></iframe>
                    </div>
                </div>
            </section>
        </div>
    </section>

</div>