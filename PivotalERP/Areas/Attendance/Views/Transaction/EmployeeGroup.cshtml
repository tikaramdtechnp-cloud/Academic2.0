<script src="~/jslib/attendance/EmployeeGroup.js?v=20251115"></script>
<div class="hold-transition  layout-navbar-fixed" ng-app="myApp" ng-controller="EmployeeGroupController" ng-init="LoadData()">
    <section class="content">
        <div class="container-fluid">
            <section class="iframe-content-starts-here" style="padding-top:50px!important">
                <div class="tab-content">
                    <!-- Third Tab Content -->
                    <div id="EmployeeGroup-section" class="card py-2">
                        <header class="row">
                            <div class="col-md-7">
                                <div class="clearfix">
                                    <form class="form-inline">
                                        <div class="input-group input-group-sm mr-sm-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text cstm">Show</span>
                                            </div>
                                            <!-- <input type="text" class="form-control border-left-0" placeholder=""> -->
                                            <select class="form-control border-left-0 border-right-0 pr-0" ng-model="perPage.EmployeeGroup">
                                                <option ng-value="pp.value" ng-repeat="pp in perPageColl" ng-selected="pp.value==perPage.EmployeeGroup">{{pp.text}}</option>
                                            </select>
                                            <div class="input-group-append">
                                                <span class="input-group-text bg-white"><small>entries</small></span>
                                            </div>
                                        </div>
                                        <div class="input-group input-group-sm table-search-filed">
                                            <input class="form-control form-control-navbar"
                                                   type="search" placeholder="Search"
                                                   aria-label="Search" ng-model="searchData.EmployeeGroup">
                                            <div class="input-group-append">
                                                <button class="btn btn-default border-left-0"
                                                        type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end col-md-8 -->
                            <div class="col-md-5 text-right">
                                <div class="dropdown dnld-file ml-2" data-toggle="tooltip"
                                     data-placement="top" title="Download File">
                                    <button class="btn btn-secondary btn-light btn-sm dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="dropdownMenuButton">
                                        <span class="dropdown-item">Choose an option:</span>
                                        <a class="dropdown-item wait" export-excel table-id="'#EmployeeGroup'" sheet-name="'EmployeeGroupList'"><img src="~/wwwroot/dynamic/images/flaticons/excel.png" class="img-fluid exports-icon" alt="Excel image"> Excel</a>
                                        <a class="dropdown-item wait" onClick="$('#EmployeeGroup').tableExport({type:'csv',escape:'false'});"><img src="~/wwwroot/dynamic/images/flaticons/csv.png" class="img-fluid exports-icon" alt="Excel image"> CSV</a>

                                    </div>
                                </div>
                                <a print-tbl table-id="'#EmployeeGroup'" href="#" class="btn btn-secondary btn-light btn-sm"
                                   data-toggle="tooltip" data-placement="top" title="Print">
                                    <i class="fas fa-print"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-success"
                                        id="add-EmployeeGroup"
                                        style="min-width: 90px" ng-click="$scope.ClearEmployeeGroup();">
                                    <i class="fas fa-plus w-t"></i> Add EmployeeGroup
                                </button>
                            </div>
                        </header>
                        <div>
                            <div class="table-scroll-x-y sales-main-table table-scroll">
                                <table id="EmployeeGroup"
                                       class="main-table table table-sm table-bordered bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width: 100px">S.No.</th>
                                            <th style="width: 200px">Name</th>
                                            <th style="width: 100px">Alias</th>
                                            <th style="width: 250px">Description</th>
                                            <th style="width: 100px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr dir-paginate="cl in EmployeeGroupList | filter:searchData.EmployeeGroup | itemsPerPage: perPage.EmployeeGroup" current-page="currentPages.EmployeeGroup" pagination-id="EmployeeGroupPagination">
                                            <td>{{$index+1}}</td>
                                            <td>{{cl.Name}}</td>
                                            <td>{{cl.Alias}}</td>
                                            <td>{{cl.Description}}</td>
                                            <td>
                                                <a class="p-1" href="#" ng-click="GetEmployeeGroupById(cl)">
                                                    <i class="fas fa-edit text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" ng-click="DelEmployeeGroupById(cl)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- table end -->
                        </div>
                        <footer class="row align-items-center">
                            <div class="col-md-12">
                                <dir-pagination-controls pagination-id="EmployeeGroupPagination" boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="/Scripts/dirPagination.tpl.html">
                                </dir-pagination-controls>
                            </div>
                        </footer>
                    </div>

                    <div id="EmployeeGroup-form" class="card">
                        <div class="row card-body p-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="">Name</label>
                                    <input type="text"
                                           class="form-control form-control-sm" ng-model="newEmployeeGroup.Name" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Alias</label>
                                    <input type="text"
                                           class="form-control form-control-sm" ng-model="newEmployeeGroup.Alias" />
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Base Group</label>
                                    <select class="form-control form-control-sm select2" ng-model="newEmployeeGroup.BaseGroupId">
                                        <option ng-repeat="A in BaseGroupList" ng-value="A.EmployeeGroupId" ng-selected="newEmployeeGroup.BaseGroupId==A.EmployeeGroupId">{{A.Name}}</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="">Ledger</label>
                                    <select class="form-control form-control-sm select2" style="width: 100%;" all-ledger ng-model="newEmployeeGroup.LedgerId" ledgertype="1"
                                            placeholder="** Select  Ledger **" showdetails="ture" confirm-action="PartySelectionChange(newEmployeeGroup)" ledger-detail="newEmployeeGroup.PartyLedger" side-bar-data="newEmployeeGroup.partySideBarData">
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea class="form-control form-control-sm" ng-model="newEmployeeGroup.Description" rows="1" placeholder=""></textarea>
                                </div>
                            </div>

                        </div>
                        <div class="time-label">
                            <span class="d-block border-0 p-3 text-center">
                                <button type="button"
                                        class="btn btn-sm btn-info"
                                        id="EmployeeGroupback-btn"
                                        style="min-width: 90px">
                                    Back to List
                                </button>
                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearEmployeeGroup()">Reset</button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateEmployeeGroup()">{{newEmployeeGroup.Mode}}</button>
                            </span>

                        </div>
                    </div>
                </div>
            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
</div>