<script src="~/jslib/account/creation/OpenDatedCheque.js?v=20251115"></script>
<div ng-app="myApp" ng-controller="ODCDetails" ng-class="{waiting: loadingstatus=='running'}" ng-cloak>
    <script src="~/jslib/account/creation/ODCDetails.js"></script>
    <div class="pt-1"></div>
    <div class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header header-corner-triangle">
                    <h3 class="card-title">ODC Details</h3>
                </div>
                <div class="card-body px-5 pb-5 pt-4">
                    <form>
                        <div class="row">
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <label>Party</label>
                                    <select class="form-control select2bs4" style="width: 100%;" ng-model="beData.Party">
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Date</label>
                                    <input type="date" class="form-control" ng-model="beData.Date">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Agent</label>
                                    <select class="form-control select2bs4" style="width: 100%;" ng-model="beData.Agent"></select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Bank Name</label>
                                    <input type="text" class="form-control" ng-model="beData.BankName">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Branch Name</label>
                                    <input type="text" class="form-control" ng-model="beData.BranchName">

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>ChequeNo</label>
                                    <input type="text" class="form-control" ng-model="beData.ChequeNo">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Amount</label>
                                    <input type="text" class="form-control" ng-model="beData.Amount">

                                </div>
                            </div>
                            <div class="col-sm-9">
                                <div class="form-group">
                                    <label>Notes</label>
                                    <input type="text" class="form-control" ng-model="beData.Notes">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Attach Doc.</label>
                                    <div class="form-group">
                                        <input type="file" class="form-control-file border p-1" id="exampleFormControlFile1" ng-model="beData.DocumentAttach">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                    <footer class="mt-4">
                        <div class="text-right control-btns">
                            <button type="button" class="btn btn-sm btn-default" ng-click="ClearFields">Cancel</button>
                            @*<button type="button" class="btn btn-secondary">SaveC & Close</button>*@
                            <button type="button" class="btn btn-sm btn-success" ng-click="SaveUpdateODCDetails">Save</button>
                        </div>

                    </footer>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
    </div>
</div>




