                                            <td class="text-center">
                                         
                                                <a class="p-1" href="#" data-original-title="Add Row" ng-click="AddRowInOpening($index)">
                                                    <i class="fas fa-plus text-info"></i>
                                                </a>
                                                <a class="p-1" href="#" data-original-title="Delete Row." ng-click="delRowOpening($index)">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </a>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>

                            </div>
                            <!-- /.card-body -->

                            <div class="clearfix">


                                <div class="row">
                                    <div class="col-md-9"></div>
                                    <div class="col-md-3">
                                        <span class="">Total : {{newBillWiseLedgerOpening.GrandTotal |number:2}}</span> <br>

                                    </div>
                                </div>


                            </div>
                        </div>


                        <div class="time-label">
                            <span class="d-block border-0 mb-3 text-center">

                                <button type="button" class="btn btn-sm btn-default" style="min-width: 90px;" ng-click="ClearBillWiseLedgerOpening()">Reset</button>
                                <button type="button" class="btn btn-sm btn-success" style="min-width: 90px;" ng-click="SaveUpdateBillWiseLedgerOpening()">Save</button>

                            </span>
                        </div>

                    </div>


                    <!-- Table Area Ends -->
                </div>

            </section>
            <!-- /.row -->
        </div>
        <!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>



