@{

    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/jslib/account/creation/NarrationMaster.js?v=20251115"></script>
<div ng-app="mainApp" ng-controller="JournalInvoiceTerm" ng-class="{waiting: loadingstatus=='running'}" ng-init="GetAllProductDivision()">

    <div class="p-4"></div>
    <div class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header header-corner-triangle">
                    <h3 class="card-title">Journal Invoice Term</h3>
                </div>
                <div class="card-body px-5 pb-5 pt-4">
                    <form>
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>S.No.</label>
                                    <input type="text" class="form-control" placeholder="">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Date</label>
                                    <input type="date" class="form-control" ng-model="beData.Date">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Start Date</label>
                                    <input type="date" class="form-control" ng-model="beData.StartDate">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>End Date</label>
                                    <input type="date" class="form-control" ng-model="beData.EndDate">
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Nature</label>
                                    <select class="form-control form-control-sm select2bs4" style="width: 100%;" ng-model="beData.Nature"></select>
                                </div>
                            </div>
                        </div>

                        <div class="table table-sm">
                            <table class="table table-hover border">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width: 10px">SN.</th>


                                        <th scope="col" style="width: 100px">DRCR</th>
                                        <th scope="col">Particulars</th>
                                        <th scope="col" style="width: 100px">Current Balance</th>
                                        <th scope="col" style="width: 100px">Debit Amount</th>
                                        <th scope="col" style="width: 100px">Credit Amount</th>

                                        <th scope="col" style="width: 10px">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row" class="align-middle">1</th>
                                        <td class="align-middle">
                                            <select class="form-control form-control-sm select2bs4" style="width: 100%;"></select>
                                        </td>

                                        <td class="align-middle"> <input type="text" class="form-control form-control-sm" placeholder=""></td>
                                        <td class="align-middle"> <input type="text" class="form-control form-control-sm" placeholder=""></td>

                                        <td class="align-middle"><input type="text" class="form-control form-control-sm" placeholder=""></td>
                                        <td class="align-middle"> <input type="text" class="form-control form-control-sm" placeholder=""></td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="#" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Download doc."><i class="fas fa-plus"></i></a>
                                                @*<a href="#" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="" data-original-title="View doc"><i class="fas fa-eye"></i></a>*@
                                                <a href="#" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete doc."><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="align-middle">2</th>
                                        <td class="align-middle">
                                            <select class="form-control form-control-sm select2bs4" style="width: 100%;"></select>
                                        </td>
                                        <td class="align-middle"> <input type="text" class="form-control form-control-sm" placeholder=""></td>
                                        <td class="align-middle"> <input type="text" class="form-control form-control-sm" placeholder=""></td>

                                        <td class="align-middle"><input type="text" class="form-control form-control-sm" placeholder=""></td>
                                        <td class="align-middle"> <input type="text" class="form-control form-control-sm" placeholder=""></td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="#" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Download doc."><i class="fas fa-plus"></i></a>
                                                @*<a href="#" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="" data-original-title="View doc"><i class="fas fa-eye"></i></a>*@
                                                <a href="#" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete doc."><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Narration Name</label>
                                    <input type="text" class="form-control form-control-sm" ng-model="beData.NarrationName">
                                </div>
                            </div>
                        </div>


                    </form>
                    <footer class="main-footer">
                        <div class="text-right control-btns">
                            <button type="button" class="btn btn-default">Cancel</button>
                            <button type="button" class="btn btn-secondary">Save & Close</button>
                            <button type="button" class="btn btn-primary">Save</button>
                        </div>
                       
                    </footer>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
    </div>
</div>